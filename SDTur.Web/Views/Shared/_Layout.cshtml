<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SD Tur</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SDTur.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-route"></i> SD Tur
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-map"></i> Turlar
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="Tours" asp-action="Index">Turlar</a></li>
                                <li><a class="dropdown-item" asp-controller="TourSchedules" asp-action="Index">Tur Programları</a></li>
                                <li><a class="dropdown-item" asp-controller="ServiceSchedules" asp-action="Index">Servis Programları</a></li>
                                <li><a class="dropdown-item" asp-controller="Tickets" asp-action="Index">Biletler</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown2" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-building"></i> Yönetim
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown2">
                                <li><a class="dropdown-item" asp-controller="Branches" asp-action="Index">Şubeler</a></li>
                                <li><a class="dropdown-item" asp-controller="Employees" asp-action="Index">Çalışanlar</a></li>
                                <li><a class="dropdown-item" asp-controller="Regions" asp-action="Index">Bölgeler</a></li>
                                <li><a class="dropdown-item" asp-controller="Hotels" asp-action="Index">Oteller</a></li>
                                <li><a class="dropdown-item" asp-controller="Buses" asp-action="Index">Otobüsler</a></li>
                                <li><a class="dropdown-item" asp-controller="PassCompanies" asp-action="Index">Pas Şirketleri</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown3" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-chart-line"></i> Finans
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown3">
                                <li><a class="dropdown-item" asp-controller="TourExpenses" asp-action="Index">Tur Giderleri</a></li>
                                <li><a class="dropdown-item" asp-controller="TourIncomes" asp-action="Index">Tur Gelirleri</a></li>
                                <li><a class="dropdown-item" asp-controller="AccountTransactions" asp-action="Index">Hesap İşlemleri</a></li>
                                <li><a class="dropdown-item" asp-controller="ExchangeRates" asp-action="Index">Döviz Kurları</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown4" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-cog"></i> Sistem
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown4">
                                <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Kullanıcılar</a></li>
                                <li><a class="dropdown-item" asp-controller="Nationalities" asp-action="Index">Uyruklar</a></li>
                                <li><a class="dropdown-item" asp-controller="Currencies" asp-action="Index">Para Birimleri</a></li>
                                <li><a class="dropdown-item" asp-controller="Invoices" asp-action="Index">Faturalar</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SD Tur - <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
