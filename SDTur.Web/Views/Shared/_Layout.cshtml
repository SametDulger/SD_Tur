<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SDTur</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="bi bi-airplane-engines me-2"></i>
                <span class="d-none d-sm-inline">SDTur</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-currency-exchange me-1"></i>
                            <span class="d-none d-md-inline">Finansal</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Accounts" asp-action="Index"><i class="bi bi-bank me-2"></i>Hesaplar</a></li>
                            <li><a class="dropdown-item" asp-controller="AccountTransactions" asp-action="Index"><i class="bi bi-arrow-left-right me-2"></i>İşlemler</a></li>
                            <li><a class="dropdown-item" asp-controller="Cash" asp-action="Index"><i class="bi bi-cash-stack me-2"></i>Kasa</a></li>
                            <li><a class="dropdown-item" asp-controller="Invoices" asp-action="Index"><i class="bi bi-receipt me-2"></i>Faturalar</a></li>
                            <li><a class="dropdown-item" asp-controller="ExchangeRates" asp-action="Index"><i class="bi bi-currency-exchange me-2"></i>Döviz Kurları</a></li>
                            <li><a class="dropdown-item" asp-controller="CommissionCalculations" asp-action="Index"><i class="bi bi-percent me-2"></i>Komisyon</a></li>
                            <li><a class="dropdown-item" asp-controller="FinancialReports" asp-action="Index"><i class="bi bi-graph-up me-2"></i>Raporlar</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-building me-1"></i>
                            <span class="d-none d-md-inline">Master</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Branches" asp-action="Index"><i class="bi bi-geo-alt me-2"></i>Şubeler</a></li>
                            <li><a class="dropdown-item" asp-controller="Employees" asp-action="Index"><i class="bi bi-person-badge me-2"></i>Çalışanlar</a></li>
                            <li><a class="dropdown-item" asp-controller="Regions" asp-action="Index"><i class="bi bi-map me-2"></i>Bölgeler</a></li>
                            <li><a class="dropdown-item" asp-controller="Hotels" asp-action="Index"><i class="bi bi-building me-2"></i>Oteller</a></li>
                            <li><a class="dropdown-item" asp-controller="Buses" asp-action="Index"><i class="bi bi-truck me-2"></i>Otobüsler</a></li>
                            <li><a class="dropdown-item" asp-controller="Currencies" asp-action="Index"><i class="bi bi-coin me-2"></i>Para Birimleri</a></li>
                            <li><a class="dropdown-item" asp-controller="Nationalities" asp-action="Index"><i class="bi bi-flag me-2"></i>Uyruklar</a></li>
                            <li><a class="dropdown-item" asp-controller="PassCompanies" asp-action="Index"><i class="bi bi-briefcase me-2"></i>Pas Şirketleri</a></li>
                            <li><a class="dropdown-item" asp-controller="PassAgreements" asp-action="Index"><i class="bi bi-file-text me-2"></i>Pas Anlaşmaları</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-airplane me-1"></i>
                            <span class="d-none d-md-inline">Turlar</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Tours" asp-action="Index"><i class="bi bi-airplane me-2"></i>Turlar</a></li>
                            <li><a class="dropdown-item" asp-controller="TourSchedules" asp-action="Index"><i class="bi bi-calendar-event me-2"></i>Tur Programları</a></li>
                            <li><a class="dropdown-item" asp-controller="ServiceSchedules" asp-action="Index"><i class="bi bi-clock me-2"></i>Servis Programları</a></li>
                            <li><a class="dropdown-item" asp-controller="Tickets" asp-action="Index"><i class="bi bi-ticket-perforated me-2"></i>Biletler</a></li>
                            <li><a class="dropdown-item" asp-controller="TourOperations" asp-action="Index"><i class="bi bi-gear me-2"></i>Tur Operasyonları</a></li>
                            <li><a class="dropdown-item" asp-controller="BusAssignments" asp-action="Index"><i class="bi bi-truck me-2"></i>Otobüs Atamaları</a></li>
                            <li><a class="dropdown-item" asp-controller="CustomerDistributions" asp-action="Index"><i class="bi bi-people me-2"></i>Müşteri Dağılımları</a></li>
                            <li><a class="dropdown-item" asp-controller="TourExpenses" asp-action="Index"><i class="bi bi-cash-coin me-2"></i>Tur Giderleri</a></li>
                            <li><a class="dropdown-item" asp-controller="TourIncomes" asp-action="Index"><i class="bi bi-cash me-2"></i>Tur Gelirleri</a></li>
                            <li><a class="dropdown-item" asp-controller="TourReports" asp-action="Index"><i class="bi bi-graph-up me-2"></i>Tur Raporları</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-gear me-1"></i>
                            <span class="d-none d-md-inline">Sistem</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Users" asp-action="Index"><i class="bi bi-people me-2"></i>Kullanıcılar</a></li>
                            <li><a class="dropdown-item" asp-controller="Reports" asp-action="Index"><i class="bi bi-file-earmark-text me-2"></i>Raporlar</a></li>
                            <li><a class="dropdown-item" asp-controller="SystemLogs" asp-action="Index"><i class="bi bi-journal-text me-2"></i>Sistem Logları</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-1"></i>
                            <span class="d-none d-md-inline">Kullanıcı</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profil</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Ayarlar</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-right me-2"></i>Çıkış</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <main class="container-fluid py-3">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="bi bi-info-circle me-2"></i>@TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="bg-light border-top mt-auto">
        <div class="container-fluid py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-muted mb-0 small">
                        <i class="bi bi-c-circle me-1"></i>2024 SDTur. Tüm hakları saklıdır.
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <p class="text-muted mb-0 small">
                        <i class="bi bi-code-slash me-1"></i>Tur Şirketi Otomasyon Sistemi
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 
