@model SDTur.Web.Models.System.Logs.SystemLogViewModel
@{
    ViewData["Title"] = "Sistem Logu Sil";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-trash text-danger me-2"></i>Sistem Logu Sil
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle text-warning me-2"></i>Silme Onayý
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Dikkat!
                        </h6>
                        <p class="mb-0">Bu sistem logunu silmek istediðinizden emin misiniz? Bu iþlem geri alýnamaz.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-journal-text me-1"></i>Log Seviyesi
                            </label>
                            @{
                                var badgeClass = Model.LogLevel switch
                                {
                                    "Error" => "bg-danger",
                                    "Warning" => "bg-warning",
                                    "Info" => "bg-info",
                                    "Debug" => "bg-secondary",
                                    _ => "bg-primary"
                                };
                            }
                            <div>
                                <span class="badge @badgeClass fs-6">
                                    <i class="bi bi-journal-text me-1"></i>@Model.LogLevel
                                </span>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-gear me-1"></i>Kaynak
                            </label>
                            <div class="h6 mb-0">@Model.Source</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-calendar me-1"></i>Log Tarihi
                            </label>
                            <div class="h6 mb-0">@Model.LogDate.ToString("dd MMMM yyyy")</div>
                            <small class="text-muted">@Model.LogDate.ToString("HH:mm:ss")</small>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-person me-1"></i>Kullanýcý
                            </label>
                            <div class="h6 mb-0">@Model.UserName</div>
                            <small class="text-muted">@Model.UserId</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-message me-1"></i>Mesaj
                            </label>
                            <div class="p-3 bg-light rounded">
                                @Model.Message
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Exception))
                    {
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label fw-semibold text-muted">
                                    <i class="bi bi-exclamation-triangle me-1"></i>Hata Detayý
                                </label>
                                <div class="p-3 bg-danger bg-opacity-10 border border-danger rounded">
                                    <pre class="text-danger mb-0">@Model.Exception</pre>
                                </div>
                            </div>
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Ýptal
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bu kaydý silmek istediðinizden emin misiniz?')">
                                <i class="bi bi-trash me-2"></i>Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Önemli Uyarý
                        </h6>
                        <ul class="mb-0 small">
                            <li>Bu iþlem geri alýnamaz</li>
                            <li>Sistem logu kalýcý olarak silinecektir</li>
                            <li>Güvenlik kayýtlarý etkilenebilir</li>
                            <li>Silme iþlemi öncesi yedek almanýz önerilir</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
