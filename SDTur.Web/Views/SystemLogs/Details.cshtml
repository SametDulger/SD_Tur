@model SDTur.Web.Models.System.Logs.SystemLogViewModel
@{
    ViewData["Title"] = "Sistem Logu Detayı";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-eye text-primary me-2"></i>Sistem Logu Detayı
                </h1>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Log Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-journal-text me-1"></i>Log Seviyesi
                            </label>
                            @{
                                var badgeClass = Model.LogLevel switch
                                {
                                    "Error" => "bg-danger",
                                    "Warning" => "bg-warning",
                                    "Info" => "bg-info",
                                    "Debug" => "bg-secondary",
                                    _ => "bg-primary"
                                };
                            }
                            <div>
                                <span class="badge @badgeClass fs-6">
                                    <i class="bi bi-journal-text me-1"></i>@Model.LogLevel
                                </span>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-gear me-1"></i>Kaynak
                            </label>
                            <div class="h6 mb-0">@Model.Source</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-calendar me-1"></i>Log Tarihi
                            </label>
                            <div class="h6 mb-0">@Model.LogDate.ToString("dd MMMM yyyy")</div>
                            <small class="text-muted">@Model.LogDate.ToString("HH:mm:ss")</small>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-person me-1"></i>Kullanıcı
                            </label>
                            <div class="h6 mb-0">@Model.UserName</div>
                            <small class="text-muted">@Model.UserId</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-message me-1"></i>Mesaj
                            </label>
                            <div class="p-3 bg-light rounded">
                                @Model.Message
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Exception))
                    {
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label fw-semibold text-muted">
                                    <i class="bi bi-exclamation-triangle me-1"></i>Hata Detayı
                                </label>
                                <div class="p-3 bg-danger bg-opacity-10 border border-danger rounded">
                                    <pre class="text-danger mb-0">@Model.Exception</pre>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Sistem Logu Bilgileri
                        </h6>
                        <ul class="mb-0 small">
                            <li>Log seviyesi ve kaynak bilgileri</li>
                            <li>Mesaj ve tarih bilgileri</li>
                            <li>Kullanıcı ve hata detayları</li>
                            <li>Sistem güvenliği için önemli</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
