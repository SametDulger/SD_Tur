@model IEnumerable<SDTur.Web.Models.Tour.Operations.ServiceScheduleViewModel>
@{
    ViewData["Title"] = "Servis Programları";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-calendar-event text-primary me-2"></i>Servis Programları
            </h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni Program
            </a>
        </div>
    </div>
</div>

<!-- İstatistikler -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-calendar-event text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam Program</h6>
                        <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-check-circle text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Tamamlanan</h6>
                        <h3 class="mb-0 fw-bold text-success">@Model.Count(s => s.IsCompleted)</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-clock text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Aktif</h6>
                        <h3 class="mb-0 fw-bold text-warning">@Model.Count(s => s.IsActive && !s.IsCompleted)</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-airplane text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Tur Sayısı</h6>
                        <h3 class="mb-0 fw-bold text-info">@Model.Select(s => s.TourName).Distinct().Count()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Servis Program Listesi -->
<div class="card border-0 shadow-sm">
    <div class="card-header border-0">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ul me-2"></i>Servis Program Listesi
                </h5>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" class="form-control border-start-0" placeholder="Servis programı ara...">
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>
                            <i class="bi bi-airplane me-1"></i>Tur
                        </th>
                        <th>
                            <i class="bi bi-geo-alt me-1"></i>Bölge
                        </th>
                        <th>
                            <i class="bi bi-tag me-1"></i>Servis Tipi
                        </th>
                        <th>
                            <i class="bi bi-calendar me-1"></i>Tarih & Saat
                        </th>
                        <th>
                            <i class="bi bi-geo-alt me-1"></i>Konum
                        </th>
                        <th>
                            <i class="bi bi-check-circle me-1"></i>Durum
                        </th>
                        <th class="text-end">
                            <i class="bi bi-gear me-1"></i>İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                            <i class="bi bi-airplane text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@item.TourName</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.RegionId</span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@item.ServiceType</span>
                                </td>
                                <td>
                                    <div class="h6 mb-0">@item.ServiceDate.ToString("dd MMM yyyy")</div>
                                    <small class="text-muted">@item.ServiceTime</small>
                                </td>
                                <td>
                                    <div class="text-truncate" style="max-width: 150px;" title="@item.Location">
                                        @item.Location
                                    </div>
                                </td>
                                <td>
                                    @if (item.IsCompleted)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Tamamlandı
                                        </span>
                                    }
                                    else if (item.IsActive)
                                    {
                                        <span class="badge bg-warning">
                                            <i class="bi bi-clock me-1"></i>Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle me-1"></i>Pasif
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <div class="text-muted">
                                    <i class="bi bi-inbox display-4 d-block mb-3"></i>
                                    <h5>Henüz servis programı bulunmuyor</h5>
                                    <p class="mb-0">Yeni bir servis programı eklemek için yukarıdaki butonu kullanın.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        <div class="card-footer bg-light">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <small class="text-muted">
                        Toplam <strong>@Model.Count()</strong> servis programı listeleniyor
                    </small>
                </div>
            </div>
        </div>
    }
</div>
