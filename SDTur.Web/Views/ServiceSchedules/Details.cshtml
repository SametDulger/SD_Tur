@model SDTur.Web.Models.Tour.Operations.ServiceScheduleViewModel
@{
    ViewData["Title"] = "Servis Programý Detayý";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-eye text-primary me-2"></i>Servis Programý Detayý
                </h1>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Servis Program Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-airplane me-1"></i>Tur
                            </label>
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                    <i class="bi bi-airplane text-primary"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">@Model.TourName</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-geo-alt me-1"></i>Bölge
                            </label>
                            <div>
                                <span class="badge bg-info fs-6">@Model.RegionId</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-tag me-1"></i>Servis Tipi
                            </label>
                            <div>
                                <span class="badge bg-secondary fs-6">@Model.ServiceType</span>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-calendar me-1"></i>Servis Tarihi
                            </label>
                            <div class="h6 mb-0">@Model.ServiceDate.ToString("dd MMMM yyyy")</div>
                            <small class="text-muted">@Model.ServiceDate.ToString("dddd")</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-clock me-1"></i>Servis Saati
                            </label>
                            <div class="h6 mb-0">@Model.ServiceTime.ToString("HH:mm")</div>
                            <small class="text-muted">24 saat formatýnda</small>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-check-circle me-1"></i>Durum
                            </label>
                            <div>
                                @if (Model.IsCompleted)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="bi bi-check-circle me-1"></i>Tamamlandý
                                    </span>
                                }
                                else if (Model.IsActive)
                                {
                                    <span class="badge bg-warning fs-6">
                                        <i class="bi bi-clock me-1"></i>Aktif
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6">
                                        <i class="bi bi-x-circle me-1"></i>Pasif
                                    </span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-geo-alt me-1"></i>Konum
                            </label>
                            <div class="p-3 bg-light rounded">
                                @Model.Location
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label fw-semibold text-muted">
                                    <i class="bi bi-text-paragraph me-1"></i>Açýklama
                                </label>
                                <div class="p-3 bg-light rounded">
                                    @Model.Description
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Servis Programý
                        </h6>
                        <ul class="mb-0 small">
                            <li>Tur servis program detaylarý</li>
                            <li>Servis tipi ve tarihi bilgileri</li>
                            <li>Konum ve saat bilgileri</li>
                            <li>Tamamlanma durumu takibi</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
