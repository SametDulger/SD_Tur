@model SDTur.Application.DTOs.UpdateServiceScheduleDto

@{
    ViewData["Title"] = "Servis Programı Düzenle";
}

<h1>Servis Programı Düzenle</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="TourId" class="control-label">Tur</label>
                <select asp-for="TourId" class="form-control" asp-items="ViewBag.TourId">
                    <option value="">Tur Seçin</option>
                </select>
                <span asp-validation-for="TourId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="RegionId" class="control-label">Bölge</label>
                <select asp-for="RegionId" class="form-control" asp-items="ViewBag.RegionId">
                    <option value="">Bölge Seçin</option>
                </select>
                <span asp-validation-for="RegionId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ServiceTime" class="control-label">Servis Saati</label>
                <input asp-for="ServiceTime" type="time" class="form-control" />
                <span asp-validation-for="ServiceTime" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Aktif</label>
                </div>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 