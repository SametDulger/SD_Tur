@model SDTur.Web.Models.Tour.Operations.ServiceScheduleEditViewModel
@{
    ViewData["Title"] = "Servis Programý Düzenle";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil text-primary me-2"></i>Servis Programý Düzenle
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Servis Program Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TourId" class="form-label fw-semibold">
                                    <i class="bi bi-airplane me-1"></i>Tur <span class="text-danger">*</span>
                                </label>
                                <select asp-for="TourId" id="tourSelect" class="form-select" required>
                                    <option value="">Tur seçiniz...</option>
                                </select>
                                <span asp-validation-for="TourId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="ServiceType" class="form-label fw-semibold">
                                    <i class="bi bi-tag me-1"></i>Servis Tipi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="ServiceType" class="form-select" required>
                                    <option value="">Servis tipi seçiniz...</option>
                                    <option value="Transfer">Transfer</option>
                                    <option value="Rehberlik">Rehberlik</option>
                                    <option value="Yemek">Yemek</option>
                                    <option value="Konaklama">Konaklama</option>
                                    <option value="Ulaþým">Ulaþým</option>
                                    <option value="Diðer">Diðer</option>
                                </select>
                                <span asp-validation-for="ServiceType" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ServiceDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar me-1"></i>Servis Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ServiceDate" type="date" class="form-control" required />
                                <span asp-validation-for="ServiceDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="ServiceTime" class="form-label fw-semibold">
                                    <i class="bi bi-clock me-1"></i>Servis Saati <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ServiceTime" type="time" class="form-control" required />
                                <span asp-validation-for="ServiceTime" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="Location" class="form-label fw-semibold">
                                    <i class="bi bi-geo-alt me-1"></i>Konum <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Location" class="form-control" placeholder="Servis konumu..." required />
                                <span asp-validation-for="Location" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="Description" class="form-label fw-semibold">
                                    <i class="bi bi-text-paragraph me-1"></i>Açýklama
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Servis programý hakkýnda açýklama..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsCompleted" class="form-check-input" type="checkbox" id="isCompletedSwitch">
                                    <label class="form-check-label fw-semibold" for="isCompletedSwitch">
                                        <i class="bi bi-check-circle me-1"></i>Tamamlandý
                                    </label>
                                </div>
                                <small class="text-muted">Bu servisin tamamlandýðýný iþaretleyin</small>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveSwitch">
                                    <label class="form-check-label fw-semibold" for="isActiveSwitch">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </label>
                                </div>
                                <small class="text-muted">Bu servisin aktif olduðunu iþaretleyin</small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Ýptal
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Servis Programý Düzenleme
                        </h6>
                        <ul class="mb-0 small">
                            <li>Servis program bilgilerini güncelleyin</li>
                            <li>Servis tipini deðiþtirebilirsiniz</li>
                            <li>Tarih, saat ve konum bilgilerini düzenleyin</li>
                            <li>Tamamlanma ve aktiflik durumunu güncelleyin</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load tours dynamically
        async function loadTours() {
            try {
                const response = await fetch('/api/tours');
                const tours = await response.json();
                const tourSelect = document.getElementById('tourSelect');
                
                tours.forEach(tour => {
                    const option = document.createElement('option');
                    option.value = tour.id;
                    option.textContent = tour.name;
                    if (tour.id == @Model.TourId) {
                        option.selected = true;
                    }
                    tourSelect.appendChild(option);
                });
            } catch (error) {
                console.error('Error loading tours:', error);
            }
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            loadTours();
        });
    </script>
}
