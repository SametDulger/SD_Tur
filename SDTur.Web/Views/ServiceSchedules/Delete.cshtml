@model SDTur.Application.DTOs.ServiceScheduleDto

@{
    ViewData["Title"] = "Servis Programı Sil";
}

<h1>Servis Programı Sil</h1>

<h3>Bu servis programını silmek istediğinizden emin misiniz?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tur</dt>
        <dd class="col-sm-10">@Model.TourName</dd>
        
        <dt class="col-sm-2">Bölge</dt>
        <dd class="col-sm-10">@Model.RegionName</dd>
        
        <dt class="col-sm-2">Servis Saati</dt>
        <dd class="col-sm-10">@Model.ServiceTime.ToString(@"hh\:mm")</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-danger">Pasif</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div> 