@model SDTur.Web.Models.Tour.Operations.ServiceScheduleCreateViewModel
@{
    ViewData["Title"] = "Yeni Servis Programı";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-plus-circle text-primary me-2"></i>Yeni Servis Programı
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Servis Program Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="TourId" class="form-label">
                                    <i class="bi bi-airplane me-1"></i>Tur <span class="text-danger">*</span>
                                </label>
                                <select asp-for="TourId" class="form-select" required>
                                    <option value="">Tur seçiniz...</option>
                                    @if (ViewBag.Tours != null)
                                    {
                                        @foreach (var tour in ViewBag.Tours)
                                        {
                                            <option value="@tour.Id">@tour.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="TourId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="ServiceType" class="form-label">
                                    <i class="bi bi-tag me-1"></i>Servis Tipi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="ServiceType" class="form-select" required>
                                    <option value="">Servis tipi seçiniz...</option>
                                    <option value="Transfer">Transfer</option>
                                    <option value="Rehberlik">Rehberlik</option>
                                    <option value="Yemek">Yemek</option>
                                    <option value="Konaklama">Konaklama</option>
                                    <option value="Ulaşım">Ulaşım</option>
                                    <option value="Diğer">Diğer</option>
                                </select>
                                <span asp-validation-for="ServiceType" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ServiceDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>Servis Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ServiceDate" type="date" class="form-control" required />
                                <span asp-validation-for="ServiceDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="ServiceTime" class="form-label">
                                    <i class="bi bi-clock me-1"></i>Servis Saati <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ServiceTime" type="time" class="form-control" required />
                                <span asp-validation-for="ServiceTime" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Location" class="form-label">
                                    <i class="bi bi-geo-alt me-1"></i>Konum <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Location" class="form-control" placeholder="Servis konumu..." required />
                                <span asp-validation-for="Location" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">
                                    <i class="bi bi-text-paragraph me-1"></i>Açıklama
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Servis programı hakkında açıklama..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsCompleted" class="form-check-input" type="checkbox">
                                    <label class="form-check-label">
                                        <i class="bi bi-check-circle me-1"></i>Tamamlandı
                                    </label>
                                </div>
                                <small class="text-muted">Bu servisin tamamlandığını işaretleyin</small>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info shadow-sm">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Servis Programı
                        </h6>
                        <ul class="mb-0 small">
                            <li>Tur servis programlarını planlayın</li>
                            <li>Servis tipini belirleyin</li>
                            <li>Tarih ve saat bilgilerini girin</li>
                            <li>Konum ve açıklama ekleyin</li>
                            <li>Tamamlanma durumunu işaretleyin</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
