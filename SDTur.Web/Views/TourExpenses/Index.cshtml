@model IEnumerable<SDTur.Application.DTOs.TourExpenseDto>

@{
    ViewData["Title"] = "Tur Giderleri";
}

<h1>Tur Giderleri</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Tur Gideri Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tur Programı</th>
            <th>Açıklama</th>
            <th>Tutar</th>
            <th>Para Birimi</th>
            <th>Gider Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TourScheduleInfo</td>
                <td>@item.Description</td>
                <td>@item.Amount.ToString("N2")</td>
                <td>@item.CurrencyCode</td>
                <td>@item.ExpenseDate.ToString("dd.MM.yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table> 