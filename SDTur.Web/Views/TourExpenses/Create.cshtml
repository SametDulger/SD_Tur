@model SDTur.Application.DTOs.CreateTourExpenseDto

@{
    ViewData["Title"] = "Yeni Tur Gideri Ekle";
}

<h1>Yeni Tur Gideri Ekle</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="TourScheduleId" class="control-label">Tur Programı</label>
                <select asp-for="TourScheduleId" class="form-control" asp-items="ViewBag.TourScheduleId">
                    <option value="">Tur Programı Seçin</option>
                </select>
                <span asp-validation-for="TourScheduleId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Tutar</label>
                <input asp-for="Amount" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="CurrencyId" class="control-label">Para Birimi</label>
                <select asp-for="CurrencyId" class="form-control" asp-items="ViewBag.CurrencyId">
                    <option value="">Para Birimi Seçin</option>
                </select>
                <span asp-validation-for="CurrencyId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ExpenseDate" class="control-label">Gider Tarihi</label>
                <input asp-for="ExpenseDate" type="date" class="form-control" />
                <span asp-validation-for="ExpenseDate" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 