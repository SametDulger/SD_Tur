@model SDTur.Application.DTOs.TourExpenseDto

@{
    ViewData["Title"] = "Tur Gideri Sil";
}

<h1>Tur Gideri Sil</h1>

<h3>Bu tur giderini silmek istediğinizden emin misiniz?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tur Programı</dt>
        <dd class="col-sm-10">@Model.TourScheduleInfo</dd>
        
        <dt class="col-sm-2">Açıklama</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        
        <dt class="col-sm-2">Tutar</dt>
        <dd class="col-sm-10">@Model.Amount.ToString("N2") @Model.CurrencyCode</dd>
        
        <dt class="col-sm-2">Gider Tarihi</dt>
        <dd class="col-sm-10">@Model.ExpenseDate.ToString("dd.MM.yyyy")</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div> 