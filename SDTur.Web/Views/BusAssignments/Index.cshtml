@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Otobüs Atamaları";
}

<h1>Otobüs Atamaları</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Atama</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Atama Tarihi</th>
            <th>Durum</th>
            <th>Tur Adı</th>
            <th>Tur Tarihi</th>
            <th>Otobüs Plakası</th>
            <th>Operasyon Sorumlusu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.assignmentDate?.ToString("dd.MM.yyyy")</td>
                <td>@item.status</td>
                <td>@item.tourName</td>
                <td>@item.tourDate?.ToString("dd.MM.yyyy")</td>
                <td>@item.busPlateNumber</td>
                <td>@item.employeeName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table> 