@model dynamic

@{
    ViewData["Title"] = "Otobüs Ataması Düzenle";
}

<h1>Otobüs Ataması Düzenle</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value="@Model.id" />
            
            <div class="form-group">
                <label class="control-label">Tur Programı ID</label>
                <input name="tourScheduleId" value="@Model.tourScheduleId" class="form-control" />
            </div>
            
            <div class="form-group">
                <label class="control-label">Otobüs ID</label>
                <input name="busId" value="@Model.busId" class="form-control" />
            </div>
            
            <div class="form-group">
                <label class="control-label">Operasyon Sorumlusu ID</label>
                <input name="employeeId" value="@Model.employeeId" class="form-control" />
            </div>
            
            <div class="form-group">
                <label class="control-label">Durum</label>
                <select name="status" class="form-control">
                    <option value="Assigned" selected="@(Model.status == "Assigned")">Atandı</option>
                    <option value="Completed" selected="@(Model.status == "Completed")">Tamamlandı</option>
                    <option value="Cancelled" selected="@(Model.status == "Cancelled")">İptal Edildi</option>
                </select>
            </div>
            
            <div class="form-group">
                <label class="control-label">Notlar</label>
                <textarea name="notes" class="form-control">@Model.notes</textarea>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 