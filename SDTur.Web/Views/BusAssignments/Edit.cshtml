@model SDTur.Web.Models.Tour.Operations.BusAssignmentEditViewModel
@{
    ViewData["Title"] = "Otobüs Ataması Düzenle";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil text-primary me-2"></i>Otobüs Ataması Düzenle
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Atama Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="TourScheduleId" class="form-label">
                                    <i class="bi bi-airplane me-1"></i>Tur Programı
                                </label>
                                <select asp-for="TourScheduleId" class="form-select">
                                    <option value="">Tur programı seçiniz...</option>
                                    @if (ViewBag.TourSchedules != null)
                                    {
                                        @foreach (var schedule in ViewBag.TourSchedules)
                                        {
                                            <option value="@schedule.Id" selected="@(Model.TourScheduleId == schedule.Id)">
                                                @schedule.TourName - @schedule.TourDate.ToString("dd.MM.yyyy")
                                            </option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="TourScheduleId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="BusId" class="form-label">
                                    <i class="bi bi-bus-front me-1"></i>Otobüs
                                </label>
                                <select asp-for="BusId" class="form-select">
                                    <option value="">Otobüs seçiniz...</option>
                                    @if (ViewBag.Buses != null)
                                    {
                                        @foreach (var bus in ViewBag.Buses)
                                        {
                                            <option value="@bus.Id" selected="@(Model.BusId == bus.Id)">
                                                @bus.PlateNumber - @bus.Capacity Kişilik
                                            </option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="BusId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="EmployeeId" class="form-label">
                                    <i class="bi bi-person me-1"></i>Şoför
                                </label>
                                <select asp-for="EmployeeId" class="form-select">
                                    <option value="">Şoför seçiniz...</option>
                                    @if (ViewBag.Employees != null)
                                    {
                                        @foreach (var employee in ViewBag.Employees)
                                        {
                                            <option value="@employee.Id" selected="@(Model.EmployeeId == employee.Id)">
                                                @employee.FirstName @employee.LastName
                                            </option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="AssignmentDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>Atama Tarihi
                                </label>
                                <input asp-for="AssignmentDate" class="form-control" type="date">
                                <span asp-validation-for="AssignmentDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label">
                                    <i class="bi bi-flag me-1"></i>Durum
                                </label>
                                <select asp-for="Status" class="form-select">
                                    <option value="">Durum seçiniz...</option>
                                    <option value="Atandı">Atandı</option>
                                    <option value="Tamamlandı">Tamamlandı</option>
                                    <option value="İptal">İptal</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">
                                <i class="bi bi-text-paragraph me-1"></i>Notlar
                            </label>
                            <textarea asp-for="Notes" class="form-control" rows="3" 
                                      placeholder="Atama ile ilgili notlar giriniz..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info shadow-sm">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Önemli Notlar
                        </h6>
                        <ul class="mb-0 small">
                            <li>Tüm alanlar doğru şekilde doldurulmalıdır</li>
                            <li>Tur programı seçimi zorunludur</li>
                            <li>Otobüs seçimi zorunludur</li>
                            <li>Şoför seçimi zorunludur</li>
                            <li>Atama tarihi gelecek bir tarih olmalıdır</li>
                            <li>Durum belirtilmelidir</li>
                            <li>Notlar alanı opsiyoneldir</li>
                            <li>Değişiklikler anında kaydedilir</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
