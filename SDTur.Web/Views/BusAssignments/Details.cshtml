@model dynamic

@{
    ViewData["Title"] = "Otobüs Atama Detayı";
}

<h1>Otobüs Atama Detayı</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.id</dd>
        
        <dt class="col-sm-2">Atama Tarihi</dt>
        <dd class="col-sm-10">@Model.assignmentDate?.ToString("dd.MM.yyyy")</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">@Model.status</dd>
        
        <dt class="col-sm-2">Tur Adı</dt>
        <dd class="col-sm-10">@Model.tourName</dd>
        
        <dt class="col-sm-2">Tur Tarihi</dt>
        <dd class="col-sm-10">@Model.tourDate?.ToString("dd.MM.yyyy")</dd>
        
        <dt class="col-sm-2">Otobüs Plakası</dt>
        <dd class="col-sm-10">@Model.busPlateNumber</dd>
        
        <dt class="col-sm-2">Otobüs Modeli</dt>
        <dd class="col-sm-10">@Model.busModel</dd>
        
        <dt class="col-sm-2">Otobüs Kapasitesi</dt>
        <dd class="col-sm-10">@Model.busCapacity</dd>
        
        <dt class="col-sm-2">Operasyon Sorumlusu</dt>
        <dd class="col-sm-10">@Model.employeeName</dd>
        
        <dt class="col-sm-2">Notlar</dt>
        <dd class="col-sm-10">@Model.notes</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div> 