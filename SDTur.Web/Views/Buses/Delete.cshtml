@model SDTur.Web.Models.Master.Transport.BusViewModel
@{
    ViewData["Title"] = "Otobüs Sil";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-trash text-danger me-2"></i>Otobüs Sil
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle text-warning me-2"></i>Silme Onayı
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Dikkat!
                        </h6>
                        <p class="mb-0">Bu otobüsü silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-hash me-1"></i>Plaka
                            </label>
                            <div class="h5 mb-0 text-primary">@Model.PlateNumber</div>
                            <small class="text-muted">@Model.Year Model</small>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-car-front me-1"></i>Marka/Model
                            </label>
                            <div class="h6 mb-0">@Model.Brand</div>
                            <small class="text-muted">@Model.Model</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-people me-1"></i>Kapasite
                            </label>
                            <div>
                                <span class="badge bg-info fs-6">
                                    <i class="bi bi-people me-1"></i>@Model.Capacity Kişi
                                </span>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-tools me-1"></i>Son Bakım
                            </label>
                            <div class="h6 mb-0">@Model.LastMaintenance.ToString("dd MMMM yyyy")</div>
                            <small class="text-muted">@Model.LastMaintenance.ToString("dddd")</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-person me-1"></i>Sürücü
                            </label>
                            <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 rounded-circle p-2 me-2">
                                    <i class="bi bi-person text-success"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">@Model.DriverName</div>
                                    <small class="text-muted">@Model.DriverPhone</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-toggle-on me-1"></i>Durum
                            </label>
                            <div>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6">
                                        <i class="bi bi-toggle-off me-1"></i>Pasif
                                    </span>
                                }
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-text-paragraph me-1"></i>Notlar
                            </label>
                            <div class="form-control-plaintext">@Model.Notes</div>
                        </div>
                    }

                    @if (Model.HasActiveTours)
                    {
                        <div class="alert alert-danger mt-3">
                            <h6 class="alert-heading">
                                <i class="bi bi-exclamation-triangle me-2"></i>Aktif Turlar Mevcut
                            </h6>
                            <p class="mb-0">
                                Bu otobüse ait aktif turlar bulunmaktadır. Otobüsü silmeden önce tüm turları tamamlamanız veya iptal etmeniz önerilir.
                            </p>
                        </div>
                    }

                    <hr class="my-4">
                    
                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                            <label class="form-check-label" for="confirmDelete">
                                Otobüsün silineceğini ve bu işlemin geri alınamayacağını anlıyorum
                            </label>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmDataLoss" required>
                            <label class="form-check-label" for="confirmDataLoss">
                                Otobüse ait tüm verilerin kalıcı olarak silineceğini kabul ediyorum
                            </label>
                        </div>
                        
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                                <i class="bi bi-trash me-2"></i>Otobüsü Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
