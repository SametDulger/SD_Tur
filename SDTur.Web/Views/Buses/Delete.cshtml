@model SDTur.Application.DTOs.BusDto

@{
    ViewData["Title"] = "Otobüs Sil";
}

<h1>Otobüs Sil</h1>

<h3>Bu otobüsü silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Otobüs Detayları</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Plaka</dt>
        <dd class="col-sm-10">@Model.PlateNumber</dd>
        
        <dt class="col-sm-2">Marka</dt>
        <dd class="col-sm-10">@Model.Brand</dd>
        
        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>
        
        <dt class="col-sm-2">Kapasite</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">@(Model.IsActive ? "Aktif" : "Pasif")</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Dön</a>
    </form>
</div> 