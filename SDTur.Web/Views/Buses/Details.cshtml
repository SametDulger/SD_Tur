@model SDTur.Web.Models.Master.Transport.BusViewModel
@{
    ViewData["Title"] = "Otobüs Detayı";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-eye text-primary me-2"></i>Otobüs Detayı
                </h1>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Otobüs Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-hash me-1"></i>Plaka
                            </label>
                            <div class="h5 mb-0 text-primary">@Model.PlateNumber</div>
                            <small class="text-muted">@Model.Year Model</small>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-car-front me-1"></i>Marka/Model
                            </label>
                            <div class="h6 mb-0">@Model.Brand</div>
                            <small class="text-muted">@Model.Model</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-people me-1"></i>Kapasite
                            </label>
                            <div>
                                <span class="badge bg-info fs-6">
                                    <i class="bi bi-people me-1"></i>@Model.Capacity Kişi
                                </span>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-tools me-1"></i>Son Bakım
                            </label>
                            <div class="h6 mb-0">@Model.LastMaintenance.ToString("dd MMMM yyyy")</div>
                            <small class="text-muted">@Model.LastMaintenance.ToString("dddd")</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-person me-1"></i>Sürücü
                            </label>
                            <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 rounded-circle p-2 me-2">
                                    <i class="bi bi-person text-success"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">@Model.DriverName</div>
                                    <small class="text-muted">@Model.DriverPhone</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-toggle-on me-1"></i>Durum
                            </label>
                            <div>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6">
                                        <i class="bi bi-toggle-off me-1"></i>Pasif
                                    </span>
                                }
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-text-paragraph me-1"></i>Notlar
                            </label>
                            <div class="form-control-plaintext">@Model.Notes</div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-calendar me-1"></i>Oluşturulma Tarihi
                            </label>
                            <div class="h6 mb-0">@Model.CreatedDate.ToString("dd MMMM yyyy")</div>
                            <small class="text-muted">@Model.CreatedDate.ToString("dddd")</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-graph-up text-success me-2"></i>İstatistikler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                        <i class="bi bi-calendar-event text-primary"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="card-title text-muted mb-1">Toplam Tur</h6>
                                    <h4 class="mb-0 fw-bold">@Model.TotalTours</h4>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                        <i class="bi bi-people text-success"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="card-title text-muted mb-1">Toplam Yolcu</h6>
                                    <h4 class="mb-0 fw-bold text-success">@Model.TotalPassengers</h4>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0">
                                    <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                        <i class="bi bi-currency-dollar text-info"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="card-title text-muted mb-1">Toplam Gelir</h6>
                                    <h4 class="mb-0 fw-bold text-info">@Model.TotalRevenue.ToString("C")</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
