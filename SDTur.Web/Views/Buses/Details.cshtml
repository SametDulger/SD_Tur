@model SDTur.Application.DTOs.BusDto

@{
    ViewData["Title"] = "Otobüs Detayı";
}

<h1>Otobüs Detayı</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Plaka</dt>
        <dd class="col-sm-10">@Model.PlateNumber</dd>
        
        <dt class="col-sm-2">Kapasite</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-danger">Pasif</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div> 