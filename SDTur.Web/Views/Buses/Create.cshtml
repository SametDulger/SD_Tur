@model SDTur.Application.DTOs.CreateBusDto

@{
    ViewData["Title"] = "Yeni Otobüs";
}

<h1>Yeni Otobüs Ekle</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="PlateNumber" class="control-label">Plaka</label>
                <input asp-for="PlateNumber" class="form-control"/>
                <span asp-validation-for="PlateNumber" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Model" class="control-label">Model</label>
                <input asp-for="Model" class="form-control"/>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Capacity" class="control-label">Kapasite</label>
                <input asp-for="Capacity" type="number" class="form-control"/>
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="DriverName" class="control-label">Şoför Adı</label>
                <input asp-for="DriverName" class="form-control"/>
                <span asp-validation-for="DriverName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="DriverPhone" class="control-label">Şoför Telefonu</label>
                <input asp-for="DriverPhone" class="form-control"/>
                <span asp-validation-for="DriverPhone" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="IsOwned" class="form-check-input" />
                    <label asp-for="IsOwned" class="form-check-label">Kendi Aracımız</label>
                </div>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 