@model SDTur.Application.DTOs.RegionDto

@{
    ViewData["Title"] = "Bölge Detayı";
}

<h1>Bölge Detayı</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Adı</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        
        <dt class="col-sm-2">Sıra</dt>
        <dd class="col-sm-10">@Model.Order</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-danger">Pasif</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div> 