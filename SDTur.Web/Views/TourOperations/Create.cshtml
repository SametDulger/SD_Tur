@model TourOperationCreateViewModel
@{
    ViewData["Title"] = "Yeni Tur Operasyonu";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-plus-circle text-primary me-2"></i>Yeni Tur Operasyonu
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-form me-2"></i>Operasyon Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TourScheduleId" class="form-label fw-semibold">
                                <i class="bi bi-airplane me-1"></i>Tur Programý
                            </label>
                            <select asp-for="TourScheduleId" class="form-select" id="tourScheduleSelect">
                                <option value="">Tur programý seçiniz...</option>
                            </select>
                            <span asp-validation-for="TourScheduleId" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="OperationType" class="form-label fw-semibold">
                                <i class="bi bi-gear me-1"></i>Operasyon Türü
                            </label>
                            <select asp-for="OperationType" class="form-select">
                                <option value="">Operasyon türü seçiniz...</option>
                                <option value="Baþlangýç">Baþlangýç</option>
                                <option value="Bitiþ">Bitiþ</option>
                                <option value="Ýptal">Ýptal</option>
                                <option value="Deðiþiklik">Deðiþiklik</option>
                            </select>
                            <span asp-validation-for="OperationType" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="EmployeeId" class="form-label fw-semibold">
                                <i class="bi bi-person me-1"></i>Çalýþan
                            </label>
                            <select asp-for="EmployeeId" class="form-select" id="employeeSelect">
                                <option value="">Çalýþan seçiniz...</option>
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="OperationDate" class="form-label fw-semibold">
                                <i class="bi bi-calendar me-1"></i>Operasyon Tarihi
                            </label>
                            <input asp-for="OperationDate" class="form-control" type="datetime-local">
                            <span asp-validation-for="OperationDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label fw-semibold">
                                <i class="bi bi-flag me-1"></i>Durum
                            </label>
                            <select asp-for="Status" class="form-select">
                                <option value="">Durum seçiniz...</option>
                                <option value="Beklemede">Beklemede</option>
                                <option value="Devam Ediyor">Devam Ediyor</option>
                                <option value="Tamamlandý">Tamamlandý</option>
                                <option value="Baþarýsýz">Baþarýsýz</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-check-circle me-1"></i>Tamamlanma Durumu
                            </label>
                            <div class="form-check form-switch mt-2">
                                <input asp-for="IsCompleted" class="form-check-input" type="checkbox">
                                <label asp-for="IsCompleted" class="form-check-label">
                                    Operasyon tamamlandý
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label fw-semibold">
                            <i class="bi bi-text-paragraph me-1"></i>Notlar
                        </label>
                        <textarea asp-for="Notes" class="form-control" rows="3" 
                                  placeholder="Operasyon ile ilgili notlar giriniz..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>Ýptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Bilgi
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6 class="alert-heading">
                        <i class="bi bi-lightbulb me-2"></i>Önemli Notlar
                    </h6>
                    <ul class="mb-0 small">
                        <li>Tüm alanlar doðru þekilde doldurulmalýdýr</li>
                        <li>Operasyon tarihi gelecek bir tarih olmalýdýr</li>
                        <li>Çalýþan ve tur programý seçimi zorunludur</li>
                        <li>Operasyon türü ve durum belirtilmelidir</li>
                        <li>Notlar alaný opsiyoneldir</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load tour schedules and employees dynamically
        document.addEventListener('DOMContentLoaded', function() {
            loadTourSchedules();
            loadEmployees();
        });

        async function loadTourSchedules() {
            try {
                const response = await fetch('/api/tourschedules');
                const tourSchedules = await response.json();
                const select = document.getElementById('tourScheduleSelect');
                
                tourSchedules.forEach(schedule => {
                    const option = document.createElement('option');
                    option.value = schedule.id;
                    option.textContent = schedule.name;
                    select.appendChild(option);
                });
            } catch (error) {
                console.error('Tur programlarý yüklenirken hata oluþtu:', error);
            }
        }

        async function loadEmployees() {
            try {
                const response = await fetch('/api/employees');
                const employees = await response.json();
                const select = document.getElementById('employeeSelect');
                
                employees.forEach(employee => {
                    const option = document.createElement('option');
                    option.value = employee.id;
                    option.textContent = employee.name;
                    select.appendChild(option);
                });
            } catch (error) {
                console.error('Çalýþanlar yüklenirken hata oluþtu:', error);
            }
        }
    </script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
