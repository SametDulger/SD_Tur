@model IEnumerable<SDTur.Web.Models.Tour.Core.TourOperationViewModel>
@{
    ViewData["Title"] = "Tur Operasyonları";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-gear text-primary me-2"></i>Tur Operasyonları
            </h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni Operasyon
            </a>
        </div>
    </div>
</div>

<!-- İstatistikler -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-gear text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam Operasyon</h6>
                        <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-check-circle text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Tamamlanan</h6>
                        <h3 class="mb-0 fw-bold text-success">@Model.Count(x => x.IsCompleted)</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-clock text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Devam Eden</h6>
                        <h3 class="mb-0 fw-bold text-warning">@Model.Count(x => !x.IsCompleted)</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-currency-dollar text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam Maliyet</h6>
                        <h3 class="mb-0 fw-bold text-info">₺@Model.Sum(x => x.Cost).ToString("N2")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Operasyon Listesi -->
<div class="card border-0 shadow-sm">
    <div class="card-header border-0">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ul me-2"></i>Operasyon Listesi
                </h5>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end gap-2">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="Operasyon ara...">
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-download me-1"></i>Dışa Aktar
                        </button>
                        <ul class="dropdown-menu shadow border-0">
                            <li><a class="dropdown-item" href="@Url.Action("ExportToExcel")">
                                <i class="bi bi-file-earmark-excel me-2"></i>Excel
                            </a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ExportToPDF")">
                                <i class="bi bi-file-earmark-pdf me-2"></i>PDF
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Operasyon No</th>
                        <th>Tur</th>
                        <th>Operasyon Türü</th>
                        <th>Açıklama</th>
                        <th>Maliyet</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var operation in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-semibold">@operation.OperationNumber</span>
                                </td>
                                <td>@operation.TourName</td>
                                <td>
                                    @{
                                        var operationTypeText = operation.OperationType switch
                                        {
                                            "Transportation" => "Ulaşım",
                                            "Accommodation" => "Konaklama",
                                            "Guide" => "Rehberlik",
                                            "Meal" => "Yemek",
                                            "Activity" => "Aktivite",
                                            _ => operation.OperationType
                                        };
                                    }
                                    <span class="badge bg-secondary">@operationTypeText</span>
                                </td>
                                <td>@operation.Description</td>
                                <td>
                                    <span class="fw-semibold text-primary">₺@operation.Cost.ToString("N2")</span>
                                </td>
                                <td>
                                    @if (operation.IsCompleted)
                                    {
                                        <span class="badge bg-success">Tamamlandı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Devam Ediyor</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@operation.Id" class="btn btn-outline-info" title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@operation.Id" class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@operation.Id" class="btn btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <i class="bi bi-inbox text-muted fs-1"></i>
                                <p class="text-muted mt-2">Operasyon bulunamadı</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-light">
        <div class="row align-items-center">
            <div class="col-md-6">
                <small class="text-muted">
                    Toplam <strong>@Model.Count()</strong> operasyon bulundu
                </small>
            </div>
            <div class="col-md-6 text-end">
                <small class="text-muted">
                    Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Operasyon Dağılımı -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header border-0">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pie-chart text-success me-2"></i>Operasyon Dağılımı
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @foreach (var operationType in Model.GroupBy(x => x.OperationType).Take(4))
                    {
                        var operationTypeText = operationType.Key switch
                        {
                            "Transportation" => "Ulaşım",
                            "Accommodation" => "Konaklama",
                            "Guide" => "Rehberlik",
                            "Meal" => "Yemek",
                            "Activity" => "Aktivite",
                            _ => operationType.Key
                        };
                        <div class="col-md-3">
                            <div class="text-center">
                                <h6 class="text-muted mb-1">@operationTypeText</h6>
                                <h4 class="text-primary mb-0">@operationType.Count()</h4>
                                <small class="text-muted">operasyon</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
