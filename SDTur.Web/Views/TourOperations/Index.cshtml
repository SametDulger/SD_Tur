@model IEnumerable<SDTur.Web.Models.Tour.Core.TourOperationViewModel>
@{
    ViewData["Title"] = "Tur Operasyonlarý";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-gear text-primary me-2"></i>Tur Operasyonlarý
            </h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni Operasyon
            </a>
        </div>
    </div>
</div>

<!-- Filtreler -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white">
        <h6 class="card-title mb-0">
            <i class="bi bi-funnel text-info me-2"></i>Filtreler
        </h6>
    </div>
    <div class="card-body">
        <form id="filterForm" class="row g-3">
            <div class="col-lg-3 col-md-6">
                <label class="form-label">Tur</label>
                <select class="form-select" id="tourFilter">
                    <option value="">Tüm Turlar</option>
                </select>
            </div>
            <div class="col-lg-3 col-md-6">
                <label class="form-label">Operasyon Türü</label>
                <select class="form-select" id="operationTypeFilter">
                    <option value="">Tüm Türler</option>
                    <option value="Transportation">Ulaþým</option>
                    <option value="Accommodation">Konaklama</option>
                    <option value="Guide">Rehberlik</option>
                    <option value="Meal">Yemek</option>
                    <option value="Activity">Aktivite</option>
                </select>
            </div>
            <div class="col-lg-3 col-md-6">
                <label class="form-label">Durum</label>
                <select class="form-select" id="statusFilter">
                    <option value="">Tüm Durumlar</option>
                    <option value="true">Tamamlandý</option>
                    <option value="false">Devam Ediyor</option>
                </select>
            </div>
            <div class="col-lg-3 col-md-6">
                <label class="form-label">&nbsp;</label>
                <div class="d-grid">
                    <button type="button" class="btn btn-outline-primary" onclick="applyFilters()">
                        <i class="bi bi-search me-2"></i>Filtrele
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Ýstatistikler -->
<div class="row g-4 mb-4" id="statisticsCards">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-gear text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam Operasyon</h6>
                        <h3 class="mb-0 fw-bold" id="totalOperations">0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-check-circle text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Tamamlanan</h6>
                        <h3 class="mb-0 fw-bold text-success" id="completedOperations">0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-clock text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Devam Eden</h6>
                        <h3 class="mb-0 fw-bold text-warning" id="ongoingOperations">0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-currency-dollar text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam Maliyet</h6>
                        <h3 class="mb-0 fw-bold text-info" id="totalCost">?0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Operasyon Listesi -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ul me-2"></i>Operasyon Listesi
                </h5>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end gap-2">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" id="searchInput" placeholder="Operasyon ara..." data-search="tourOperationsTable">
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-download me-1"></i>Dýþa Aktar
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#" onclick="exportToExcel()">
                                <i class="bi bi-file-earmark-excel me-2"></i>Excel
                            </a></li>
                            <li><a class="dropdown-item" href="#" onclick="exportToPDF()">
                                <i class="bi bi-file-earmark-pdf me-2"></i>PDF
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive" id="tourOperationsTable">
            <!-- Dinamik olarak yüklenecek -->
        </div>
    </div>
    <div class="card-footer bg-light">
        <div class="row align-items-center">
            <div class="col-md-6">
                <small class="text-muted">
                    Toplam <strong id="recordCount">0</strong> operasyon bulundu
                </small>
            </div>
            <div class="col-md-6 text-end">
                <nav aria-label="Sayfa navigasyonu">
                    <ul class="pagination pagination-sm mb-0 justify-content-end" id="pagination">
                        <!-- Dinamik olarak oluþturulacak -->
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Operasyon Daðýlýmý -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pie-chart text-success me-2"></i>Operasyon Daðýlýmý
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3" id="operationDistribution">
                    <!-- Dinamik olarak yüklenecek -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentFilters = {};
        
        function applyFilters() {
            currentFilters = {
                tourId: document.getElementById('tourFilter').value,
                operationType: document.getElementById('operationTypeFilter').value,
                isCompleted: document.getElementById('statusFilter').value
            };
            
            // Reload data with filters
            const queryString = new URLSearchParams(currentFilters).toString();
            const endpoint = queryString ? `/api/tour/operations?${queryString}` : '/api/tour/operations';
            
            console.log("Load data handled server-side"););
            updateStatistics();
        }
        
        function updateStatistics() {
            // Load statistics based on current filters
            const queryString = new URLSearchParams(currentFilters).toString();
            const endpoint = queryString ? `/api/tour/operations/statistics?${queryString}` : '/api/tour/operations/statistics';
            
            console.log("API call handled server-side");
                .then(data => {
                    document.getElementById('totalOperations').textContent = data.totalOperations || 0;
                    document.getElementById('completedOperations').textContent = data.completedOperations || 0;
                    document.getElementById('ongoingOperations').textContent = data.ongoingOperations || 0;
                    document.getElementById('totalCost').textContent = app.formatCurrency(data.totalCost || 0);
                    document.getElementById('recordCount').textContent = data.totalOperations || 0;
                })
                .catch(error => {
                    console.error('Statistics loading failed:', error);
                });
        }
        
        function exportToExcel() {
            const queryString = new URLSearchParams(currentFilters).toString();
            const filename = `operasyonlar_${new Date().toISOString().split('T')[0]}`;
            console.log("Export to Excel handled server-side");;
        }
        
        function exportToPDF() {
            const queryString = new URLSearchParams(currentFilters).toString();
            const filename = `operasyonlar_${new Date().toISOString().split('T')[0]}`;
            console.log("Export to PDF handled server-side");;
        }
        
        // Auto-load data and setup
        document.addEventListener('DOMContentLoaded', function() {
            // Load initial data
            updateStatistics();
            
            // Apply initial filters
            applyFilters();
            
            // Setup search functionality
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const table = document.getElementById('tourOperationsTable');
                    const rows = table.querySelectorAll('tbody tr');
                    
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                }, 300));
            }
        });
        
        // Custom render function for operation distribution
        window.renderOperationDistribution = function(data, element) {
            if (!data || !data.length) {
                element.innerHTML = '<div class="text-center py-4 text-muted">Operasyon daðýlýmý bulunamadý</div>';
                return;
            }

            const html = data.map(operation => `
                <div class="col-lg-3 col-md-6">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="bg-${operation.color} bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                                <i class="bi bi-${operation.icon} text-${operation.color} fs-4"></i>
                            </div>
                            <h6 class="fw-bold">${operation.type}</h6>
                            <div class="h4 fw-bold text-${operation.color} mb-2">${operation.count}</div>
                            <div class="row g-2 text-center">
                                <div class="col-6">
                                    <small class="text-muted">Tamamlanan</small>
                                    <div class="fw-semibold text-success">${operation.completed}</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Devam Eden</small>
                                    <div class="fw-semibold text-warning">${operation.ongoing}</div>
                                </div>
                            </div>
                            <div class="mt-2">
                                <div class="progress" style="height: 6px;">
                                    <div class="progress-bar bg-success" style="width: ${operation.completionRate}%"></div>
                                </div>
                                <small class="text-muted">${operation.completionRate}% tamamlandý</small>
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');
            
            element.innerHTML = html;
        };
    </script>
}
