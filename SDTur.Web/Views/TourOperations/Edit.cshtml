@model SDTur.Web.Models.Tour.Core.TourOperationEditViewModel
@{
    ViewData["Title"] = "Tur Operasyonu Düzenle";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-pencil text-primary me-2"></i>Tur Operasyonu Düzenle
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-form me-2"></i>Operasyon Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TourScheduleId" class="form-label fw-semibold">
                                <i class="bi bi-airplane me-1"></i>Tur Programı
                            </label>
                            <select asp-for="TourScheduleId" class="form-select">
                                <option value="">Tur programı seçiniz...</option>
                                @if (ViewBag.TourSchedules != null)
                                {
                                    @foreach (var schedule in ViewBag.TourSchedules)
                                    {
                                        <option value="@schedule.Id" selected="@(Model.TourScheduleId == schedule.Id)">@schedule.Name</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="TourScheduleId" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="OperationType" class="form-label fw-semibold">
                                <i class="bi bi-gear me-1"></i>Operasyon Türü
                            </label>
                            <select asp-for="OperationType" class="form-select">
                                <option value="">Operasyon türü seçiniz...</option>
                                <option value="Başlangıç">Başlangıç</option>
                                <option value="Bitiş">Bitiş</option>
                                <option value="İptal">İptal</option>
                                <option value="Değişiklik">Değişiklik</option>
                            </select>
                            <span asp-validation-for="OperationType" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="EmployeeId" class="form-label fw-semibold">
                                <i class="bi bi-person me-1"></i>Çalışan
                            </label>
                            <select asp-for="EmployeeId" class="form-select">
                                <option value="">Çalışan seçiniz...</option>
                                @if (ViewBag.Employees != null)
                                {
                                    @foreach (var employee in ViewBag.Employees)
                                    {
                                        <option value="@employee.Id" selected="@(Model.EmployeeId == employee.Id)">@employee.Name</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="OperationDate" class="form-label fw-semibold">
                                <i class="bi bi-calendar me-1"></i>Operasyon Tarihi
                            </label>
                            <input asp-for="OperationDate" class="form-control" type="datetime-local">
                            <span asp-validation-for="OperationDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label fw-semibold">
                                <i class="bi bi-flag me-1"></i>Durum
                            </label>
                            <select asp-for="Status" class="form-select">
                                <option value="">Durum seçiniz...</option>
                                <option value="Beklemede">Beklemede</option>
                                <option value="Devam Ediyor">Devam Ediyor</option>
                                <option value="Tamamlandı">Tamamlandı</option>
                                <option value="Başarısız">Başarısız</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-check-circle me-1"></i>Tamamlanma Durumu
                            </label>
                            <div class="form-check form-switch mt-2">
                                <input asp-for="IsCompleted" class="form-check-input" type="checkbox">
                                <label asp-for="IsCompleted" class="form-check-label">
                                    Operasyon tamamlandı
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label fw-semibold">
                            <i class="bi bi-text-paragraph me-1"></i>Notlar
                        </label>
                        <textarea asp-for="Notes" class="form-control" rows="3" 
                                  placeholder="Operasyon ile ilgili notlar giriniz..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Güncelle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Bilgi
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6 class="alert-heading">
                        <i class="bi bi-lightbulb me-2"></i>Önemli Notlar
                    </h6>
                    <ul class="mb-0 small">
                        <li>Tüm alanlar doğru şekilde doldurulmalıdır</li>
                        <li>Operasyon tarihi gelecek bir tarih olmalıdır</li>
                        <li>Çalışan ve tur programı seçimi zorunludur</li>
                        <li>Operasyon türü ve durum belirtilmelidir</li>
                        <li>Notlar alanı opsiyoneldir</li>
                        <li>Değişiklikler anında kaydedilir</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
