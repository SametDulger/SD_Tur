@model TourScheduleViewModel
@{
    ViewData["Title"] = "Tur Programı Detayı";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-eye text-primary me-2"></i>Tur Programı Detayı
            </h1>
            <div class="btn-group" role="group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil me-2"></i>Düzenle
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Program Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-airplane me-1"></i>Tur
                        </label>
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                <i class="bi bi-airplane text-primary"></i>
                            </div>
                            <div>
                                <div class="fw-semibold">@Model.TourName</div>
                                <small class="text-muted">@Model.Description</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-calendar me-1"></i>Tur Tarihi
                        </label>
                        <div class="h6 mb-0">@Model.TourDate.ToString("dd MMMM yyyy")</div>
                        <small class="text-muted">@Model.TourDate.ToString("dddd")</small>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-currency-dollar me-1"></i>Toplam Gelir
                        </label>
                        <div class="h4 fw-bold text-success mb-0">
                            @Model.TotalIncome.ToString("C")
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-cash-stack me-1"></i>Toplam Gider
                        </label>
                        <div class="h4 fw-bold text-danger mb-0">
                            @Model.TotalExpense.ToString("C")
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-graph-up me-1"></i>Net Kar
                        </label>
                        <div class="h4 fw-bold @(Model.NetProfit >= 0 ? "text-success" : "text-danger") mb-0">
                            @Model.NetProfit.ToString("C")
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-check-circle me-1"></i>Tamamlanma Durumu
                        </label>
                        <div>
                            @if (Model.IsCompleted)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle me-1"></i>Tamamlandı
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning fs-6">
                                    <i class="bi bi-clock me-1"></i>Devam Ediyor
                                </span>
                            }
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-x-circle me-1"></i>İptal Durumu
                        </label>
                        <div>
                            @if (Model.IsCancelled)
                            {
                                <span class="badge bg-danger fs-6">
                                    <i class="bi bi-x-circle me-1"></i>İptal Edildi
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle me-1"></i>Aktif
                                </span>
                            }
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-text-paragraph me-1"></i>Notlar
                        </label>
                        <div class="p-3 bg-light rounded">
                            @Model.Notes
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-gear me-2"></i>Sistem Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 mb-2">
                        <label class="form-label fw-semibold text-muted small">Durum</label>
                        <div>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Aktif
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle me-1"></i>Pasif
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-lightning me-2"></i>Hızlı İşlemler
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash me-2"></i>Sil
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-list me-2"></i>Listeye Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 
