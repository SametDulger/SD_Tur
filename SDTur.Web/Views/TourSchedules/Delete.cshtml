@model TourScheduleViewModel
@{
    ViewData["Title"] = "Tur Programı Sil";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-trash text-danger me-2"></i>Tur Programı Sil
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle text-warning me-2"></i>Silme Onayı
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h6 class="alert-heading">
                        <i class="bi bi-exclamation-triangle me-2"></i>Dikkat!
                    </h6>
                    <p class="mb-0">Bu tur programını silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-airplane me-1"></i>Tur
                        </label>
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                <i class="bi bi-airplane text-primary"></i>
                            </div>
                            <div>
                                <div class="fw-semibold">@Model.TourName</div>
                                <small class="text-muted">@Model.Description</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-calendar me-1"></i>Tur Tarihi
                        </label>
                        <div class="h6 mb-0">@Model.TourDate.ToString("dd MMMM yyyy")</div>
                        <small class="text-muted">@Model.TourDate.ToString("dddd")</small>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-currency-dollar me-1"></i>Toplam Gelir
                        </label>
                        <div class="h4 fw-bold text-success mb-0">
                            @Model.TotalIncome.ToString("C")
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-cash-stack me-1"></i>Toplam Gider
                        </label>
                        <div class="h4 fw-bold text-danger mb-0">
                            @Model.TotalExpense.ToString("C")
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-graph-up me-1"></i>Net Kar
                        </label>
                        <div class="h4 fw-bold @(Model.NetProfit >= 0 ? "text-success" : "text-danger") mb-0">
                            @Model.NetProfit.ToString("C")
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-check-circle me-1"></i>Tamamlanma Durumu
                        </label>
                        <div>
                            @if (Model.IsCompleted)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle me-1"></i>Tamamlandı
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning fs-6">
                                    <i class="bi bi-clock me-1"></i>Devam Ediyor
                                </span>
                            }
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-x-circle me-1"></i>İptal Durumu
                        </label>
                        <div>
                            @if (Model.IsCancelled)
                            {
                                <span class="badge bg-danger fs-6">
                                    <i class="bi bi-x-circle me-1"></i>İptal Edildi
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle me-1"></i>Aktif
                                </span>
                            }
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-text-paragraph me-1"></i>Notlar
                        </label>
                        <div class="p-3 bg-light rounded">
                            @Model.Notes
                        </div>
                    </div>
                }

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bu kaydı silmek istediğinizden emin misiniz?')">
                            <i class="bi bi-trash me-2"></i>Sil
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Bilgi
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h6 class="alert-heading">
                        <i class="bi bi-exclamation-triangle me-2"></i>Önemli Uyarı
                    </h6>
                    <ul class="mb-0 small">
                        <li>Bu işlem geri alınamaz</li>
                        <li>Tur programı kalıcı olarak silinecektir</li>
                        <li>İlgili biletler ve finansal kayıtlar etkilenebilir</li>
                        <li>Silme işlemi öncesi yedek almanız önerilir</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> 
