@model IEnumerable<SDTur.Application.DTOs.TourScheduleDto>

@{
    ViewData["Title"] = "Tur Programları";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Tur Programları</h3>
                    <div class="card-tools">
                        <a asp-action="Create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Yeni Program
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tur Adı</th>
                                <th>Tarih</th>
                                <th>Toplam Yolcu</th>
                                <th>Tam Yolcu</th>
                                <th>Yarım Yolcu</th>
                                <th>Misafir</th>
                                <th>Toplam Gelir</th>
                                <th>Toplam Gider</th>
                                <th>Net Kar</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.TourName</td>
                                    <td>@item.TourDate.ToString("dd.MM.yyyy")</td>
                                    <td>@item.TotalPax</td>
                                    <td>@item.FullPax</td>
                                    <td>@item.HalfPax</td>
                                    <td>@item.GuestPax</td>
                                    <td>@item.TotalIncome.ToString("C")</td>
                                    <td>@item.TotalExpense.ToString("C")</td>
                                    <td>@item.NetProfit.ToString("C")</td>
                                    <td>
                                        @if (item.IsCompleted)
                                        {
                                            <span class="badge badge-success">Tamamlandı</span>
                                        }
                                        else if (item.IsCancelled)
                                        {
                                            <span class="badge badge-danger">İptal</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Aktif</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        @if (!item.IsCompleted && !item.IsCancelled)
                                        {
                                            <form asp-action="Complete" asp-route-id="@item.Id" method="post" style="display: inline;">
                                                <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Bu programı tamamlamak istediğinizden emin misiniz?')">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 