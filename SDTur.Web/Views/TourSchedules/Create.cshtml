@model SDTur.Application.DTOs.CreateTourScheduleDto

@{
    ViewData["Title"] = "Tur Programı Oluştur";
}

<h1>Tur Programı Oluştur</h1>

<h4>Yeni Tur Programı</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TourId" class="control-label">Tur</label>
                <select asp-for="TourId" class="form-control" asp-items="ViewBag.Tours">
                    <option value="">Tur Seçiniz</option>
                </select>
                <span asp-validation-for="TourId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureDate" class="control-label">Kalkış Tarihi</label>
                <input asp-for="DepartureDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="DepartureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label">Dönüş Tarihi</label>
                <input asp-for="ReturnDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxCapacity" class="control-label">Maksimum Kapasite</label>
                <input asp-for="MaxCapacity" class="form-control" type="number" />
                <span asp-validation-for="MaxCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentCapacity" class="control-label">Mevcut Kapasite</label>
                <input asp-for="CurrentCapacity" class="form-control" type="number" />
                <span asp-validation-for="CurrentCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Fiyat</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency" class="control-label">Para Birimi</label>
                <select asp-for="Currency" class="form-control">
                    <option value="USD">USD</option>
                    <option value="EUR">EUR</option>
                    <option value="TRY">TRY</option>
                </select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Durum</label>
                <select asp-for="Status" class="form-control">
                    <option value="Scheduled">Planlandı</option>
                    <option value="InProgress">Devam Ediyor</option>
                    <option value="Completed">Tamamlandı</option>
                    <option value="Cancelled">İptal Edildi</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label">Notlar</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 