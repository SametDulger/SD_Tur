@model SDTur.Web.Models.Financial.Reports.FinancialReportEditViewModel
@{
    ViewData["Title"] = "Finansal Rapor Düzenle";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil text-warning me-2"></i>Finansal Rapor Düzenle
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-graph-up me-2"></i>Rapor Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ReportType" class="form-label">
                                    <i class="bi bi-tag me-1"></i>Rapor Türü
                                </label>
                                <select asp-for="ReportType" class="form-select">
                                    <option value="">Rapor türü seçiniz</option>
                                    <option value="Günlük">Günlük</option>
                                    <option value="Haftalık">Haftalık</option>
                                    <option value="Aylık">Aylık</option>
                                    <option value="Yıllık">Yıllık</option>
                                    <option value="Özel">Özel</option>
                                </select>
                                <span asp-validation-for="ReportType" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="ReportDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>Rapor Tarihi
                                </label>
                                <input asp-for="ReportDate" type="datetime-local" class="form-control">
                                <span asp-validation-for="ReportDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label">
                                    <i class="bi bi-calendar-check me-1"></i>Başlangıç Tarihi
                                </label>
                                <input asp-for="StartDate" type="date" class="form-control">
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="EndDate" class="form-label">
                                    <i class="bi bi-calendar-x me-1"></i>Bitiş Tarihi
                                </label>
                                <input asp-for="EndDate" type="date" class="form-control">
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-4">
                                <label asp-for="TotalIncome" class="form-label">
                                    <i class="bi bi-arrow-up-circle text-success me-1"></i>Toplam Gelir
                                </label>
                                <div class="input-group">
                                    <input asp-for="TotalIncome" type="number" step="0.01" class="form-control" placeholder="0.00">
                                    <span class="input-group-text">₺</span>
                                </div>
                                <span asp-validation-for="TotalIncome" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-4">
                                <label asp-for="TotalExpense" class="form-label">
                                    <i class="bi bi-arrow-down-circle text-danger me-1"></i>Toplam Gider
                                </label>
                                <div class="input-group">
                                    <input asp-for="TotalExpense" type="number" step="0.01" class="form-control" placeholder="0.00">
                                    <span class="input-group-text">₺</span>
                                </div>
                                <span asp-validation-for="TotalExpense" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-4">
                                <label asp-for="NetProfit" class="form-label">
                                    <i class="bi bi-calculator me-1"></i>Net Kar
                                </label>
                                <div class="input-group">
                                    <input asp-for="NetProfit" type="number" step="0.01" class="form-control" placeholder="0.00">
                                    <span class="input-group-text">₺</span>
                                </div>
                                <span asp-validation-for="NetProfit" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Currency" class="form-label">
                                    <i class="bi bi-currency-exchange me-1"></i>Para Birimi
                                </label>
                                <select asp-for="Currency" class="form-select">
                                    <option value="">Para birimi seçiniz</option>
                                    <option value="TRY">Türk Lirası (₺)</option>
                                    <option value="USD">Amerikan Doları ($)</option>
                                    <option value="EUR">Euro (€)</option>
                                    <option value="GBP">İngiliz Sterlini (£)</option>
                                </select>
                                <span asp-validation-for="Currency" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label">
                                    <i class="bi bi-info-circle me-1"></i>Durum
                                </label>
                                <select asp-for="Status" class="form-select">
                                    <option value="">Durum seçiniz</option>
                                    <option value="Hazırlanıyor">Hazırlanıyor</option>
                                    <option value="Tamamlandı">Tamamlandı</option>
                                    <option value="İptal">İptal</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-12">
                                <label asp-for="ReportData" class="form-label">
                                    <i class="bi bi-file-text me-1"></i>Rapor Verisi (JSON)
                                </label>
                                <textarea asp-for="ReportData" class="form-control" rows="5" placeholder="Rapor verilerini JSON formatında giriniz"></textarea>
                                <span asp-validation-for="ReportData" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="EmployeeId" class="form-label">
                                    <i class="bi bi-person me-1"></i>Çalışan ID
                                </label>
                                <input asp-for="EmployeeId" type="number" class="form-control" placeholder="Çalışan ID giriniz">
                                <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-check form-switch mt-4">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                    <label asp-for="IsActive" class="form-check-label">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-2"></i>İptal
                                    </a>
                                    <button type="submit" class="btn btn-warning">
                                        <i class="bi bi-check-circle me-2"></i>Güncelle
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Otomatik net kar hesaplama
            $('#TotalIncome, #TotalExpense').on('input', function() {
                var income = parseFloat($('#TotalIncome').val()) || 0;
                var expense = parseFloat($('#TotalExpense').val()) || 0;
                var netProfit = income - expense;
                $('#NetProfit').val(netProfit.toFixed(2));
            });
        });
    </script>
} 
