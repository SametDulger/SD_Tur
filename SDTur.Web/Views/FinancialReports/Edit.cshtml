@model SDTur.Web.Models.Financial.Reports.FinancialReportEditViewModel
@{
    ViewData["Title"] = "Finansal Rapor Düzenle";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil text-primary me-2"></i>Finansal Rapor Düzenle
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Finansal Rapor Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReportType" class="form-label fw-semibold">
                                    <i class="bi bi-file-earmark-text me-1"></i>Rapor Türü <span class="text-danger">*</span>
                                </label>
                                <select asp-for="ReportType" class="form-select" required>
                                    <option value="">Rapor türü seçiniz...</option>
                                                                <option value="Daily" selected="@(Model.ReportType == "Daily")">Günlük</option>
                            <option value="Weekly" selected="@(Model.ReportType == "Weekly")">Haftalık</option>
                            <option value="Monthly" selected="@(Model.ReportType == "Monthly")">Aylık</option>
                            <option value="Yearly" selected="@(Model.ReportType == "Yearly")">Yıllık</option>
                                </select>
                                <span asp-validation-for="ReportType" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReportDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar me-1"></i>Rapor Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ReportDate" type="date" class="form-control" required />
                                <span asp-validation-for="ReportDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar-check me-1"></i>Başlangıç Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="StartDate" type="date" class="form-control" required />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar-x me-1"></i>Bitiş Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="EndDate" type="date" class="form-control" required />
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="TotalIncome" class="form-label fw-semibold">
                                    <i class="bi bi-currency-dollar me-1"></i>Toplam Gelir <span class="text-danger">*</span>
                                </label>
                                <input asp-for="TotalIncome" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="TotalIncome" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label asp-for="TotalExpense" class="form-label fw-semibold">
                                    <i class="bi bi-currency-dollar me-1"></i>Toplam Gider <span class="text-danger">*</span>
                                </label>
                                <input asp-for="TotalExpense" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="TotalExpense" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label asp-for="NetProfit" class="form-label fw-semibold">
                                    <i class="bi bi-calculator me-1"></i>Net Kar <span class="text-danger">*</span>
                                </label>
                                <input asp-for="NetProfit" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="NetProfit" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Currency" class="form-label fw-semibold">
                                    <i class="bi bi-currency-exchange me-1"></i>Para Birimi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Currency" class="form-select" required>
                                    <option value="">Para birimi seçiniz...</option>
                                    @if (ViewBag.Currencies != null)
                                    {
                                        @foreach (var currency in ViewBag.Currencies)
                                        {
                                            <option value="@currency.Code" selected="@(Model.Currency == currency.Code)">@currency.Name (@currency.Code)</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Currency" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label fw-semibold">
                                    <i class="bi bi-check-circle me-1"></i>Durum <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Status" class="form-select" required>
                                    <option value="">Durum seçiniz...</option>
                                                                <option value="Hazırlandı" selected="@(Model.Status == "Hazırlandı")">Hazırlandı</option>
                            <option value="Onaylandı" selected="@(Model.Status == "Onaylandı")">Onaylandı</option>
                            <option value="Tamamlandı" selected="@(Model.Status == "Tamamlandı")">Tamamlandı</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="EmployeeId" class="form-label fw-semibold">
                                    <i class="bi bi-person me-1"></i>Hazırlayan Çalışan
                                </label>
                                <select asp-for="EmployeeId" class="form-select">
                                    <option value="">Çalışan seçiniz...</option>
                                    @if (ViewBag.Employees != null)
                                    {
                                        @foreach (var employee in ViewBag.Employees)
                                        {
                                            <option value="@employee.Id" selected="@(Model.EmployeeId == employee.Id)">@employee.FullName</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveSwitch">
                                    <label class="form-check-label fw-semibold" for="isActiveSwitch">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </label>
                                </div>
                                <small class="text-muted">Bu raporun aktif olduğunu işaretleyin</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReportData" class="form-label fw-semibold">
                                <i class="bi bi-text-paragraph me-1"></i>Rapor Verileri
                            </label>
                            <textarea asp-for="ReportData" class="form-control" rows="5" placeholder="Rapor detayları ve açıklamalar..."></textarea>
                            <span asp-validation-for="ReportData" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle text-info me-2"></i>Bilgi
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-3">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Finansal Rapor Düzenleme
                        </h6>
                        <p class="mb-0 small">
                            Finansal rapor bilgilerini güncelleyebilirsiniz. Tarih aralığı ve tutar değişiklikleri 
                            finansal hesaplamaları etkileyebilir.
                        </p>
                    </div>
                    
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Önemli Notlar
                        </h6>
                        <ul class="mb-0 small">
                            <li>Rapor türü ve tarihler zorunludur</li>
                            <li>Gelir ve gider tutarları pozitif olmalıdır</li>
                            <li>Net kar = Toplam Gelir - Toplam Gider</li>
                            <li>Değişiklikler geri alınamaz</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 

