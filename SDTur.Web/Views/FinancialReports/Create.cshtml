@model SDTur.Web.Models.Financial.Reports.FinancialReportCreateViewModel
@{
    ViewData["Title"] = "Yeni Finansal Rapor";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-plus-circle text-primary me-2"></i>Yeni Finansal Rapor
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Finansal Rapor Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ReportType" class="form-label">
                                    <i class="bi bi-file-earmark-text me-1"></i>Rapor Türü <span class="text-danger">*</span>
                                </label>
                                <select asp-for="ReportType" class="form-select" required>
                                    <option value="">Rapor türü seçiniz...</option>
                                    <option value="Daily">Günlük</option>
                                    <option value="Weekly">Haftalık</option>
                                    <option value="Monthly">Aylık</option>
                                    <option value="Yearly">Yıllık</option>
                                </select>
                                <span asp-validation-for="ReportType" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="ReportDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>Rapor Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ReportDate" type="date" class="form-control" required />
                                <span asp-validation-for="ReportDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label">
                                    <i class="bi bi-calendar-check me-1"></i>Başlangıç Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="StartDate" type="date" class="form-control" required />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="EndDate" class="form-label">
                                    <i class="bi bi-calendar-x me-1"></i>Bitiş Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="EndDate" type="date" class="form-control" required />
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="TotalIncome" class="form-label">
                                    <i class="bi bi-currency-dollar me-1"></i>Toplam Gelir <span class="text-danger">*</span>
                                </label>
                                <input asp-for="TotalIncome" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="TotalIncome" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-4">
                                <label asp-for="TotalExpense" class="form-label">
                                    <i class="bi bi-currency-dollar me-1"></i>Toplam Gider <span class="text-danger">*</span>
                                </label>
                                <input asp-for="TotalExpense" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="TotalExpense" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-4">
                                <label asp-for="NetProfit" class="form-label">
                                    <i class="bi bi-calculator me-1"></i>Net Kar <span class="text-danger">*</span>
                                </label>
                                <input asp-for="NetProfit" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="NetProfit" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Currency" class="form-label">
                                    <i class="bi bi-currency-exchange me-1"></i>Para Birimi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Currency" class="form-select" required>
                                    <option value="">Para birimi seçiniz...</option>
                                    @if (ViewBag.Currencies != null)
                                    {
                                        @foreach (var currency in ViewBag.Currencies)
                                        {
                                            <option value="@currency.Code">@currency.Name (@currency.Code)</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Currency" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label">
                                    <i class="bi bi-check-circle me-1"></i>Durum <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Status" class="form-select" required>
                                    <option value="">Durum seçiniz...</option>
                                    <option value="Hazırlandı">Hazırlandı</option>
                                    <option value="Onaylandı">Onaylandı</option>
                                    <option value="Tamamlandı">Tamamlandı</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="EmployeeId" class="form-label">
                                    <i class="bi bi-person me-1"></i>Hazırlayan Çalışan
                                </label>
                                <select asp-for="EmployeeId" class="form-select">
                                    <option value="">Çalışan seçiniz...</option>
                                    @if (ViewBag.Employees != null)
                                    {
                                        @foreach (var employee in ViewBag.Employees)
                                        {
                                            <option value="@employee.Id">@employee.FullName</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReportData" class="form-label">
                                <i class="bi bi-text-paragraph me-1"></i>Rapor Verileri
                            </label>
                            <textarea asp-for="ReportData" class="form-control" rows="5" placeholder="Rapor detayları ve açıklamalar..."></textarea>
                            <span asp-validation-for="ReportData" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle text-info me-2"></i>Bilgi
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info shadow-sm mb-3">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Finansal Rapor
                        </h6>
                        <p class="mb-0 small">
                            Finansal raporlar, belirli bir dönemdeki gelir, gider ve kar durumunu 
                            takip etmek için kullanılır. Tarih aralığı ve tutarlar doğru girilmelidir.
                        </p>
                    </div>
                    
                    <div class="alert alert-warning shadow-sm">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Önemli Notlar
                        </h6>
                        <ul class="mb-0 small">
                            <li>Rapor türü ve tarihler zorunludur</li>
                            <li>Gelir ve gider tutarları pozitif olmalıdır</li>
                            <li>Net kar = Toplam Gelir - Toplam Gider</li>
                            <li>Para birimi seçimi önemlidir</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
