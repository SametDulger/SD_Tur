@model SDTur.Web.Models.Financial.Reports.FinancialReportViewModel
@{
    ViewData["Title"] = "Finansal Rapor Detayları";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-eye text-primary me-2"></i>Finansal Rapor Detayları
                </h1>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Rapor Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Rapor Türü</label>
                            <div class="form-control-plaintext">
                                <span class="badge bg-primary">@Model.ReportType</span>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Rapor Tarihi</label>
                            <div class="form-control-plaintext">@Model.ReportDate.ToString("dd.MM.yyyy")</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Başlangıç Tarihi</label>
                            <div class="form-control-plaintext">@Model.StartDate.ToString("dd.MM.yyyy")</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Bitiş Tarihi</label>
                            <div class="form-control-plaintext">@Model.EndDate.ToString("dd.MM.yyyy")</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-semibold text-muted">Toplam Gelir</label>
                            <div class="form-control-plaintext fw-bold text-success">@Model.TotalIncome.ToString("C")</div>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-semibold text-muted">Toplam Gider</label>
                            <div class="form-control-plaintext fw-bold text-danger">@Model.TotalExpense.ToString("C")</div>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label class="form-label fw-semibold text-muted">Net Kar</label>
                            <div class="form-control-plaintext fw-bold text-info">@Model.NetProfit.ToString("C")</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Para Birimi</label>
                            <div class="form-control-plaintext">@Model.Currency</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Durum</label>
                            <div class="form-control-plaintext">
                                @if (Model.Status == "Hazırlandı")
                                {
                                    <span class="badge bg-primary">Hazırlandı</span>
                                }
                                else if (Model.Status == "Onaylandı")
                                {
                                    <span class="badge bg-success">Onaylandı</span>
                                }
                                else if (Model.Status == "Tamamlandı")
                                {
                                    <span class="badge bg-info">Tamamlandı</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Model.Status</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Hazırlayan Çalışan</label>
                            <div class="form-control-plaintext">@(Model.EmployeeName ?? "Belirtilmemiş")</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Aktiflik Durumu</label>
                            <div class="form-control-plaintext">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ReportData))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">Rapor Verileri</label>
                            <div class="form-control-plaintext">@Model.ReportData</div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Oluşturulma Tarihi</label>
                            <div class="form-control-plaintext">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Güncellenme Tarihi</label>
                            <div class="form-control-plaintext">@(Model.UpdatedDate?.ToString("dd.MM.yyyy HH:mm") ?? "-")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-gear text-info me-2"></i>İşlemler
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-2"></i>Sil
                        </a>
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="bi bi-printer me-2"></i>Yazdır
                        </button>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mt-3">
                <div class="card-header bg-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle text-info me-2"></i>Bilgi
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Finansal Rapor
                        </h6>
                        <p class="mb-0 small">
                            Bu sayfa finansal raporun detaylarını göstermektedir. Rapor bilgilerini 
                            düzenlemek için "Düzenle" butonunu kullanabilirsiniz.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

 
