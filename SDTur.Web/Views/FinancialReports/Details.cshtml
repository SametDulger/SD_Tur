@model SDTur.Web.Models.Financial.Reports.FinancialReportViewModel
@{
    ViewData["Title"] = "Finansal Rapor Detayı";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-graph-up text-primary me-2"></i>Finansal Rapor Detayı
                </h1>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Rapor Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Rapor Türü</label>
                            <div class="p-2 bg-light rounded">
                                <span class="badge bg-primary">@Model.ReportType</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Rapor Tarihi</label>
                            <div class="p-2 bg-light rounded">
                                <i class="bi bi-calendar me-2"></i>@Model.ReportDate.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Başlangıç Tarihi</label>
                            <div class="p-2 bg-light rounded">
                                <i class="bi bi-calendar-check me-2"></i>@Model.StartDate.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Bitiş Tarihi</label>
                            <div class="p-2 bg-light rounded">
                                <i class="bi bi-calendar-x me-2"></i>@Model.EndDate.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Para Birimi</label>
                            <div class="p-2 bg-light rounded">
                                <span class="badge bg-outline-secondary">@Model.Currency</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Durum</label>
                            <div class="p-2 bg-light rounded">
                                @if (Model.Status == "Tamamlandı")
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>@Model.Status
                                    </span>
                                }
                                else if (Model.Status == "Hazırlanıyor")
                                {
                                    <span class="badge bg-warning">
                                        <i class="bi bi-clock me-1"></i>@Model.Status
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle me-1"></i>@Model.Status
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calculator me-2"></i>Finansal Özet
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Toplam Gelir:</span>
                        <span class="fw-bold text-success fs-5">@Model.TotalIncome.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Toplam Gider:</span>
                        <span class="fw-bold text-danger fs-5">@Model.TotalExpense.ToString("C")</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-semibold">Net Kar:</span>
                        <span class="fw-bold @(Model.NetProfit >= 0 ? "text-success" : "text-danger") fs-4">
                            @Model.NetProfit.ToString("C")
                        </span>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ReportData))
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-file-text me-2"></i>Rapor Verisi
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="bg-light p-3 rounded">
                            <pre class="mb-0 small">@Model.ReportData</pre>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div> 
