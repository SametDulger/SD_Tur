@model SDTur.Web.Models.Financial.Reports.FinancialReportViewModel
@{
    ViewData["Title"] = "Finansal Rapor Sil";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-trash text-danger me-2"></i>Finansal Rapor Sil
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Silme Onayı
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Dikkat!</strong> Bu finansal raporu silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Rapor Türü</label>
                            <div class="p-2 bg-light rounded">
                                <span class="badge bg-primary">@Model.ReportType</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Rapor Tarihi</label>
                            <div class="p-2 bg-light rounded">
                                <i class="bi bi-calendar me-2"></i>@Model.ReportDate.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Başlangıç Tarihi</label>
                            <div class="p-2 bg-light rounded">
                                <i class="bi bi-calendar-check me-2"></i>@Model.StartDate.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Bitiş Tarihi</label>
                            <div class="p-2 bg-light rounded">
                                <i class="bi bi-calendar-x me-2"></i>@Model.EndDate.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold text-muted">Toplam Gelir</label>
                            <div class="p-2 bg-light rounded">
                                <span class="fw-bold text-success">@Model.TotalIncome.ToString("C")</span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold text-muted">Toplam Gider</label>
                            <div class="p-2 bg-light rounded">
                                <span class="fw-bold text-danger">@Model.TotalExpense.ToString("C")</span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold text-muted">Net Kar</label>
                            <div class="p-2 bg-light rounded">
                                <span class="fw-bold @(Model.NetProfit >= 0 ? "text-success" : "text-danger")">
                                    @Model.NetProfit.ToString("C")
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Para Birimi</label>
                            <div class="p-2 bg-light rounded">
                                <span class="badge bg-outline-secondary">@Model.Currency</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Durum</label>
                            <div class="p-2 bg-light rounded">
                                @if (Model.Status == "Tamamlandı")
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>@Model.Status
                                    </span>
                                }
                                else if (Model.Status == "Hazırlanıyor")
                                {
                                    <span class="badge bg-warning">
                                        <i class="bi bi-clock me-1"></i>@Model.Status
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle me-1"></i>@Model.Status
                                    </span>
                                }
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 
