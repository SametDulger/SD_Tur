@model SDTur.Web.Models.Financial.Cash.CashEditViewModel
@{
    ViewData["Title"] = "Nakit İşlemi Düzenle";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil text-primary me-2"></i>Nakit İşlemi Düzenle
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Nakit İşlemi Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm" role="alert"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="TransactionType" class="form-label">
                                    <i class="bi bi-arrow-left-right me-1"></i>İşlem Türü <span class="text-danger">*</span>
                                </label>
                                <select asp-for="TransactionType" class="form-select" required>
                                    <option value="">İşlem türü seçiniz...</option>
                                    <option value="Income">Gelir</option>
                                    <option value="Expense">Gider</option>
                                </select>
                                <span asp-validation-for="TransactionType" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Currency" class="form-label">
                                    <i class="bi bi-currency-exchange me-1"></i>Para Birimi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Currency" class="form-select" required>
                                    <option value="">Para birimi seçiniz...</option>
                                    @if (ViewBag.Currencies != null)
                                    {
                                        @foreach (var currency in ViewBag.Currencies)
                                        {
                                            <option value="@currency.Code" selected="@(Model.Currency == currency.Code)">@currency.Name (@currency.Code)</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Currency" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Amount" class="form-label">
                                    <i class="bi bi-currency-exchange me-1"></i>Tutar <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Amount" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="Amount" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TransactionDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>İşlem Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="TransactionDate" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="TransactionDate" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Category" class="form-label">
                                    <i class="bi bi-tags me-1"></i>Kategori
                                </label>
                                <input asp-for="Category" class="form-control" placeholder="Kategori..." />
                                <span asp-validation-for="Category" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EmployeeId" class="form-label">
                                    <i class="bi bi-person me-1"></i>Çalışan
                                </label>
                                <select asp-for="EmployeeId" class="form-select">
                                    <option value="">Çalışan seçiniz...</option>
                                    @if (ViewBag.Employees != null)
                                    {
                                        @foreach (var employee in ViewBag.Employees)
                                        {
                                            <option value="@employee.Id" selected="@(Model.EmployeeId == employee.Id)">@employee.FullName</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="PassCompanyId" class="form-label">
                                    <i class="bi bi-building me-1"></i>Pas Şirketi
                                </label>
                                <select asp-for="PassCompanyId" class="form-select">
                                    <option value="">Pas şirketi seçiniz...</option>
                                    @if (ViewBag.PassCompanies != null)
                                    {
                                        @foreach (var company in ViewBag.PassCompanies)
                                        {
                                            <option value="@company.Id" selected="@(Model.PassCompanyId == company.Id)">@company.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="PassCompanyId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsAutomatic" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" for="IsAutomatic">
                                        <i class="bi bi-robot me-1"></i>Otomatik İşlem
                                    </label>
                                </div>
                                <small class="text-muted">Bu işlemin otomatik oluşturulduğunu işaretleyin</small>
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">
                                    <i class="bi bi-text-paragraph me-1"></i>Açıklama
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="İşlem açıklaması..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>
                        <hr class="my-4">
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle text-info me-2"></i>Bilgi
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info shadow-sm mb-3">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Nakit İşlemi Düzenleme
                        </h6>
                        <p class="mb-0 small">
                            Nakit işlemi bilgilerini güncelleyebilirsiniz. İşlem türü ve tutar değişiklikleri 
                            finansal raporları etkileyebilir.
                        </p>
                    </div>
                    <div class="alert alert-warning shadow-sm">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Önemli Notlar
                        </h6>
                        <ul class="mb-0 small">
                            <li>İşlem türü ve tutar alanları zorunludur</li>
                            <li>Otomatik işlemler sistem tarafından oluşturulur</li>
                            <li>İşlem tarihi geçmiş bir tarih olabilir</li>
                            <li>Değişiklikler geri alınamaz</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
