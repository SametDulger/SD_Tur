@model SDTur.Web.Models.Financial.Cash.CashViewModel
@{
    ViewData["Title"] = "Nakit İşlemi Sil";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-trash text-danger me-2"></i>Nakit İşlemi Sil
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0 text-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>Silme Onayı
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Dikkat!
                        </h6>
                        <p class="mb-0">
                            Bu nakit işlemini silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">İşlem Türü</label>
                            <div class="form-control-plaintext">
                                @if (Model.TransactionType == "Income")
                                {
                                    <span class="badge bg-success">Gelir</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Gider</span>
                                }
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Tutar</label>
                            <div class="form-control-plaintext fw-bold @(Model.TransactionType == "Income" ? "text-success" : "text-danger")">
                                @Model.Amount.ToString("C")
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Para Birimi</label>
                            <div class="form-control-plaintext">@Model.Currency</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">İşlem Tarihi</label>
                            <div class="form-control-plaintext">@Model.TransactionDate.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Kategori</label>
                            <div class="form-control-plaintext">@(string.IsNullOrEmpty(Model.Category) ? "-" : Model.Category)</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Durum</label>
                            <div class="form-control-plaintext">
                                @if (Model.IsAutomatic)
                                {
                                    <span class="badge bg-info">Otomatik</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Manuel</span>
                                }
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">Açıklama</label>
                            <div class="form-control-plaintext">@Model.Description</div>
                        </div>
                    }

                    <hr class="my-4">
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                            <label class="form-check-label" for="confirmDelete">
                                Nakit işleminin silineceğini ve bu işlemin geri alınamayacağını anlıyorum
                            </label>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmDataLoss" required>
                            <label class="form-check-label" for="confirmDataLoss">
                                Nakit işlemine ait tüm verilerin kalıcı olarak silineceğini kabul ediyorum
                            </label>
                        </div>
                        
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                                <i class="bi bi-trash me-2"></i>Nakit İşlemini Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle text-info me-2"></i>Bilgi
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Önemli Uyarı
                        </h6>
                        <ul class="mb-0 small">
                            <li>Bu işlem geri alınamaz</li>
                            <li>Finansal raporlar etkilenebilir</li>
                            <li>İşlem geçmişi kaybolur</li>
                            <li>Silmeden önce yedek alın</li>
                        </ul>
                    </div>
                    
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Alternatif
                        </h6>
                        <p class="mb-0 small">
                            İşlemi silmek yerine pasif hale getirmeyi düşünebilirsiniz. 
                            Bu şekilde veri kaybı yaşamazsınız.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

 
