@model SDTur.Web.Models.Financial.Cash.CashViewModel
@{
    ViewData["Title"] = "Nakit İşlemi Detayları";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-eye text-primary me-2"></i>Nakit İşlemi Detayları
                </h1>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>İşlem Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">İşlem Türü</label>
                            <div class="form-control-plaintext">
                                @if (Model.TransactionType == "Income")
                                {
                                    <span class="badge bg-success">Gelir</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Gider</span>
                                }
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Tutar</label>
                            <div class="form-control-plaintext fw-bold @(Model.TransactionType == "Income" ? "text-success" : "text-danger")">
                                @Model.Amount.ToString("C")
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Para Birimi</label>
                            <div class="form-control-plaintext">@Model.Currency</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">İşlem Tarihi</label>
                            <div class="form-control-plaintext">@Model.TransactionDate.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Kategori</label>
                            <div class="form-control-plaintext">@(string.IsNullOrEmpty(Model.Category) ? "-" : Model.Category)</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Durum</label>
                            <div class="form-control-plaintext">
                                @if (Model.IsAutomatic)
                                {
                                    <span class="badge bg-info">Otomatik</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Manuel</span>
                                }
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">Açıklama</label>
                            <div class="form-control-plaintext">@Model.Description</div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Oluşturulma Tarihi</label>
                            <div class="form-control-plaintext">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Güncellenme Tarihi</label>
                            <div class="form-control-plaintext">@(Model.UpdatedDate?.ToString("dd.MM.yyyy HH:mm") ?? "-")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-gear text-info me-2"></i>İşlemler
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Düzenle
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-2"></i>Sil
                        </a>
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="bi bi-printer me-2"></i>Yazdır
                        </button>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mt-3">
                <div class="card-header bg-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle text-info me-2"></i>Bilgi
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Nakit İşlemi
                        </h6>
                        <p class="mb-0 small">
                            Bu sayfa nakit işleminin detaylarını göstermektedir. İşlem bilgilerini 
                            düzenlemek için "Düzenle" butonunu kullanabilirsiniz.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

 
