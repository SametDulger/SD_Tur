@model SDTur.Web.Models.Tour.Operations.CustomerDistributionCreateViewModel
@{
    ViewData["Title"] = "Yeni Müşteri Dağılımı";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-plus-circle text-primary me-2"></i>Yeni Müşteri Dağılımı
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Müşteri Dağılım Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="TourScheduleId" class="form-label">
                                    <i class="bi bi-airplane me-1"></i>Tur Programı <span class="text-danger">*</span>
                                </label>
                                <select asp-for="TourScheduleId" class="form-select" required>
                                    <option value="">Tur programı seçiniz...</option>
                                    @if (ViewBag.TourSchedules != null)
                                    {
                                        @foreach (var schedule in ViewBag.TourSchedules)
                                        {
                                            <option value="@schedule.Id">@schedule.TourName - @schedule.StartDate.ToString("dd.MM.yyyy")</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="TourScheduleId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="BusId" class="form-label">
                                    <i class="bi bi-truck me-1"></i>Otobüs <span class="text-danger">*</span>
                                </label>
                                <select asp-for="BusId" class="form-select" required>
                                    <option value="">Otobüs seçiniz...</option>
                                    @if (ViewBag.Buses != null)
                                    {
                                        @foreach (var bus in ViewBag.Buses)
                                        {
                                            <option value="@bus.Id">@bus.PlateNumber - @bus.Capacity Kişi</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="BusId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="TicketId" class="form-label">
                                    <i class="bi bi-ticket-perforated me-1"></i>Bilet <span class="text-danger">*</span>
                                </label>
                                <select asp-for="TicketId" class="form-select" required>
                                    <option value="">Bilet seçiniz...</option>
                                    @if (ViewBag.Tickets != null)
                                    {
                                        @foreach (var ticket in ViewBag.Tickets)
                                        {
                                            <option value="@ticket.Id">@ticket.CustomerName - @ticket.TourName</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="TicketId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="EmployeeId" class="form-label">
                                    <i class="bi bi-person-badge me-1"></i>Çalışan
                                </label>
                                <select asp-for="EmployeeId" class="form-select">
                                    <option value="">Çalışan seçiniz...</option>
                                    @if (ViewBag.Employees != null)
                                    {
                                        @foreach (var employee in ViewBag.Employees)
                                        {
                                            <option value="@employee.Id">@employee.FirstName @employee.LastName</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="DistributionDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>Dağılım Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="DistributionDate" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="DistributionDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label">
                                    <i class="bi bi-flag me-1"></i>Durum <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Status" class="form-select" required>
                                    <option value="">Durum seçiniz...</option>
                                    <option value="Planlandı">Planlandı</option>
                                    <option value="Devam Ediyor">Devam Ediyor</option>
                                    <option value="Tamamlandı">Tamamlandı</option>
                                    <option value="İptal Edildi">İptal Edildi</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Notes" class="form-label">
                                    <i class="bi bi-text-paragraph me-1"></i>Notlar
                                </label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Müşteri dağılımı hakkında notlar..."></textarea>
                                <span asp-validation-for="Notes" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                    <label class="form-check-label">
                                        <i class="bi bi-check-circle me-1"></i>Aktif
                                    </label>
                                </div>
                                <small class="text-muted">Bu dağılımın aktif olduğunu işaretleyin</small>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info shadow-sm">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Müşteri Dağılımı
                        </h6>
                        <ul class="mb-0 small">
                            <li>Tur programını seçin</li>
                            <li>Otobüs ve bilet bilgilerini belirleyin</li>
                            <li>Dağılım tarihini ve durumunu seçin</li>
                            <li>Gerekirse çalışan atayın</li>
                            <li>Notlar ekleyebilirsiniz</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
