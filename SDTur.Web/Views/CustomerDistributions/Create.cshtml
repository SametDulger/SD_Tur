@model SDTur.Web.Models.Tour.Operations.CustomerDistributionCreateViewModel
@{
    ViewData["Title"] = "Yeni Müşteri Dağılımı";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-plus-circle text-primary me-2"></i>Yeni Müşteri Dağılımı
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Müşteri Dağılım Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="TourScheduleId" class="form-label">
                                    <i class="bi bi-airplane me-1"></i>Tur Programı <span class="text-danger">*</span>
                                </label>
                                <select asp-for="TourScheduleId" class="form-select" required>
                                    <option value="">Tur programı seçiniz...</option>
                                    @if (ViewBag.TourSchedules != null)
                                    {
                                        @foreach (var schedule in ViewBag.TourSchedules)
                                        {
                                            <option value="@schedule.Id">@schedule.TourName - @schedule.StartDate.ToString("dd.MM.yyyy")</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="TourScheduleId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="CustomerType" class="form-label">
                                    <i class="bi bi-person me-1"></i>Müşteri Tipi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="CustomerType" class="form-select" required>
                                    <option value="">Müşteri tipi seçiniz...</option>
                                    <option value="Bireysel">Bireysel</option>
                                    <option value="Grup">Grup</option>
                                    <option value="Kurumsal">Kurumsal</option>
                                    <option value="VIP">VIP</option>
                                </select>
                                <span asp-validation-for="CustomerType" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="DistributionType" class="form-label">
                                    <i class="bi bi-tag me-1"></i>Dağılım Tipi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="DistributionType" class="form-select" required>
                                    <option value="">Dağılım tipi seçiniz...</option>
                                    <option value="Otel">Otel</option>
                                    <option value="Oda">Oda</option>
                                    <option value="Otobüs">Otobüs</option>
                                    <option value="Masa">Masa</option>
                                    <option value="Diğer">Diğer</option>
                                </select>
                                <span asp-validation-for="DistributionType" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="DistributionDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>Dağılım Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="DistributionDate" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="DistributionDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">
                                    <i class="bi bi-text-paragraph me-1"></i>Açıklama
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Müşteri dağılımı hakkında açıklama..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsCompleted" class="form-check-input" type="checkbox">
                                    <label class="form-check-label">
                                        <i class="bi bi-check-circle me-1"></i>Tamamlandı
                                    </label>
                                </div>
                                <small class="text-muted">Bu dağılımın tamamlandığını işaretleyin</small>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info shadow-sm">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Müşteri Dağılımı
                        </h6>
                        <ul class="mb-0 small">
                            <li>Tur müşterilerinin dağılımını belirleyin</li>
                            <li>Dağılım tipini seçin (otel, oda, otobüs vb.)</li>
                            <li>Dağılım tarihini belirleyin</li>
                            <li>Gerekirse açıklama ekleyin</li>
                            <li>Tamamlanma durumunu işaretleyin</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
