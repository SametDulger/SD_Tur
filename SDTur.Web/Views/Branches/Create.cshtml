@model SDTur.Web.Models.Master.Branches.BranchCreateViewModel
@{
    ViewData["Title"] = "Yeni Şube";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-building text-primary me-2"></i>Yeni Şube
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-plus-circle text-success me-2"></i>Şube Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" data-validate>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="BranchName" class="form-label">
                                <i class="bi bi-building me-1"></i>Şube Adı
                            </label>
                            <input asp-for="BranchName" class="form-control" placeholder="Şube adını giriniz" required>
                            <span asp-validation-for="BranchName" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="BranchCode" class="form-label">
                                <i class="bi bi-hash me-1"></i>Şube Kodu
                            </label>
                            <input asp-for="BranchCode" class="form-control" placeholder="Şube kodunu giriniz" required>
                            <span asp-validation-for="BranchCode" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="RegionId" class="form-label">
                                <i class="bi bi-geo-alt me-1"></i>Bölge
                            </label>
                            <select asp-for="RegionId" class="form-select" required>
                                <option value="">Bölge seçiniz</option>
                            </select>
                            <span asp-validation-for="RegionId" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="City" class="form-label">
                                <i class="bi bi-building me-1"></i>Şehir
                            </label>
                            <input asp-for="City" class="form-control" placeholder="Şehir adını giriniz" required>
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label">
                                <i class="bi bi-telephone me-1"></i>Telefon
                            </label>
                            <input asp-for="Phone" class="form-control" placeholder="Telefon numarası" required>
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope me-1"></i>E-posta
                            </label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="E-posta adresi" required>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="ManagerName" class="form-label">
                                <i class="bi bi-person me-1"></i>Şube Müdürü
                            </label>
                            <input asp-for="ManagerName" class="form-control" placeholder="Şube müdürü adı" required>
                            <span asp-validation-for="ManagerName" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="ManagerPhone" class="form-label">
                                <i class="bi bi-telephone me-1"></i>Müdür Telefonu
                            </label>
                            <input asp-for="ManagerPhone" class="form-control" placeholder="Müdür telefon numarası">
                            <span asp-validation-for="ManagerPhone" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="EmployeeCount" class="form-label">
                                <i class="bi bi-people me-1"></i>Çalışan Sayısı
                            </label>
                            <input asp-for="EmployeeCount" type="number" class="form-control" placeholder="0" min="0">
                            <span asp-validation-for="EmployeeCount" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="OpeningDate" class="form-label">
                                <i class="bi bi-calendar me-1"></i>Açılış Tarihi
                            </label>
                            <input asp-for="OpeningDate" type="date" class="form-control" required>
                            <span asp-validation-for="OpeningDate" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="Address" class="form-label">
                                <i class="bi bi-geo-alt me-1"></i>Adres
                            </label>
                            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Şube adresi" required></textarea>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-text-paragraph me-1"></i>Açıklama
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Şube açıklaması"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-12">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                <label asp-for="IsActive" class="form-check-label">
                                    <i class="bi bi-check-circle me-1"></i>Aktif Şube
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <!-- Hızlı İşlemler -->
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightning-charge text-warning me-2"></i>Hızlı İşlemler
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-outline-primary btn-sm" onclick="generateBranchCode()">
                        <i class="bi bi-magic me-2"></i>Şube Kodu Oluştur
                    </button>
                    <button type="button" class="btn btn-outline-info btn-sm" onclick="copyFromTemplate()">
                        <i class="bi bi-copy me-2"></i>Şablon Kopyala
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setCurrentDate()">
                        <i class="bi bi-calendar me-2"></i>Bugünün Tarihi
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Bölge Bilgileri -->
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle text-info me-2"></i>Bölge Bilgileri
                </h6>
            </div>
            <div class="card-body" id="regionInfo">
                <div class="text-center text-muted">
                    <i class="bi bi-geo-alt fs-1"></i>
                    <p class="mt-2">Bölge seçiniz</p>
                </div>
            </div>
        </div>
        
        <!-- Bilgi -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightbulb text-warning me-2"></i>Bilgi
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info small">
                    <ul class="mb-0">
                        <li>Şube kodu benzersiz olmalıdır</li>
                        <li>Bölge seçimi zorunludur</li>
                        <li>İletişim bilgileri doğru olmalıdır</li>
                        <li>Açılış tarihi geçmiş tarih olabilir</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function generateBranchCode() {
            const branchName = document.getElementById('BranchName').value;
            if (branchName) {
                const code = branchName.substring(0, 3).toUpperCase() + 
                           Math.floor(Math.random() * 1000).toString().padStart(3, '0');
                document.getElementById('BranchCode').value = code;
            } else {
                app.showNotification('Önce şube adını giriniz', 'warning');
            }
        }
        
        function copyFromTemplate() {
            // Template copy functionality
            console.log('Template copy clicked');
        }
        
        function setCurrentDate() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('OpeningDate').value = today;
        }
        
        // Region selection change handler
        document.addEventListener('DOMContentLoaded', function() {
            const regionSelect = document.getElementById('RegionId');
            const regionInfo = document.getElementById('regionInfo');
            
            regionSelect.addEventListener('change', function() {
                const selectedRegionId = this.value;
                if (selectedRegionId) {
                    // Load region details
                    console.log("API call handled server-side");
                        .then(region => {
                            regionInfo.innerHTML = `
                                <div class="text-center">
                                    <div class="bg-info bg-opacity-10 rounded-circle p-3 d-inline-block mb-2">
                                        <i class="bi bi-geo-alt text-info fs-4"></i>
                                    </div>
                                    <h6 class="fw-bold">${region.name}</h6>
                                    <p class="text-muted small mb-2">${region.description || ''}</p>
                                    <div class="row g-2 text-center">
                                        <div class="col-6">
                                            <small class="text-muted">Şube Sayısı</small>
                                            <div class="fw-bold">${region.branchCount || 0}</div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Durum</small>
                                            <div class="fw-bold">
                                                <span class="badge ${region.isActive ? 'bg-success' : 'bg-secondary'}">
                                                    ${region.isActive ? 'Aktif' : 'Pasif'}
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            `;
                        })
                        .catch(error => {
                            console.error('Region details loading failed:', error);
                        });
                } else {
                    regionInfo.innerHTML = `
                        <div class="text-center text-muted">
                            <i class="bi bi-geo-alt fs-1"></i>
                            <p class="mt-2">Bölge seçiniz</p>
                        </div>
                    `;
                }
            });
            
            // Set default date to today
            setCurrentDate();
        });
    </script>
} 
