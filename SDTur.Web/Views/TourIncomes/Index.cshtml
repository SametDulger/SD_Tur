@model IEnumerable<SDTur.Web.Models.Tour.Financial.TourIncomeViewModel>
@{
    ViewData["Title"] = "Tur Gelirleri";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-cash-coin text-primary me-2"></i>Tur Gelirleri
            </h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni Gelir
            </a>
        </div>
    </div>
</div>

<!-- İstatistikler -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-cash-coin text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam Gelir</h6>
                        <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-check-circle text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Tahsil Edilen</h6>
                        <h3 class="mb-0 fw-bold text-success">@Model.Count(x => x.Status == "Received")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-clock text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Bekleyen</h6>
                        <h3 class="mb-0 fw-bold text-warning">@Model.Count(x => x.Status == "Pending")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-currency-exchange text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Ortalama Gelir</h6>
                        <h3 class="mb-0 fw-bold text-info">₺@(Model.Any() ? Model.Average(x => x.Amount).ToString("N2") : "0.00")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Gelir Listesi -->
<div class="card border-0 shadow-sm">
    <div class="card-header border-0">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ul me-2"></i>Gelir Listesi
                </h5>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end gap-2">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="Gelir ara...">
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-download me-1"></i>Dışa Aktar
                        </button>
                        <ul class="dropdown-menu shadow border-0">
                            <li><a class="dropdown-item" href="@Url.Action("ExportToExcel")">
                                <i class="bi bi-file-earmark-excel me-2"></i>Excel
                            </a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ExportToPDF")">
                                <i class="bi bi-file-earmark-pdf me-2"></i>PDF
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Gelir No</th>
                        <th>Tur</th>
                        <th>Gelir Türü</th>
                        <th>Açıklama</th>
                        <th>Tutar</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var income in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-semibold">@income.IncomeNumber</span>
                                </td>
                                <td>@income.TourName</td>
                                <td>
                                    @{
                                        var incomeTypeText = income.IncomeType switch
                                        {
                                            "Ticket" => "Bilet",
                                            "Service" => "Hizmet",
                                            "Commission" => "Komisyon",
                                            "Other" => "Diğer",
                                            _ => income.IncomeType
                                        };
                                    }
                                    <span class="badge bg-secondary">@incomeTypeText</span>
                                </td>
                                <td>@income.Description</td>
                                <td>
                                    <span class="fw-semibold text-primary">₺@income.Amount.ToString("N2")</span>
                                </td>
                                <td>@income.IncomeDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @{
                                        var statusClass = income.Status switch
                                        {
                                            "Received" => "badge bg-success",
                                            "Pending" => "badge bg-warning",
                                            "Cancelled" => "badge bg-danger",
                                            _ => "badge bg-light text-dark"
                                        };
                                        var statusText = income.Status switch
                                        {
                                            "Received" => "Tahsil Edildi",
                                            "Pending" => "Beklemede",
                                            "Cancelled" => "İptal",
                                            _ => income.Status
                                        };
                                    }
                                    <span class="@statusClass">@statusText</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@income.Id" class="btn btn-outline-info" title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@income.Id" class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@income.Id" class="btn btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4">
                                <i class="bi bi-inbox text-muted fs-1"></i>
                                <p class="text-muted mt-2">Gelir bulunamadı</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-light">
        <div class="row align-items-center">
            <div class="col-md-6">
                <small class="text-muted">
                    Toplam <strong>@Model.Count()</strong> gelir bulundu
                </small>
            </div>
            <div class="col-md-6 text-end">
                <small class="text-muted">
                    Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Gelir Dağılımı -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header border-0">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pie-chart text-info me-2"></i>Gelir Dağılımı
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @foreach (var incomeType in Model.GroupBy(x => x.IncomeType).Take(4))
                    {
                        var incomeTypeText = incomeType.Key switch
                        {
                            "Ticket" => "Bilet",
                            "Service" => "Hizmet",
                            "Commission" => "Komisyon",
                            "Other" => "Diğer",
                            _ => incomeType.Key
                        };
                        <div class="col-md-3">
                            <div class="text-center">
                                <h6 class="text-muted mb-1">@incomeTypeText</h6>
                                <h4 class="text-primary mb-0">@incomeType.Count()</h4>
                                <small class="text-muted">gelir</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
