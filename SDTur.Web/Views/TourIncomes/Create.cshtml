@model SDTur.Web.Models.Tour.Financial.TourIncomeCreateViewModel
@{
    ViewData["Title"] = "Yeni Tur Geliri";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-plus-circle text-primary me-2"></i>Yeni Tur Geliri
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-form me-2"></i>Gelir Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TourId" class="form-label fw-semibold">
                                <i class="bi bi-airplane me-1"></i>Tur
                            </label>
                            <select asp-for="TourId" class="form-select" id="tourSelect">
                                <option value="">Tur seçiniz...</option>
                            </select>
                            <span asp-validation-for="TourId" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="IncomeType" class="form-label fw-semibold">
                                <i class="bi bi-tag me-1"></i>Gelir Türü
                            </label>
                            <select asp-for="IncomeType" class="form-select">
                                <option value="">Gelir türü seçiniz...</option>
                                <option value="Bilet">Bilet</option>
                                <option value="Komisyon">Komisyon</option>
                                <option value="Diðer">Diðer</option>
                            </select>
                            <span asp-validation-for="IncomeType" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Amount" class="form-label fw-semibold">
                                <i class="bi bi-currency-dollar me-1"></i>Tutar
                            </label>
                            <div class="input-group">
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" placeholder="0.00">
                                <span class="input-group-text">?</span>
                            </div>
                            <span asp-validation-for="Amount" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="IncomeDate" class="form-label fw-semibold">
                                <i class="bi bi-calendar me-1"></i>Gelir Tarihi
                            </label>
                            <input asp-for="IncomeDate" class="form-control" type="date">
                            <span asp-validation-for="IncomeDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PaymentMethod" class="form-label fw-semibold">
                                <i class="bi bi-credit-card me-1"></i>Ödeme Yöntemi
                            </label>
                            <select asp-for="PaymentMethod" class="form-select">
                                <option value="">Ödeme yöntemi seçiniz...</option>
                                <option value="Nakit">Nakit</option>
                                <option value="Kredi Kartý">Kredi Kartý</option>
                                <option value="Banka Transferi">Banka Transferi</option>
                                <option value="Çek">Çek</option>
                                <option value="Diðer">Diðer</option>
                            </select>
                            <span asp-validation-for="PaymentMethod" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-check-circle me-1"></i>Tahsilat Durumu
                            </label>
                            <div class="form-check form-switch mt-2">
                                <input asp-for="IsReceived" class="form-check-input" type="checkbox">
                                <label asp-for="IsReceived" class="form-check-label">
                                    Gelir tahsil edildi
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-semibold">
                            <i class="bi bi-text-paragraph me-1"></i>Açýklama
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="3" 
                                  placeholder="Gelir ile ilgili açýklama giriniz..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>Ýptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Bilgi
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6 class="alert-heading">
                        <i class="bi bi-lightbulb me-2"></i>Önemli Notlar
                    </h6>
                    <ul class="mb-0 small">
                        <li>Tüm alanlar doðru þekilde doldurulmalýdýr</li>
                        <li>Gelir tarihi bugünden önceki bir tarih olmalýdýr</li>
                        <li>Tutar pozitif bir deðer olmalýdýr</li>
                        <li>Tahsilat durumu iþaretlenirse gelir tahsil edilmiþ sayýlýr</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load tours dynamically
        document.addEventListener('DOMContentLoaded', function() {
            loadTours();
        });

        async function loadTours() {
            try {
                const response = await fetch('/api/tours');
                const tours = await response.json();
                const select = document.getElementById('tourSelect');
                
                tours.forEach(tour => {
                    const option = document.createElement('option');
                    option.value = tour.id;
                    option.textContent = tour.name;
                    select.appendChild(option);
                });
            } catch (error) {
                console.error('Turlar yüklenirken hata oluþtu:', error);
            }
        }
    </script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
