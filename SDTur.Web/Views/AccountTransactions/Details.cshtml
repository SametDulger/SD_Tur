@model SDTur.Application.DTOs.AccountTransactionDto

@{
    ViewData["Title"] = "Hesap İşlemi Detayı";
}

<h1>Hesap İşlemi Detayı</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Hesap</dt>
        <dd class="col-sm-10">@Model.AccountName</dd>
        
        <dt class="col-sm-2">Tipi</dt>
        <dd class="col-sm-10">@(Model.TransactionType == "Debit" ? "Borç" : "Alacak")</dd>
        
        <dt class="col-sm-2">Tutar</dt>
        <dd class="col-sm-10">@Model.Amount.ToString("N2") @Model.CurrencyCode</dd>
        
        <dt class="col-sm-2">Açıklama</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        
        <dt class="col-sm-2">İşlem Tarihi</dt>
        <dd class="col-sm-10">@Model.TransactionDate.ToString("dd.MM.yyyy")</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div> 