@model SDTur.Web.Models.Financial.Accounts.AccountTransactionViewModel
@{
    ViewData["Title"] = "Hesap İşlemi Detayı";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-eye text-primary me-2"></i>Hesap İşlemi Detayı
                </h1>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Hesap İşlemi Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-bank me-1"></i>Hesap
                            </label>
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                    <i class="bi bi-bank text-primary"></i>
                                </div>
                                <div>
                                    <div class="fw-semibold">@Model.AccountName</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-tag me-1"></i>İşlem Tipi
                            </label>
                            <div>
                                <span class="badge bg-secondary fs-6">@Model.TransactionType</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-currency-exchange me-1"></i>Tutar
                            </label>
                            <div class="h4 mb-0 text-primary">@Model.Amount.ToString("C")</div>
                            <small class="text-muted">@Model.Currency</small>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-calendar me-1"></i>İşlem Tarihi
                            </label>
                            <div class="h6 mb-0">@Model.TransactionDate.ToString("dd MMMM yyyy")</div>
                            <small class="text-muted">@Model.TransactionDate.ToString("dddd, HH:mm")</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-hash me-1"></i>Referans Numarası
                            </label>
                            <div class="h6 mb-0">@Model.ReferenceNumber</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-check-circle me-1"></i>Durum
                            </label>
                            <div>
                                @if (Model.IsApproved)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="bi bi-check-circle me-1"></i>Onaylandı
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning fs-6">
                                        <i class="bi bi-clock me-1"></i>Beklemede
                                    </span>
                                }
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label fw-semibold text-muted">
                                    <i class="bi bi-text-paragraph me-1"></i>Açıklama
                                </label>
                                <div class="p-3 bg-light rounded">
                                    @Model.Description
                                </div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Reference))
                    {
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label fw-semibold text-muted">
                                    <i class="bi bi-link me-1"></i>Referans
                                </label>
                                <div class="p-3 bg-light rounded">
                                    @Model.Reference
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Hesap İşlemi
                        </h6>
                        <ul class="mb-0 small">
                            <li>Hesap işlem detayları</li>
                            <li>Tutar ve para birimi bilgileri</li>
                            <li>İşlem tarihi ve referans bilgileri</li>
                            <li>Onay durumu takibi</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
