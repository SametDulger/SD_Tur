@model IEnumerable<SDTur.Application.DTOs.AccountTransactionDto>

@{
    ViewData["Title"] = "Hesap İşlemleri";
}

<h1>Hesap İşlemleri</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Hesap İşlemi Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Hesap</th>
            <th>Tur Programı</th>
            <th>İşlem Tipi</th>
            <th>Tutar</th>
            <th>Para Birimi</th>
            <th>İşlem Tarihi</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AccountName</td>
                <td>@item.TourScheduleInfo</td>
                <td>
                    @if (item.TransactionType == "Credit")
                    {
                        <span class="badge bg-success">Alacak</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Borç</span>
                    }
                </td>
                <td>@item.Amount.ToString("N2")</td>
                <td>@item.CurrencyCode</td>
                <td>@item.TransactionDate.ToString("dd.MM.yyyy")</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table> 