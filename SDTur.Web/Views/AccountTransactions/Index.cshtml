@model IEnumerable<SDTur.Web.Models.Financial.Accounts.AccountTransactionViewModel>
@{
    ViewData["Title"] = "Hesap İşlemleri";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-arrow-left-right text-primary me-2"></i>Hesap İşlemleri
            </h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni İşlem
            </a>
        </div>
    </div>
</div>

<!-- İstatistikler -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-arrow-left-right text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam İşlem</h6>
                        <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-arrow-up text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Gelir</h6>
                        <h3 class="mb-0 fw-bold text-success">@Model.Where(t => t.TransactionType == "Income").Sum(t => t.Amount).ToString("C")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-arrow-down text-danger fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Gider</h6>
                        <h3 class="mb-0 fw-bold text-danger">@Model.Where(t => t.TransactionType == "Expense").Sum(t => t.Amount).ToString("C")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-calendar text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Bu Ay</h6>
                        <h3 class="mb-0 fw-bold text-info">@Model.Where(t => t.TransactionDate.Month == DateTime.Now.Month).Count()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- İşlem Listesi -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ul me-2"></i>İşlem Listesi
                </h5>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end gap-2">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="İşlem ara...">
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-download me-1"></i>Dışa Aktar
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">
                                <i class="bi bi-file-earmark-excel me-2"></i>Excel
                            </a></li>
                            <li><a class="dropdown-item" href="#">
                                <i class="bi bi-file-earmark-pdf me-2"></i>PDF
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
                <thead>
                    <tr>
                        <th>İşlem No</th>
                        <th>Hesap</th>
                        <th>İşlem Türü</th>
                        <th>Açıklama</th>
                        <th>Tutar</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var transaction in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-semibold">@transaction.TransactionNumber</span>
                                </td>
                                <td>@transaction.AccountName</td>
                                <td>
                                    @if (transaction.TransactionType == "Income")
                                    {
                                        <span class="badge bg-success">Gelir</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Gider</span>
                                    }
                                </td>
                                <td>@transaction.Description</td>
                                <td>
                                    <span class="fw-semibold @(transaction.TransactionType == "Income" ? "text-success" : "text-danger")">
                                        @transaction.Amount.ToString("C")
                                    </span>
                                </td>
                                <td>@transaction.TransactionDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (transaction.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@transaction.Id" class="btn btn-outline-info" title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@transaction.Id" class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@transaction.Id" class="btn btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4">
                                <i class="bi bi-inbox text-muted fs-1"></i>
                                <p class="text-muted mt-2">İşlem bulunamadı</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-light">
        <div class="row align-items-center">
            <div class="col-md-6">
                <small class="text-muted">
                    Toplam <strong>@Model.Count()</strong> işlem bulundu
                </small>
            </div>
            <div class="col-md-6 text-end">
                <small class="text-muted">
                    Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Aylık Özet -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h5 class="card-title mb-0">
                    <i class="bi bi-graph-up text-success me-2"></i>Aylık İşlem Özeti
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="text-center">
                            <h6 class="text-muted mb-1">Toplam Gelir</h6>
                            <h4 class="text-success mb-0">@Model.Where(t => t.TransactionType == "Income" && t.TransactionDate.Month == DateTime.Now.Month).Sum(t => t.Amount).ToString("C")</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <h6 class="text-muted mb-1">Toplam Gider</h6>
                            <h4 class="text-danger mb-0">@Model.Where(t => t.TransactionType == "Expense" && t.TransactionDate.Month == DateTime.Now.Month).Sum(t => t.Amount).ToString("C")</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <h6 class="text-muted mb-1">Net Durum</h6>
                            @{
                                var monthlyIncome = Model.Where(t => t.TransactionType == "Income" && t.TransactionDate.Month == DateTime.Now.Month).Sum(t => t.Amount);
                                var monthlyExpense = Model.Where(t => t.TransactionType == "Expense" && t.TransactionDate.Month == DateTime.Now.Month).Sum(t => t.Amount);
                                var netAmount = monthlyIncome - monthlyExpense;
                            }
                            <h4 class="@(netAmount >= 0 ? "text-success" : "text-danger") mb-0">@netAmount.ToString("C")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

 
