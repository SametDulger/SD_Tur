@model SDTur.Web.Models.Financial.Accounts.AccountTransactionEditViewModel
@{
    ViewData["Title"] = "Hesap İşlemi Düzenle";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil text-primary me-2"></i>Hesap İşlemi Düzenle
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Hesap İşlemi Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm" role="alert"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="AccountId" class="form-label">
                                    <i class="bi bi-bank me-1"></i>Hesap <span class="text-danger">*</span>
                                </label>
                                <select asp-for="AccountId" class="form-select" required>
                                    <option value="">Hesap seçiniz...</option>
                                    @if (ViewBag.Accounts != null)
                                    {
                                        @foreach (var account in ViewBag.Accounts)
                                        {
                                            <option value="@account.Id" selected="@(Model.AccountId == account.Id)">
                                                @account.AccountName
                                            </option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="AccountId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="TransactionType" class="form-label">
                                    <i class="bi bi-tag me-1"></i>İşlem Tipi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="TransactionType" class="form-select" required>
                                    <option value="">İşlem tipi seçiniz...</option>
                                    <option value="Gelir">Gelir</option>
                                    <option value="Gider">Gider</option>
                                    <option value="Transfer">Transfer</option>
                                    <option value="Ödeme">Ödeme</option>
                                    <option value="Tahsilat">Tahsilat</option>
                                    <option value="Diğer">Diğer</option>
                                </select>
                                <span asp-validation-for="TransactionType" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Amount" class="form-label">
                                    <i class="bi bi-currency-exchange me-1"></i>Tutar <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Amount" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="Amount" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="TransactionDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>İşlem Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="TransactionDate" type="datetime-local" class="form-control" required />
                                <span asp-validation-for="TransactionDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ReferenceNumber" class="form-label">
                                    <i class="bi bi-hash me-1"></i>Referans Numarası
                                </label>
                                <input asp-for="ReferenceNumber" class="form-control" placeholder="Referans numarası..." />
                                <span asp-validation-for="ReferenceNumber" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsApproved" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" for="IsApproved">
                                        <i class="bi bi-check-circle me-1"></i>Onaylandı
                                    </label>
                                </div>
                                <small class="text-muted">Bu işlemin onaylandığını işaretleyin</small>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">
                                    <i class="bi bi-text-paragraph me-1"></i>Açıklama
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="İşlem hakkında açıklama..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info shadow-sm">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Hesap İşlemi Düzenleme
                        </h6>
                        <ul class="mb-0 small">
                            <li>Hesap işlem bilgilerini güncelleyin</li>
                            <li>İşlem tipini değiştirebilirsiniz</li>
                            <li>Tutar ve tarih bilgilerini düzenleyin</li>
                            <li>Onay durumunu güncelleyin</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
