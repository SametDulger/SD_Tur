@model SDTur.Web.Models.Financial.Accounts.AccountTransactionCreateViewModel
@{
    ViewData["Title"] = "Yeni İşlem";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-plus-circle text-primary me-2"></i>Yeni İşlem
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-arrow-left-right text-success me-2"></i>İşlem Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" data-validate>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="AccountId" class="form-label">
                                <i class="bi bi-bank me-1"></i>Hesap
                            </label>
                            <select asp-for="AccountId" class="form-select" required>
                                <option value="">Hesap seçiniz</option>
                            </select>
                            <span asp-validation-for="AccountId" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="TransactionType" class="form-label">
                                <i class="bi bi-tag me-1"></i>İşlem Türü
                            </label>
                            <select asp-for="TransactionType" class="form-select" onchange="updateAmountLabel()" required>
                                <option value="">İşlem türü seçiniz</option>
                                <option value="Income">Gelir</option>
                                <option value="Expense">Gider</option>
                                <option value="Transfer">Transfer</option>
                            </select>
                            <span asp-validation-for="TransactionType" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Amount" class="form-label">
                                <i class="bi bi-currency-dollar me-1"></i><span id="amountLabel">Tutar</span>
                            </label>
                            <div class="input-group">
                                <input asp-for="Amount" type="number" step="0.01" class="form-control" placeholder="0.00" required>
                                <span class="input-group-text">₺</span>
                            </div>
                            <span asp-validation-for="Amount" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="TransactionDate" class="form-label">
                                <i class="bi bi-calendar me-1"></i>İşlem Tarihi
                            </label>
                            <input asp-for="TransactionDate" type="datetime-local" class="form-control" required>
                            <span asp-validation-for="TransactionDate" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6" id="transferAccountDiv" style="display: none;">
                            <label asp-for="TransferAccountId" class="form-label">
                                <i class="bi bi-arrow-left-right me-1"></i>Transfer Hesabı
                            </label>
                            <select asp-for="TransferAccountId" class="form-select">
                                <option value="">Transfer hesabı seçiniz</option>
                            </select>
                            <span asp-validation-for="TransferAccountId" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="CurrencyId" class="form-label">
                                <i class="bi bi-currency-exchange me-1"></i>Para Birimi
                            </label>
                            <select asp-for="CurrencyId" class="form-select" required>
                                <option value="">Para birimi seçiniz</option>
                            </select>
                            <span asp-validation-for="CurrencyId" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Category" class="form-label">
                                <i class="bi bi-collection me-1"></i>Kategori
                            </label>
                            <select asp-for="Category" class="form-select">
                                <option value="">Kategori seçiniz</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="ReferenceNumber" class="form-label">
                                <i class="bi bi-hash me-1"></i>Referans Numarası
                            </label>
                            <input asp-for="ReferenceNumber" class="form-control" placeholder="Referans numarası">
                            <span asp-validation-for="ReferenceNumber" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-text-paragraph me-1"></i>Açıklama
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="İşlem açıklaması" required></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-12">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                                <label asp-for="IsActive" class="form-check-label">
                                    <i class="bi bi-check-circle me-1"></i>İşlem Aktif
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <!-- Hesap Bilgileri -->
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle text-info me-2"></i>Hesap Bilgileri
                </h6>
            </div>
            <div class="card-body" id="accountInfo">
                <div class="text-center text-muted">
                    <i class="bi bi-bank fs-1"></i>
                    <p class="mt-2">Hesap seçiniz</p>
                </div>
            </div>
        </div>
        
        <!-- Hızlı İşlemler -->
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightning-charge text-warning me-2"></i>Hızlı İşlemler
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-outline-success btn-sm" onclick="setQuickAmount(100)">
                        <i class="bi bi-plus-circle me-2"></i>₺100
                    </button>
                    <button type="button" class="btn btn-outline-success btn-sm" onclick="setQuickAmount(500)">
                        <i class="bi bi-plus-circle me-2"></i>₺500
                    </button>
                    <button type="button" class="btn btn-outline-success btn-sm" onclick="setQuickAmount(1000)">
                        <i class="bi bi-plus-circle me-2"></i>₺1,000
                    </button>
                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="setQuickAmount(-100)">
                        <i class="bi bi-dash-circle me-2"></i>-₺100
                    </button>
                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="setQuickAmount(-500)">
                        <i class="bi bi-dash-circle me-2"></i>-₺500
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Bilgi -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightbulb text-warning me-2"></i>Bilgi
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info small">
                    <ul class="mb-0">
                        <li>Transfer işlemleri için iki hesap seçilmelidir</li>
                        <li>İşlem tarihi geçmiş tarih olabilir</li>
                        <li>Referans numarası opsiyoneldir</li>
                        <li>Pasif işlemler bakiye etkilemez</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateAmountLabel() {
            const transactionType = document.getElementById('TransactionType').value;
            const amountLabel = document.getElementById('amountLabel');
            const transferAccountDiv = document.getElementById('transferAccountDiv');
            
            switch(transactionType) {
                case 'Income':
                    amountLabel.textContent = 'Gelir Tutarı';
                    transferAccountDiv.style.display = 'none';
                    break;
                case 'Expense':
                    amountLabel.textContent = 'Gider Tutarı';
                    transferAccountDiv.style.display = 'none';
                    break;
                case 'Transfer':
                    amountLabel.textContent = 'Transfer Tutarı';
                    transferAccountDiv.style.display = 'block';
                    break;
                default:
                    amountLabel.textContent = 'Tutar';
                    transferAccountDiv.style.display = 'none';
            }
        }
        
        function setQuickAmount(amount) {
            document.getElementById('Amount').value = Math.abs(amount);
            
            if (amount < 0) {
                document.getElementById('TransactionType').value = 'Expense';
            } else {
                document.getElementById('TransactionType').value = 'Income';
            }
            
            updateAmountLabel();
        }
        
        // Account selection change handler
        document.addEventListener('DOMContentLoaded', function() {
            const accountSelect = document.getElementById('AccountId');
            const accountInfo = document.getElementById('accountInfo');
            
            accountSelect.addEventListener('change', function() {
                const selectedAccountId = this.value;
                if (selectedAccountId) {
                    // Load account details
                    console.log("API call handled server-side");
                        .then(account => {
                            accountInfo.innerHTML = `
                                <div class="text-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 d-inline-block mb-2">
                                        <i class="bi bi-bank text-primary fs-4"></i>
                                    </div>
                                    <h6 class="fw-bold">${account.accountName}</h6>
                                    <p class="text-muted small mb-2">${account.accountNumber}</p>
                                    <div class="row g-2 text-center">
                                        <div class="col-6">
                                            <small class="text-muted">Mevcut Bakiye</small>
                                            <div class="fw-bold ${account.currentBalance >= 0 ? 'text-success' : 'text-danger'}">
                                                ${account.currentBalance.toLocaleString('tr-TR', { style: 'currency', currency: 'TRY' })}
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Para Birimi</small>
                                            <div class="fw-bold">${account.currency}</div>
                                        </div>
                                    </div>
                                </div>
                            `;
                        })
                        .catch(error => {
                            console.error('Account details loading failed:', error);
                        });
                } else {
                    accountInfo.innerHTML = `
                        <div class="text-center text-muted">
                            <i class="bi bi-bank fs-1"></i>
                            <p class="mt-2">Hesap seçiniz</p>
                        </div>
                    `;
                }
            });
            
            // Set default date to now
            const now = new Date();
            const localDateTime = new Date(now.getTime() - now.getTimezoneOffset() * 60000).toISOString().slice(0, 16);
            document.getElementById('TransactionDate').value = localDateTime;
        });
    </script>
} 
