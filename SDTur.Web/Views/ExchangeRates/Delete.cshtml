@model SDTur.Application.DTOs.ExchangeRateDto

@{
    ViewData["Title"] = "Döviz Kuru Sil";
}

<h1>Döviz Kuru Sil</h1>

<h3>Bu döviz kurunu silmek istediğinizden emin misiniz?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Kaynak Para Birimi</dt>
        <dd class="col-sm-10">@Model.FromCurrencyCode</dd>
        
        <dt class="col-sm-2">Hedef Para Birimi</dt>
        <dd class="col-sm-10">@Model.ToCurrencyCode</dd>
        
        <dt class="col-sm-2">Kur</dt>
        <dd class="col-sm-10">@Model.Rate.ToString("N4")</dd>
        
        <dt class="col-sm-2">Tarihi</dt>
        <dd class="col-sm-10">@Model.RateDate.ToString("dd.MM.yyyy")</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div> 