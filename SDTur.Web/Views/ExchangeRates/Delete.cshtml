@model SDTur.Web.Models.Financial.Transactions.ExchangeRateViewModel
@{
    ViewData["Title"] = "Döviz Kuru Sil";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-trash text-danger me-2"></i>Döviz Kuru Sil
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0 text-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>Silme Onayı
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Dikkat!
                        </h6>
                        <p class="mb-0">
                            Bu döviz kurunu silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.
                        </p>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Kaynak Para Birimi</label>
                            <div class="form-control-plaintext">
                                <span class="badge bg-primary">@Model.FromCurrency</span>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Hedef Para Birimi</label>
                            <div class="form-control-plaintext">
                                <span class="badge bg-success">@Model.ToCurrency</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Kur</label>
                            <div class="form-control-plaintext fw-bold text-info">@Model.Rate.ToString("F4")</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Kur Tarihi</label>
                            <div class="form-control-plaintext">@Model.RateDate.ToString("dd.MM.yyyy")</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Aktiflik Durumu</label>
                            <div class="form-control-plaintext">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">Oluşturulma Tarihi</label>
                            <div class="form-control-plaintext">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle text-info me-2"></i>Bilgi
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Önemli Uyarı
                        </h6>
                        <ul class="mb-0 small">
                            <li>Bu işlem geri alınamaz</li>
                            <li>Finansal hesaplamalar etkilenebilir</li>
                            <li>İşlem geçmişi kaybolur</li>
                            <li>Silmeden önce yedek alın</li>
                        </ul>
                    </div>
                    
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Alternatif
                        </h6>
                        <p class="mb-0 small">
                            Kuru silmek yerine pasif hale getirmeyi düşünebilirsiniz. 
                            Bu şekilde veri kaybı yaşamazsınız.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


