@model IEnumerable<SDTur.Web.Models.Financial.Transactions.ExchangeRateViewModel>
@{
    ViewData["Title"] = "Döviz Kurları";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-currency-exchange text-primary me-2"></i>Döviz Kurları
            </h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni Kur
            </a>
        </div>
    </div>
</div>

<!-- Filtreler -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white">
        <h6 class="card-title mb-0">
            <i class="bi bi-funnel text-info me-2"></i>Filtreler
        </h6>
    </div>
    <div class="card-body">
        <form id="filterForm" class="row g-3">
            <div class="col-lg-3 col-md-6">
                <label class="form-label">Kaynak Para</label>
                <select class="form-select" id="fromCurrencyFilter">
                    <option value="">Tüm Para Birimleri</option>
                </select>
            </div>
            <div class="col-lg-3 col-md-6">
                <label class="form-label">Hedef Para</label>
                <select class="form-select" id="toCurrencyFilter">
                    <option value="">Tüm Para Birimleri</option>
                </select>
            </div>
            <div class="col-lg-3 col-md-6">
                <label class="form-label">Başlangıç Tarihi</label>
                <input type="date" class="form-control" id="startDateFilter">
            </div>
            <div class="col-lg-3 col-md-6">
                <label class="form-label">Bitiş Tarihi</label>
                <input type="date" class="form-control" id="endDateFilter">
            </div>
            <div class="col-12">
                <button type="button" class="btn btn-outline-primary" onclick="applyFilters()">
                    <i class="bi bi-search me-2"></i>Filtrele
                </button>
            </div>
        </form>
    </div>
</div>

<!-- İstatistikler -->
<div class="row g-4 mb-4" id="statisticsCards">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-currency-exchange text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam Kur</h6>
                        <h3 class="mb-0 fw-bold" id="totalRates">0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-arrow-up text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">En Yüksek Kur</h6>
                        <h3 class="mb-0 fw-bold text-success" id="highestRate">0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-arrow-down text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">En Düşük Kur</h6>
                        <h3 class="mb-0 fw-bold text-warning" id="lowestRate">0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-graph-up text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Ortalama Kur</h6>
                        <h3 class="mb-0 fw-bold text-info" id="averageRate">0</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Kur Listesi -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ul me-2"></i>Kur Listesi
                </h5>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end gap-2">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" id="searchInput" placeholder="Kur ara..." data-search="ratesTable">
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-download me-1"></i>Dışa Aktar
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#" onclick="exportToExcel()">
                                <i class="bi bi-file-earmark-excel me-2"></i>Excel
                            </a></li>
                            <li><a class="dropdown-item" href="#" onclick="exportToPDF()">
                                <i class="bi bi-file-earmark-pdf me-2"></i>PDF
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive" id="ratesTable">
            <!-- Dinamik olarak yüklenecek -->
        </div>
    </div>
    <div class="card-footer bg-light">
        <div class="row align-items-center">
            <div class="col-md-6">
                <small class="text-muted">
                    Toplam <strong id="recordCount">0</strong> kur bulundu
                </small>
            </div>
            <div class="col-md-6 text-end">
                <nav aria-label="Sayfa navigasyonu">
                    <ul class="pagination pagination-sm mb-0 justify-content-end" id="pagination">
                        <!-- Dinamik olarak oluşturulacak -->
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Kur Grafiği -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-graph-up text-info me-2"></i>Kur Grafiği
                </h5>
            </div>
            <div class="card-body">
                <canvas id="exchangeRateChart" height="100"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let currentFilters = {};
        let exchangeRateChart;
        
        function applyFilters() {
            currentFilters = {
                fromCurrency: document.getElementById('fromCurrencyFilter').value,
                toCurrency: document.getElementById('toCurrencyFilter').value,
                startDate: document.getElementById('startDateFilter').value,
                endDate: document.getElementById('endDateFilter').value
            };
            
            // Reload data with filters
            const queryString = new URLSearchParams(currentFilters).toString();
            const endpoint = queryString ? `/api/financial/exchange-rates?${queryString}` : '/api/financial/exchange-rates';
            
            console.log("Load data handled server-side"););
            updateStatistics();
            updateChart();
        }
        
        function updateStatistics() {
            // Load statistics based on current filters
            const queryString = new URLSearchParams(currentFilters).toString();
            const endpoint = queryString ? `/api/financial/exchange-rates/statistics?${queryString}` : '/api/financial/exchange-rates/statistics';
            
            console.log("API call handled server-side");
                .then(data => {
                    document.getElementById('totalRates').textContent = data.totalRates || 0;
                    document.getElementById('highestRate').textContent = (data.highestRate || 0).toFixed(4);
                    document.getElementById('lowestRate').textContent = (data.lowestRate || 0).toFixed(4);
                    document.getElementById('averageRate').textContent = (data.averageRate || 0).toFixed(4);
                    document.getElementById('recordCount').textContent = data.totalRates || 0;
                })
                .catch(error => {
                    console.error('Statistics loading failed:', error);
                });
        }
        
        function updateChart() {
            // Load chart data based on current filters
            const queryString = new URLSearchParams(currentFilters).toString();
            const endpoint = queryString ? `/api/financial/exchange-rates/chart-data?${queryString}` : '/api/financial/exchange-rates/chart-data';
            
            console.log("API call handled server-side");
                .then(data => {
                    createExchangeRateChart(data);
                })
                .catch(error => {
                    console.error('Chart data loading failed:', error);
                });
        }
        
        function createExchangeRateChart(data) {
            const ctx = document.getElementById('exchangeRateChart').getContext('2d');
            
            if (exchangeRateChart) {
                exchangeRateChart.destroy();
            }
            
            exchangeRateChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.labels || [],
                    datasets: [{
                        label: 'Döviz Kuru',
                        data: data.rates || [],
                        borderColor: 'rgba(13, 110, 253, 1)',
                        backgroundColor: 'rgba(13, 110, 253, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: false,
                            ticks: {
                                callback: function(value) {
                                    return value.toFixed(4);
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: true
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return 'Kur: ' + context.parsed.y.toFixed(4);
                                }
                            }
                        }
                    }
                }
            });
        }
        
        function exportToExcel() {
            const queryString = new URLSearchParams(currentFilters).toString();
            const url = queryString ? `/ExchangeRates/Export/Excel?${queryString}` : '/ExchangeRates/Export/Excel';
            window.location.href = url;
        }
        
        function exportToPDF() {
            const queryString = new URLSearchParams(currentFilters).toString();
            const url = queryString ? `/ExchangeRates/Export/PDF?${queryString}` : '/ExchangeRates/Export/PDF';
            window.location.href = url;
        }
        
        // Setup search functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Setup search functionality
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const table = document.getElementById('ratesTable');
                    const rows = table.querySelectorAll('tbody tr');
                    
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                });
            }
        });
    </script>
} 
