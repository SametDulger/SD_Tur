@model IEnumerable<SDTur.Application.DTOs.ExchangeRateDto>

@{
    ViewData["Title"] = "Döviz Kurları";
}

<h1>Döviz Kurları</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Döviz Kuru Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kaynak Para Birimi</th>
            <th>Hedef Para Birimi</th>
            <th>Kur</th>
            <th>Kur Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FromCurrency</td>
                <td>@item.ToCurrency</td>
                <td>@item.Rate.ToString("N4")</td>
                <td>@item.RateDate.ToString("dd.MM.yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table> 