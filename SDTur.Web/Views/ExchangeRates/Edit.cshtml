@model SDTur.Web.Models.Financial.Transactions.ExchangeRateEditViewModel
@{
    ViewData["Title"] = "Döviz Kuru Düzenle";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil text-primary me-2"></i>Döviz Kuru Düzenle
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Döviz Kuru Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FromCurrency" class="form-label fw-semibold">
                                    <i class="bi bi-currency-exchange me-1"></i>Kaynak Para Birimi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="FromCurrency" class="form-select" required>
                                    <option value="">Kaynak para birimi seçiniz...</option>
                                    @if (ViewBag.Currencies != null)
                                    {
                                        @foreach (var currency in ViewBag.Currencies)
                                        {
                                            <option value="@currency.Code" selected="@(Model.FromCurrency == currency.Code)">@currency.Name (@currency.Code)</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="FromCurrency" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="ToCurrency" class="form-label fw-semibold">
                                    <i class="bi bi-currency-exchange me-1"></i>Hedef Para Birimi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="ToCurrency" class="form-select" required>
                                    <option value="">Hedef para birimi seçiniz...</option>
                                    @if (ViewBag.Currencies != null)
                                    {
                                        @foreach (var currency in ViewBag.Currencies)
                                        {
                                            <option value="@currency.Code" selected="@(Model.ToCurrency == currency.Code)">@currency.Name (@currency.Code)</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="ToCurrency" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Rate" class="form-label fw-semibold">
                                    <i class="bi bi-percent me-1"></i>Kur <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Rate" type="number" step="0.0001" class="form-control" placeholder="0.0000" required />
                                <span asp-validation-for="Rate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="RateDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar me-1"></i>Kur Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="RateDate" type="date" class="form-control" required />
                                <span asp-validation-for="RateDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveSwitch">
                                    <label class="form-check-label fw-semibold" for="isActiveSwitch">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </label>
                                </div>
                                <small class="text-muted">Bu kurun aktif olduğunu işaretleyin</small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle text-info me-2"></i>Bilgi
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-3">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Döviz Kuru Düzenleme
                        </h6>
                        <p class="mb-0 small">
                            Döviz kuru bilgilerini güncelleyebilirsiniz. Kur tarihi ve oranı değişiklikleri 
                            finansal hesaplamaları etkileyebilir.
                        </p>
                    </div>
                    
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Önemli Notlar
                        </h6>
                        <ul class="mb-0 small">
                            <li>Kaynak ve hedef para birimi farklı olmalıdır</li>
                            <li>Kur oranı 4 ondalık basamakla girilir</li>
                            <li>Kur tarihi geçmiş bir tarih olabilir</li>
                            <li>Değişiklikler geri alınamaz</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
