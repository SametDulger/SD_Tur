@model SDTur.Web.Models.Financial.Transactions.ExchangeRateEditViewModel
@{
    ViewData["Title"] = "Döviz Kuru Düzenle";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil text-warning me-2"></i>Döviz Kuru Düzenle
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-currency-exchange me-2"></i>Kur Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FromCurrency" class="form-label">
                                    <i class="bi bi-currency-dollar me-1"></i>Kaynak Para Birimi
                                </label>
                                <select asp-for="FromCurrency" class="form-select">
                                    <option value="">Para birimi seçiniz</option>
                                    <option value="TRY">Türk Lirasý (?)</option>
                                    <option value="USD">Amerikan Dolarý ($)</option>
                                    <option value="EUR">Euro (€)</option>
                                    <option value="GBP">Ýngiliz Sterlini (£)</option>
                                </select>
                                <span asp-validation-for="FromCurrency" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="ToCurrency" class="form-label">
                                    <i class="bi bi-arrow-right me-1"></i>Hedef Para Birimi
                                </label>
                                <select asp-for="ToCurrency" class="form-select">
                                    <option value="">Para birimi seçiniz</option>
                                    <option value="TRY">Türk Lirasý (?)</option>
                                    <option value="USD">Amerikan Dolarý ($)</option>
                                    <option value="EUR">Euro (€)</option>
                                    <option value="GBP">Ýngiliz Sterlini (£)</option>
                                </select>
                                <span asp-validation-for="ToCurrency" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Rate" class="form-label">
                                    <i class="bi bi-calculator me-1"></i>Kur Deðeri
                                </label>
                                <input asp-for="Rate" type="number" step="0.0001" class="form-control" placeholder="0.0000">
                                <span asp-validation-for="Rate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="RateDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>Kur Tarihi
                                </label>
                                <input asp-for="RateDate" type="datetime-local" class="form-control">
                                <span asp-validation-for="RateDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Date" class="form-label">
                                    <i class="bi bi-clock me-1"></i>Oluþturma Tarihi
                                </label>
                                <input asp-for="Date" type="datetime-local" class="form-control">
                                <span asp-validation-for="Date" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-check form-switch mt-4">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                    <label asp-for="IsActive" class="form-check-label">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-2"></i>Ýptal
                                    </a>
                                    <button type="submit" class="btn btn-warning">
                                        <i class="bi bi-check-circle me-2"></i>Güncelle
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
