@model SDTur.Application.DTOs.UpdateExchangeRateDto

@{
    ViewData["Title"] = "Döviz Kuru Düzenle";
}

<h1>Döviz Kuru Düzenle</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="FromCurrencyId" class="control-label">Kaynak Para Birimi</label>
                <select asp-for="FromCurrencyId" class="form-control" asp-items="ViewBag.FromCurrencyId">
                    <option value="">Para Birimi Seçin</option>
                </select>
                <span asp-validation-for="FromCurrencyId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ToCurrencyId" class="control-label">Hedef Para Birimi</label>
                <select asp-for="ToCurrencyId" class="form-control" asp-items="ViewBag.ToCurrencyId">
                    <option value="">Para Birimi Seçin</option>
                </select>
                <span asp-validation-for="ToCurrencyId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Rate" class="control-label">Kur</label>
                <input asp-for="Rate" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="RateDate" class="control-label">Kur Tarihi</label>
                <input asp-for="RateDate" type="date" class="form-control" />
                <span asp-validation-for="RateDate" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 