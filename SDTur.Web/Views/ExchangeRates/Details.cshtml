@model SDTur.Web.Models.Financial.Transactions.ExchangeRateViewModel
@{
    ViewData["Title"] = "Döviz Kuru Detayı";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-currency-exchange text-primary me-2"></i>Döviz Kuru Detayı
                </h1>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Kur Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Kaynak Para Birimi</label>
                            <div class="p-2 bg-light rounded">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                        <i class="bi bi-currency-dollar text-primary"></i>
                                    </div>
                                    <span class="fw-semibold">@Model.FromCurrency</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Hedef Para Birimi</label>
                            <div class="p-2 bg-light rounded">
                                <div class="d-flex align-items-center">
                                    <div class="bg-success bg-opacity-10 rounded-circle p-2 me-2">
                                        <i class="bi bi-arrow-right text-success"></i>
                                    </div>
                                    <span class="fw-semibold">@Model.ToCurrency</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Kur Değeri</label>
                            <div class="p-2 bg-light rounded">
                                <span class="fw-bold text-primary fs-4">@Model.Rate.ToString("F4")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Durum</label>
                            <div class="p-2 bg-light rounded">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Aktif
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle me-1"></i>Pasif
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Kur Tarihi</label>
                            <div class="p-2 bg-light rounded">
                                <i class="bi bi-calendar me-2"></i>@Model.RateDate.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Oluşturma Tarihi</label>
                            <div class="p-2 bg-light rounded">
                                <i class="bi bi-clock me-2"></i>@Model.Date.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calculator me-2"></i>Dönüşüm Örneği
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">1 @Model.FromCurrency = @Model.Rate.ToString("F4") @Model.ToCurrency</label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">100 @Model.FromCurrency = @(100 * Model.Rate).ToString("F2") @Model.ToCurrency</label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">1000 @Model.FromCurrency = @(1000 * Model.Rate).ToString("F2") @Model.ToCurrency</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
