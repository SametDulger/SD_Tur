@model SDTur.Application.DTOs.TicketDto

@{
    ViewData["Title"] = "Bilet Detayları";
}

<h1>Bilet Detayları</h1>

<div>
    <h4>Bilet Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Müşteri Adı</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>
        
        <dt class="col-sm-2">Tur</dt>
        <dd class="col-sm-10">@Model.TourName</dd>
        
        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@Model.TicketDate.ToString("dd/MM/yyyy")</dd>
        
        <dt class="col-sm-2">Fiyat</dt>
        <dd class="col-sm-10">@Model.TotalAmount @Model.Currency</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        
        <dt class="col-sm-2">Oluşturulma Tarihi</dt>
        <dd class="col-sm-10">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>
        
        @if (Model.UpdatedDate.HasValue)
        {
            <dt class="col-sm-2">Güncellenme Tarihi</dt>
            <dd class="col-sm-10">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a> |
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div> 