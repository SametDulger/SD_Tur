@model IEnumerable<SDTur.Web.Models.Tour.Operations.TicketViewModel>
@{
    ViewData["Title"] = "Biletler";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-ticket-perforated text-primary me-2"></i>Biletler
            </h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni Bilet
            </a>
        </div>
    </div>
</div>

<!-- Bilet Özeti -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-2">
                    <i class="bi bi-ticket-perforated text-primary fs-4"></i>
                </div>
                <h4 class="mb-1 fw-bold">@Model.Count()</h4>
                <small class="text-muted">Toplam Bilet</small>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-2">
                    <i class="bi bi-check-circle text-success fs-4"></i>
                </div>
                <h4 class="mb-1 fw-bold">@Model.Count(t => !t.IsCancelled)</h4>
                <small class="text-muted">Satılan Bilet</small>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex p-3 mb-2">
                    <i class="bi bi-clock text-warning fs-4"></i>
                </div>
                <h4 class="mb-1 fw-bold">@Model.Count(t => t.IsCancelled)</h4>
                <small class="text-muted">Rezerve Bilet</small>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex p-3 mb-2">
                    <i class="bi bi-currency-dollar text-info fs-4"></i>
                </div>
                <h4 class="mb-1 fw-bold">₺@Model.Sum(t => t.TotalAmount).ToString("N0")</h4>
                <small class="text-muted">Toplam Gelir</small>
            </div>
        </div>
    </div>
</div>

<!-- Bilet Listesi -->
<div class="card border-0 shadow-sm">
    <div class="card-header border-0">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ul me-2"></i>Bilet Listesi
                </h5>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end gap-2">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="Bilet ara...">
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-download me-1"></i>Dışa Aktar
                        </button>
                        <ul class="dropdown-menu shadow border-0">
                            <li><a class="dropdown-item" href="@Url.Action("ExportToExcel")">
                                <i class="bi bi-file-earmark-excel me-2"></i>Excel
                            </a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ExportToPDF")">
                                <i class="bi bi-file-earmark-pdf me-2"></i>PDF
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Bilet No</th>
                        <th>Müşteri</th>
                        <th>Tur</th>
                        <th>Tarih</th>
                        <th>Fiyat</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model)
                    {
                        <tr>
                            <td>
                                <span class="fw-semibold">@ticket.TicketNumber</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                        <i class="bi bi-person text-primary"></i>
                                    </div>
                                    <div>
                                        <div class="fw-semibold">@ticket.CustomerName</div>
                                        <small class="text-muted">@ticket.Nationality</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info">@ticket.TourName</span>
                            </td>
                            <td>
                                <div class="h6 mb-0">@ticket.TourDate.ToString("dd MMM yyyy")</div>
                                <small class="text-muted">@ticket.TourDate.ToString("HH:mm")</small>
                            </td>
                            <td>
                                <span class="fw-semibold text-primary">₺@ticket.TotalAmount.ToString("N0")</span>
                            </td>
                            <td>
                                @{
                                    var statusClass = ticket.IsCancelled ? "badge bg-danger" : "badge bg-success";
                                    var statusText = ticket.IsCancelled ? "İptal" : "Aktif";
                                }
                                <span class="@statusClass">
                                    <i class="bi bi-check-circle me-1"></i>@statusText
                                </span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-outline-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@ticket.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-light">
        <div class="row align-items-center">
            <div class="col-md-6">
                <small class="text-muted">
                    Toplam <strong>@Model.Count()</strong> bilet bulundu
                </small>
            </div>
        </div>
    </div>
</div>

 
