@model TicketCreateViewModel
@{
    ViewData["Title"] = "Yeni Bilet";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-plus-circle text-primary me-2"></i>Yeni Bilet
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-form me-2"></i>Bilet Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TourId" class="form-label fw-semibold">
                                <i class="bi bi-airplane me-1"></i>Tur
                            </label>
                            <select asp-for="TourId" class="form-select" id="tourSelect">
                                <option value="">Tur seçiniz...</option>
                            </select>
                            <span asp-validation-for="TourId" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="CustomerName" class="form-label fw-semibold">
                                <i class="bi bi-person me-1"></i>Müşteri Adı
                            </label>
                            <input asp-for="CustomerName" class="form-control" placeholder="Müşteri adını giriniz...">
                            <span asp-validation-for="CustomerName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CustomerEmail" class="form-label fw-semibold">
                                <i class="bi bi-envelope me-1"></i>E-posta
                            </label>
                            <input asp-for="CustomerEmail" class="form-control" type="email" placeholder="ornek@email.com">
                            <span asp-validation-for="CustomerEmail" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="CustomerPhone" class="form-label fw-semibold">
                                <i class="bi bi-telephone me-1"></i>Telefon
                            </label>
                            <input asp-for="CustomerPhone" class="form-control" placeholder="+90 5XX XXX XX XX">
                            <span asp-validation-for="CustomerPhone" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label fw-semibold">
                                <i class="bi bi-currency-dollar me-1"></i>Fiyat
                            </label>
                            <div class="input-group">
                                <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00">
                                <span class="input-group-text">₺</span>
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-check-circle me-1"></i>Ödeme Durumu
                            </label>
                            <div class="form-check form-switch mt-2">
                                <input asp-for="IsPaid" class="form-check-input" type="checkbox">
                                <label asp-for="IsPaid" class="form-check-label">
                                    Ödeme yapıldı
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label fw-semibold">
                                <i class="bi bi-flag me-1"></i>Durum
                            </label>
                            <select asp-for="Status" class="form-select">
                                <option value="">Durum seçiniz...</option>
                                <option value="Aktif">Aktif</option>
                                <option value="İptal">İptal</option>
                                <option value="Beklemede">Beklemede</option>
                                <option value="Tamamlandı">Tamamlandı</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="PurchaseDate" class="form-label fw-semibold">
                                <i class="bi bi-calendar me-1"></i>Satın Alma Tarihi
                            </label>
                            <input asp-for="PurchaseDate" class="form-control" type="date">
                            <span asp-validation-for="PurchaseDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Bilgi
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6 class="alert-heading">
                        <i class="bi bi-lightbulb me-2"></i>Önemli Notlar
                    </h6>
                    <ul class="mb-0 small">
                        <li>Tüm alanlar doğru şekilde doldurulmalıdır</li>
                        <li>Tur seçimi zorunludur</li>
                        <li>Müşteri bilgileri eksiksiz olmalıdır</li>
                        <li>Fiyat pozitif bir değer olmalıdır</li>
                        <li>Satın alma tarihi bugün veya geçmiş bir tarih olmalıdır</li>
                        <li>Durum belirtilmelidir</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load tours dynamically
        document.addEventListener('DOMContentLoaded', function() {
            loadTours();
        });

        async function loadTours() {
            try {
                const response = await fetch('/api/tours');
                const tours = await response.json();
                const select = document.getElementById('tourSelect');
                
                tours.forEach(tour => {
                    const option = document.createElement('option');
                    option.value = tour.id;
                    option.textContent = tour.name;
                    select.appendChild(option);
                });
            } catch (error) {
                console.error('Turlar yüklenirken hata oluştu:', error);
            }
        }
    </script>
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
