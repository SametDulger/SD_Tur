@model SDTur.Web.Models.Tour.Operations.TicketViewModel
@{
    ViewData["Title"] = "Bilet Sil";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-trash text-danger me-2"></i>Bilet Sil
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle text-warning me-2"></i>Silme Onayı
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h6 class="alert-heading">
                        <i class="bi bi-exclamation-triangle me-2"></i>Dikkat!
                    </h6>
                    <p class="mb-0">Bu bilet kaydını silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-airplane me-1"></i>Tur
                        </label>
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                <i class="bi bi-airplane text-primary"></i>
                            </div>
                            <div>
                                <div class="fw-semibold">@Model.TourName</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-person me-1"></i>Müşteri
                        </label>
                        <div class="d-flex align-items-center">
                            <div class="bg-success bg-opacity-10 rounded-circle p-2 me-2">
                                <i class="bi bi-person text-success"></i>
                            </div>
                            <span class="fw-semibold">@Model.CustomerName</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-envelope me-1"></i>E-posta
                        </label>
                        <div class="h6 mb-0">@Model.CustomerEmail</div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-telephone me-1"></i>Telefon
                        </label>
                        <div class="h6 mb-0">@Model.CustomerPhone</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-currency-dollar me-1"></i>Fiyat
                        </label>
                        <div class="h4 fw-bold text-success mb-0">
                            @Model.Price.ToString("C")
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-calendar me-1"></i>Satın Alma Tarihi
                        </label>
                        <div class="h6 mb-0">@Model.PurchaseDate.ToString("dd MMMM yyyy")</div>
                        <small class="text-muted">@Model.PurchaseDate.ToString("dddd")</small>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-check-circle me-1"></i>Ödeme Durumu
                        </label>
                        <div>
                            @if (Model.IsPaid)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle me-1"></i>Ödendi
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning fs-6">
                                    <i class="bi bi-clock me-1"></i>Beklemede
                                </span>
                            }
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-flag me-1"></i>Durum
                        </label>
                        <div>
                            <span class="badge bg-info bg-opacity-75 fs-6">@Model.Status</span>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Sil
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Bilgi
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h6 class="alert-heading">
                        <i class="bi bi-exclamation-triangle me-2"></i>Önemli Uyarı
                    </h6>
                    <ul class="mb-0 small">
                        <li>Bu işlem geri alınamaz</li>
                        <li>Bilet kaydı kalıcı olarak silinecektir</li>
                        <li>İlgili finansal kayıtlar etkilenebilir</li>
                        <li>Silme işlemi öncesi yedek almanız önerilir</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> 
