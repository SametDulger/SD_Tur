@model SDTur.Application.DTOs.UserDto

@{
    ViewData["Title"] = "Kullanıcı Detayı";
}

<h1>Kullanıcı Detayı</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Kullanıcı Adı</dt>
        <dd class="col-sm-10">@Model.Username</dd>
        
        <dt class="col-sm-2">Ad Soyad</dt>
        <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>
        
        <dt class="col-sm-2">E-posta</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        
        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        
        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.Role</dd>
        
        <dt class="col-sm-2">Çalışan</dt>
        <dd class="col-sm-10">@Model.EmployeeName</dd>
        
        <dt class="col-sm-2">Şube</dt>
        <dd class="col-sm-10">@Model.BranchName</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-danger">Pasif</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div> 