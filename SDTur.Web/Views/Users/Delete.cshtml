@model SDTur.Application.DTOs.UserDto

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<h1>Kullanıcı Sil</h1>

<h3>Bu kullanıcıyı silmek istediğinizden emin misiniz?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Kullanıcı Adı</dt>
        <dd class="col-sm-10">@Model.Username</dd>
        
        <dt class="col-sm-2">Ad Soyad</dt>
        <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>
        
        <dt class="col-sm-2">E-posta</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        
        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.Role</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-danger">Pasif</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div> 