@model SDTur.Web.Models.Financial.Accounts.AccountCreateViewModel
@{
    ViewData["Title"] = "Yeni Hesap";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-bank text-primary me-2"></i>Yeni Hesap
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Geri Dön
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-plus-circle text-success me-2"></i>Hesap Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" data-validate>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="AccountNumber" class="form-label">
                                <i class="bi bi-hash me-1"></i>Hesap Numarası
                            </label>
                            <input asp-for="AccountNumber" class="form-control" placeholder="Hesap numarası giriniz">
                            <span asp-validation-for="AccountNumber" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="AccountName" class="form-label">
                                <i class="bi bi-building me-1"></i>Hesap Adı
                            </label>
                            <input asp-for="AccountName" class="form-control" placeholder="Hesap adını giriniz">
                            <span asp-validation-for="AccountName" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="AccountType" class="form-label">
                                <i class="bi bi-tag me-1"></i>Hesap Türü
                            </label>
                            <select asp-for="AccountType" class="form-select">
                                <option value="">Hesap türü seçiniz</option>
                            </select>
                            <span asp-validation-for="AccountType" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="CurrencyId" class="form-label">
                                <i class="bi bi-currency-exchange me-1"></i>Para Birimi
                            </label>
                            <select asp-for="CurrencyId" class="form-select">
                                <option value="">Para birimi seçiniz</option>
                            </select>
                            <span asp-validation-for="CurrencyId" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="ContactPerson" class="form-label">
                                <i class="bi bi-person me-1"></i>İletişim Kişisi
                            </label>
                            <input asp-for="ContactPerson" class="form-control" placeholder="İletişim kişisi adı">
                            <span asp-validation-for="ContactPerson" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label">
                                <i class="bi bi-telephone me-1"></i>Telefon
                            </label>
                            <input asp-for="Phone" class="form-control" placeholder="Telefon numarası">
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope me-1"></i>E-posta
                            </label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="E-posta adresi">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="InitialBalance" class="form-label">
                                <i class="bi bi-wallet me-1"></i>Başlangıç Bakiyesi
                            </label>
                            <input asp-for="InitialBalance" type="number" step="0.01" class="form-control" placeholder="0.00">
                            <span asp-validation-for="InitialBalance" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="Address" class="form-label">
                                <i class="bi bi-geo-alt me-1"></i>Adres
                            </label>
                            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Adres bilgisi"></textarea>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-text-paragraph me-1"></i>Açıklama
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Hesap açıklaması"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-12">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                <label asp-for="IsActive" class="form-check-label">
                                    <i class="bi bi-check-circle me-1"></i>Aktif Hesap
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-2"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle text-info me-2"></i>Bilgi
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6 class="alert-heading">
                        <i class="bi bi-lightbulb me-2"></i>Önemli Notlar
                    </h6>
                    <ul class="mb-0 small">
                        <li>Hesap numarası benzersiz olmalıdır</li>
                        <li>Para birimi seçimi geri alınamaz</li>
                        <li>Başlangıç bakiyesi opsiyoneldir</li>
                        <li>İletişim bilgileri zorunludur</li>
                    </ul>
                </div>
                
                <div class="mt-3">
                    <h6 class="text-muted mb-2">Hızlı İşlemler</h6>
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-primary btn-sm" onclick="generateAccountNumber()">
                            <i class="bi bi-magic me-2"></i>Hesap No Oluştur
                        </button>
                        <button type="button" class="btn btn-outline-info btn-sm" onclick="copyFromTemplate()">
                            <i class="bi bi-copy me-2"></i>Şablon Kopyala
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function generateAccountNumber() {
            const timestamp = Date.now().toString().slice(-6);
            const random = Math.floor(Math.random() * 1000).toString().padStart(3, '0');
            document.getElementById('AccountNumber').value = `ACC${timestamp}${random}`;
        }
        
        function copyFromTemplate() {
            // Template copy functionality
            console.log('Template copy clicked');
        }
        
        // Auto-load dropdown data
        document.addEventListener('DOMContentLoaded', function() {
            const accountTypeSelect = document.querySelector('select[data-load="/api/master/accounttypes"]');
            const currencySelect = document.querySelector('select[data-load="/api/master/currencies"]');
            
            if (accountTypeSelect) {
                console.log("Load data handled server-side");;
            }
            
            if (currencySelect) {
                console.log("Load data handled server-side");;
            }
        });
    </script>
} 
