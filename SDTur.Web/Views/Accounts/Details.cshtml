@model SDTur.Web.Models.Financial.Accounts.AccountViewModel
@{
    ViewData["Title"] = "Hesap Detayları";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-bank text-primary me-2"></i>Hesap Detayları
            </h1>
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil me-2"></i>Düzenle
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Hesap Bilgileri -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle text-info me-2"></i>Hesap Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted">Hesap Numarası</label>
                        <div class="fw-bold text-primary">@Model.AccountNumber</div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Hesap Adı</label>
                        <div class="fw-bold">@Model.AccountName</div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Hesap Türü</label>
                        <div>
                            <span class="badge bg-light text-dark">@Model.AccountType</span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Para Birimi</label>
                        <div>
                            <span class="badge bg-outline-secondary">@Model.Currency</span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Mevcut Bakiye</label>
                        <div class="fw-bold fs-5 @(Model.CurrentBalance >= 0 ? "text-success" : "text-danger")">
                            @Model.CurrentBalance.ToString("C")
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Durum</label>
                        <div>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Aktif
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle me-1"></i>Pasif
                                </span>
                            }
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">İletişim Kişisi</label>
                        <div class="fw-semibold">@Model.ContactPerson</div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Telefon</label>
                        <div>
                            <a href="tel:@Model.Phone" class="text-decoration-none">
                                <i class="bi bi-telephone me-1"></i>@Model.Phone
                            </a>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">E-posta</label>
                        <div>
                            <a href="mailto:@Model.Email" class="text-decoration-none">
                                <i class="bi bi-envelope me-1"></i>@Model.Email
                            </a>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Oluşturma Tarihi</label>
                        <div>@(Model.CreatedDate?.ToString("dd.MM.yyyy HH:mm"))</div>
                    </div>
                    
                    <div class="col-12">
                        <label class="form-label text-muted">Adres</label>
                        <div>@Model.Address</div>
                    </div>
                    
                    <div class="col-12">
                        <label class="form-label text-muted">Açıklama</label>
                        <div>@Model.Description</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Yan Panel -->
    <div class="col-lg-4">
        <!-- Hızlı İşlemler -->
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightning-charge text-warning me-2"></i>Hızlı İşlemler
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="AccountTransactions" asp-action="Create" asp-route-accountId="@Model.Id" class="btn btn-success btn-sm">
                        <i class="bi bi-plus-circle me-2"></i>Yeni İşlem
                    </a>
                    <a asp-controller="AccountTransactions" asp-action="Index" asp-route-accountId="@Model.Id" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-list-ul me-2"></i>İşlem Geçmişi
                    </a>
                    <button type="button" class="btn btn-outline-info btn-sm" onclick="printAccountDetails()">
                        <i class="bi bi-printer me-2"></i>Yazdır
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="exportAccountData()">
                        <i class="bi bi-download me-2"></i>Dışa Aktar
                    </button>
                </div>
            </div>
        </div>
        
        <!-- İstatistikler -->
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-graph-up text-success me-2"></i>İstatistikler
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-2 text-center">
                    <div class="col-6">
                        <div class="text-muted small">Toplam İşlem</div>
                        <div class="fw-bold">@Model.TotalTransactions</div>
                    </div>
                    <div class="col-6">
                        <div class="text-muted small">Bu Ay</div>
                        <div class="fw-bold">@Model.ThisMonthTransactions</div>
                    </div>
                    <div class="col-6">
                        <div class="text-muted small">Toplam Gelir</div>
                        <div class="fw-bold text-success">@Model.TotalIncome.ToString("C")</div>
                    </div>
                    <div class="col-6">
                        <div class="text-muted small">Toplam Gider</div>
                        <div class="fw-bold text-danger">@Model.TotalExpense.ToString("C")</div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Son İşlemler -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-clock-history text-info me-2"></i>Son İşlemler
                </h6>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush" id="recentTransactions">
                    <!-- Dinamik olarak yüklenecek -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- İşlem Geçmişi Tablosu -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-list-ul text-primary me-2"></i>İşlem Geçmişi
                        </h5>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input type="text" class="form-control border-start-0" id="transactionSearch" placeholder="İşlem ara..." data-search="transactionsTable">
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive" id="transactionsTable">
                    <!-- Dinamik olarak yüklenecek -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function printAccountDetails() {
            window.print();
        }
        
        function exportAccountData() {
            // Export functionality
            console.log("Export to Excel handled server-side");;
        }
        
        // Auto-load data
        document.addEventListener('DOMContentLoaded', function() {
            // Recent transactions will be loaded automatically via data-load attribute
            // Full transactions table will be loaded automatically via data-load attribute
        });
    </script>
} 
