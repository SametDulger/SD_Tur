@model SDTur.Web.Models.Financial.Accounts.AccountViewModel
@{
    ViewData["Title"] = "Hesap Detayları";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-bank text-primary me-2"></i>Hesap Detayları
            </h1>
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil me-2"></i>Düzenle
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Hesap Bilgileri -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle text-info me-2"></i>Hesap Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted">Hesap Numarası</label>
                        <div class="fw-bold text-primary">@Model.AccountNumber</div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Hesap Adı</label>
                        <div class="fw-bold">@Model.AccountName</div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Hesap Türü</label>
                        <div>
                            <span class="badge bg-secondary">@Model.AccountType</span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Para Birimi</label>
                        <div>
                            <span class="badge bg-outline-secondary">@Model.Currency</span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Mevcut Bakiye</label>
                        <div class="fw-bold fs-5 @(Model.CurrentBalance >= 0 ? "text-success" : "text-danger")">
                            @Model.CurrentBalance.ToString("C")
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Durum</label>
                        <div>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Aktif
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle me-1"></i>Pasif
                                </span>
                            }
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">İletişim Kişisi</label>
                        <div class="fw-semibold">@Model.ContactPerson</div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Telefon</label>
                        <div>
                            <a href="tel:@Model.Phone" class="text-decoration-none">
                                <i class="bi bi-telephone me-1"></i>@Model.Phone
                            </a>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">E-posta</label>
                        <div>
                            <a href="mailto:@Model.Email" class="text-decoration-none">
                                <i class="bi bi-envelope me-1"></i>@Model.Email
                            </a>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Oluşturma Tarihi</label>
                        <div>@(Model.CreatedDate?.ToString("dd.MM.yyyy HH:mm"))</div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Son Güncelleme</label>
                        <div>@(Model.UpdatedDate?.ToString("dd.MM.yyyy HH:mm"))</div>
                    </div>
                    
                    <div class="col-12">
                        <label class="form-label text-muted">Adres</label>
                        <div>@(string.IsNullOrEmpty(Model.Address) ? "Adres bilgisi girilmemiş" : Model.Address)</div>
                    </div>
                    
                    <div class="col-12">
                        <label class="form-label text-muted">Açıklama</label>
                        <div>@(string.IsNullOrEmpty(Model.Description) ? "Açıklama girilmemiş" : Model.Description)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Yan Panel -->
    <div class="col-lg-4">
        <!-- Hızlı İşlemler -->
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-lightning-charge text-warning me-2"></i>Hızlı İşlemler
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="AccountTransactions" asp-action="Create" asp-route-accountId="@Model.Id" class="btn btn-success btn-sm">
                        <i class="bi bi-plus-circle me-2"></i>Yeni İşlem
                    </a>
                    <a asp-controller="AccountTransactions" asp-action="Index" asp-route-accountId="@Model.Id" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-list-ul me-2"></i>İşlem Geçmişi
                    </a>
                    <button type="button" class="btn btn-outline-info btn-sm">
                        <i class="bi bi-printer me-2"></i>Yazdır
                    </button>
                    <a href="#" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-download me-2"></i>Dışa Aktar
                    </a>
                </div>
            </div>
        </div>
        
        <!-- İstatistikler -->
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-graph-up text-success me-2"></i>İstatistikler
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-2 text-center">
                    <div class="col-6">
                        <div class="text-muted small">Toplam İşlem</div>
                        <div class="fw-bold">@Model.TotalTransactions</div>
                    </div>
                    <div class="col-6">
                        <div class="text-muted small">Bu Ay</div>
                        <div class="fw-bold">@Model.ThisMonthTransactions</div>
                    </div>
                    <div class="col-6">
                        <div class="text-muted small">Toplam Gelir</div>
                        <div class="fw-bold text-success">@Model.TotalIncome.ToString("C")</div>
                    </div>
                    <div class="col-6">
                        <div class="text-muted small">Toplam Gider</div>
                        <div class="fw-bold text-danger">@Model.TotalExpense.ToString("C")</div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Hesap Durumu -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h6 class="card-title mb-0">
                    <i class="bi bi-pie-chart text-info me-2"></i>Hesap Durumu
                </h6>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="mb-3">
                        <div class="fs-1 @(Model.CurrentBalance >= 0 ? "text-success" : "text-danger")">
                            @Model.CurrentBalance.ToString("C")
                        </div>
                        <div class="text-muted">Mevcut Bakiye</div>
                    </div>
                    
                    <div class="row g-2">
                        <div class="col-6">
                            <div class="border rounded p-2">
                                <div class="fw-bold text-success">@Model.TotalIncome.ToString("C")</div>
                                <div class="small text-muted">Toplam Gelir</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded p-2">
                                <div class="fw-bold text-danger">@Model.TotalExpense.ToString("C")</div>
                                <div class="small text-muted">Toplam Gider</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- İşlem Geçmişi Tablosu -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-list-ul text-primary me-2"></i>Son İşlemler
                        </h5>
                    </div>
                    <div class="col-md-6 text-end">
                        <a asp-controller="AccountTransactions" asp-action="Index" asp-route-accountId="@Model.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-arrow-right me-2"></i>Tüm İşlemleri Görüntüle
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tarih</th>
                                <th>İşlem Türü</th>
                                <th>Açıklama</th>
                                <th>Tutar</th>
                                <th>Bakiye</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.RecentTransactions != null && ((IEnumerable<dynamic>)ViewBag.RecentTransactions).Any())
                            {
                                @foreach (var transaction in ViewBag.RecentTransactions)
                                {
                                    <tr>
                                        <td>@transaction.TransactionDate.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            <span class="badge @(transaction.TransactionType == "Income" ? "bg-success" : "bg-danger")">
                                                @transaction.TransactionType
                                            </span>
                                        </td>
                                        <td>@transaction.Description</td>
                                        <td class="@(transaction.TransactionType == "Income" ? "text-success" : "text-danger")">
                                            @transaction.Amount.ToString("C")
                                        </td>
                                        <td>@transaction.BalanceAfterTransaction.ToString("C")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-4">
                                        <i class="bi bi-inbox text-muted fs-1"></i>
                                        <p class="text-muted mt-2">Henüz işlem bulunmuyor</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 
