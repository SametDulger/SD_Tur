@model IEnumerable<SDTur.Web.Models.Financial.Accounts.AccountViewModel>
@{
    ViewData["Title"] = "Hesaplar";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-bank text-primary me-2"></i>Hesaplar
            </h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni Hesap
            </a>
        </div>
    </div>
</div>

<!-- İstatistikler -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-bank text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam Hesap</h6>
                        <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-check-circle text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Aktif Hesap</h6>
                        <h3 class="mb-0 fw-bold text-success">@Model.Count(a => a.IsActive)</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-currency-dollar text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam Bakiye</h6>
                        <h3 class="mb-0 fw-bold text-info">@Model.Sum(a => a.CurrentBalance).ToString("C")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-people text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Müşteri Hesabı</h6>
                        <h3 class="mb-0 fw-bold text-warning">@Model.Count(a => a.AccountType == "Customer")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hesap Listesi -->
<div class="card border-0 shadow-sm">
    <div class="card-header bg-white border-0">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ul me-2"></i>Hesap Listesi
                </h5>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end gap-2">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="Hesap ara...">
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-download me-1"></i>Dışa Aktar
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">
                                <i class="bi bi-file-earmark-excel me-2"></i>Excel
                            </a></li>
                            <li><a class="dropdown-item" href="#">
                                <i class="bi bi-file-earmark-pdf me-2"></i>PDF
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
                <thead>
                    <tr>
                        <th>Hesap No</th>
                        <th>Hesap Adı</th>
                        <th>Hesap Türü</th>
                        <th>İletişim Kişisi</th>
                        <th>Telefon</th>
                        <th>E-posta</th>
                        <th>Bakiye</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var account in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-semibold">@account.AccountNumber</span>
                                </td>
                                <td>@account.AccountName</td>
                                <td>
                                    <span class="badge bg-secondary">@account.AccountType</span>
                                </td>
                                <td>@account.ContactPerson</td>
                                <td>@account.Phone</td>
                                <td>@account.Email</td>
                                <td>
                                    <span class="fw-semibold @(account.CurrentBalance >= 0 ? "text-success" : "text-danger")">
                                        @account.CurrentBalance.ToString("C")
                                    </span>
                                </td>
                                <td>
                                    @if (account.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@account.Id" class="btn btn-outline-info" title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@account.Id" class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@account.Id" class="btn btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center py-4">
                                <i class="bi bi-inbox text-muted fs-1"></i>
                                <p class="text-muted mt-2">Hesap bulunamadı</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-light">
        <div class="row align-items-center">
            <div class="col-md-6">
                <small class="text-muted">
                    Toplam <strong>@Model.Count()</strong> hesap bulundu
                </small>
            </div>
            <div class="col-md-6 text-end">
                <small class="text-muted">
                    Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Bakiye Özeti -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pie-chart text-success me-2"></i>Bakiye Özeti
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="text-center">
                            <h6 class="text-muted mb-1">Müşteri Hesapları</h6>
                            <h4 class="text-primary mb-0">@Model.Where(a => a.AccountType == "Customer").Sum(a => a.CurrentBalance).ToString("C")</h4>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <h6 class="text-muted mb-1">Tedarikçi Hesapları</h6>
                            <h4 class="text-warning mb-0">@Model.Where(a => a.AccountType == "Supplier").Sum(a => a.CurrentBalance).ToString("C")</h4>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <h6 class="text-muted mb-1">Banka Hesapları</h6>
                            <h4 class="text-info mb-0">@Model.Where(a => a.AccountType == "Bank").Sum(a => a.CurrentBalance).ToString("C")</h4>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <h6 class="text-muted mb-1">Çalışan Hesapları</h6>
                            <h4 class="text-secondary mb-0">@Model.Where(a => a.AccountType == "Employee").Sum(a => a.CurrentBalance).ToString("C")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

 
