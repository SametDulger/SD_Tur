@model SDTur.Web.Models.Financial.Invoices.InvoiceCreateViewModel
@{
    ViewData["Title"] = "Yeni Fatura";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-plus-circle text-primary me-2"></i>Yeni Fatura
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Fatura Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="InvoiceNumber" class="form-label fw-semibold">
                                    <i class="bi bi-hash me-1"></i>Fatura Numarası <span class="text-danger">*</span>
                                </label>
                                <input asp-for="InvoiceNumber" class="form-control" placeholder="Fatura numarası..." required />
                                <span asp-validation-for="InvoiceNumber" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Currency" class="form-label fw-semibold">
                                    <i class="bi bi-currency-exchange me-1"></i>Para Birimi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Currency" class="form-select" required>
                                    <option value="">Para birimi seçiniz...</option>
                                    <option value="TRY">Türk Lirası (TRY)</option>
                                    <option value="USD">Amerikan Doları (USD)</option>
                                    <option value="EUR">Euro (EUR)</option>
                                    <option value="GBP">İngiliz Sterlini (GBP)</option>
                                    <option value="RUB">Rus Rublesi (RUB)</option>
                                </select>
                                <span asp-validation-for="Currency" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="InvoiceDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar me-1"></i>Fatura Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="InvoiceDate" type="date" class="form-control" required />
                                <span asp-validation-for="InvoiceDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="DueDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar-check me-1"></i>Vade Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="DueDate" type="date" class="form-control" required />
                                <span asp-validation-for="DueDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TotalAmount" class="form-label fw-semibold">
                                    <i class="bi bi-currency-exchange me-1"></i>Toplam Tutar <span class="text-danger">*</span>
                                </label>
                                <input asp-for="TotalAmount" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="TotalAmount" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="PassCompanyId" class="form-label fw-semibold">
                                    <i class="bi bi-building me-1"></i>Pas Şirketi
                                </label>
                                <select asp-for="PassCompanyId" id="passCompanySelect" class="form-select">
                                    <option value="">Pas şirketi seçiniz...</option>
                                </select>
                                <span asp-validation-for="PassCompanyId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveSwitch">
                                    <label class="form-check-label fw-semibold" for="isActiveSwitch">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </label>
                                </div>
                                <small class="text-muted">Bu fatura kaydının aktif olduğunu işaretleyin</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="Description" class="form-label fw-semibold">
                                    <i class="bi bi-text-paragraph me-1"></i>Açıklama
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Fatura hakkında açıklama..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Fatura Oluşturma
                        </h6>
                        <ul class="mb-0 small">
                            <li>Fatura numarası ve tarih bilgilerini girin</li>
                            <li>Para birimi ve toplam tutarı belirleyin</li>
                            <li>Vade tarihini belirleyin</li>
                            <li>Gerekirse pas şirketi seçin</li>
                            <li>Açıklama ekleyin</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load pass companies dynamically
        async function loadPassCompanies() {
            try {
                const response = await fetch('/api/passcompanies');
                const passCompanies = await response.json();
                const passCompanySelect = document.getElementById('passCompanySelect');
                
                passCompanies.forEach(company => {
                    const option = document.createElement('option');
                    option.value = company.id;
                    option.textContent = company.name;
                    passCompanySelect.appendChild(option);
                });
            } catch (error) {
                console.error('Error loading pass companies:', error);
            }
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            loadPassCompanies();
        });
    </script>
} 
