@model IEnumerable<SDTur.Application.DTOs.InvoiceDto>

@{
    ViewData["Title"] = "Faturalar";
}

<h1>Faturalar</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Fatura Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fatura No</th>
            <th>Tarih</th>
            <th>Pas Şirketi</th>
            <th>Toplam Tutar</th>
            <th>Para Birimi</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.InvoiceNumber</td>
                <td>@item.InvoiceDate.ToString("dd.MM.yyyy")</td>
                <td>@item.PassCompanyName</td>
                <td>@item.TotalAmount.ToString("N2")</td>
                <td>@item.Currency</td>
                <td>
                    @switch (item.Status)
                    {
                        case "Draft":
                            <span class="badge bg-secondary">Taslak</span>
                            break;
                        case "Sent":
                            <span class="badge bg-info">Gönderildi</span>
                            break;
                        case "Paid":
                            <span class="badge bg-success">Ödendi</span>
                            break;
                        case "Cancelled":
                            <span class="badge bg-danger">İptal</span>
                            break;
                        default:
                            <span class="badge bg-secondary">@item.Status</span>
                            break;
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table> 