@model SDTur.Application.DTOs.InvoiceDto

@{
    ViewData["Title"] = "Fatura Detayı";
}

<h1>Fatura Detayı</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Fatura Numarası</dt>
        <dd class="col-sm-10">@Model.InvoiceNumber</dd>
        
        <dt class="col-sm-2">Fatura Tarihi</dt>
        <dd class="col-sm-10">@Model.InvoiceDate.ToString("dd.MM.yyyy")</dd>
        
        <dt class="col-sm-2">Pas Şirketi</dt>
        <dd class="col-sm-10">@Model.PassCompanyName</dd>
        
        <dt class="col-sm-2">Toplam Tutar</dt>
        <dd class="col-sm-10">@Model.TotalAmount.ToString("N2") @Model.Currency</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @switch (Model.Status)
            {
                case "Draft":
                    <span class="badge bg-secondary">Taslak</span>
                    break;
                case "Sent":
                    <span class="badge bg-info">Gönderildi</span>
                    break;
                case "Paid":
                    <span class="badge bg-success">Ödendi</span>
                    break;
                case "Cancelled":
                    <span class="badge bg-danger">İptal</span>
                    break;
                default:
                    <span class="badge bg-secondary">@Model.Status</span>
                    break;
            }
        </dd>
        
        <dt class="col-sm-2">Notlar</dt>
        <dd class="col-sm-10">@Model.Notes</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-danger">Pasif</span>
            }
        </dd>
    </dl>
    
    @if (Model.InvoiceDetails != null && Model.InvoiceDetails.Any())
    {
        <h3>Fatura Detayları</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Açıklama</th>
                    <th>Tutar</th>
                    <th>Para Birimi</th>
                    <th>Tur Programı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model.InvoiceDetails)
                {
                    <tr>
                        <td>@detail.Description</td>
                        <td>@detail.Amount.ToString("N2")</td>
                        <td>@detail.Currency</td>
                        <td>@detail.TourScheduleInfo</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div> 