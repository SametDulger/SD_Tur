@model SDTur.Application.DTOs.CurrencyDto

@{
    ViewData["Title"] = "Para Birimi Sil";
}

<h1>Para Birimi Sil</h1>

<h3>Bu para birimini silmek istediğinizden emin misiniz?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Para Birimi Adı</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        
        <dt class="col-sm-2">Kod</dt>
        <dd class="col-sm-10">@Model.Code</dd>
        
        <dt class="col-sm-2">Sembol</dt>
        <dd class="col-sm-10">@Model.Symbol</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-danger">Pasif</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div> 