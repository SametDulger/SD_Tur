@model CurrencyViewModel
@{
    ViewData["Title"] = "Para Birimi Detayı";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-eye text-primary me-2"></i>Para Birimi Detayı
                </h1>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Para Birimi Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-hash me-1"></i>Kod
                            </label>
                            <div class="h5 mb-0 text-primary">@Model.Code</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-symbol me-1"></i>Sembol
                            </label>
                            <div>
                                <span class="badge bg-info fs-6">
                                    <i class="bi bi-symbol me-1"></i>@Model.Symbol
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-currency-exchange me-1"></i>Para Birimi Adı
                            </label>
                            <div class="h6 mb-0">@Model.Name</div>
                        </div>
                        

                    </div>


                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Para Birimi Bilgileri
                        </h6>
                        <ul class="mb-0 small">
                            <li>Para birimi kodu ve sembolü</li>
                            <li>Para birimi adı</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
