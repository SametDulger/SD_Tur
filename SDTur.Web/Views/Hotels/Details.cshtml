@model SDTur.Application.DTOs.HotelDto

@{
    ViewData["Title"] = "Otel Detayı";
}

<h1>Otel Detayı</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Otel Adı</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        
        <dt class="col-sm-2">Bölge</dt>
        <dd class="col-sm-10">@Model.RegionName</dd>
        
        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        
        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        
        <dt class="col-sm-2">E-posta</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-danger">Pasif</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div> 