@model SDTur.Web.Models.Master.Accommodation.HotelEditViewModel
@{
    ViewData["Title"] = "Otel Düzenle";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil text-primary me-2"></i>Otel Düzenle
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Otel Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label fw-semibold">
                                    <i class="bi bi-building me-1"></i>Otel Adı <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Otel adı..." required />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="StarRating" class="form-label fw-semibold">
                                    <i class="bi bi-star me-1"></i>Yıldız Sayısı <span class="text-danger">*</span>
                                </label>
                                <select asp-for="StarRating" class="form-select" required>
                                    <option value="">Yıldız seçiniz...</option>
                                    <option value="1">1 Yıldız</option>
                                    <option value="2">2 Yıldız</option>
                                    <option value="3">3 Yıldız</option>
                                    <option value="4">4 Yıldız</option>
                                    <option value="5">5 Yıldız</option>
                                </select>
                                <span asp-validation-for="StarRating" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label fw-semibold">
                                    <i class="bi bi-telephone me-1"></i>Telefon <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="Telefon numarası..." required />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-semibold">
                                    <i class="bi bi-envelope me-1"></i>E-posta <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="E-posta adresi..." required />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ContactPerson" class="form-label fw-semibold">
                                    <i class="bi bi-person me-1"></i>İletişim Kişisi
                                </label>
                                <input asp-for="ContactPerson" class="form-control" placeholder="İletişim kişisi..." />
                                <span asp-validation-for="ContactPerson" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="RegionId" class="form-label fw-semibold">
                                    <i class="bi bi-geo-alt me-1"></i>Bölge <span class="text-danger">*</span>
                                </label>
                                <select asp-for="RegionId" class="form-select" required>
                                    <option value="">Bölge seçiniz...</option>
                                    @if (ViewBag.Regions != null)
                                    {
                                        @foreach (var region in ViewBag.Regions)
                                        {
                                            <option value="@region.Id" selected="@(Model.RegionId == region.Id)">@region.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="RegionId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Order" class="form-label fw-semibold">
                                    <i class="bi bi-sort-numeric-up me-1"></i>Sıralama <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Order" type="number" class="form-control" placeholder="0" required />
                                <span asp-validation-for="Order" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveSwitch">
                                    <label class="form-check-label fw-semibold" for="isActiveSwitch">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </label>
                                </div>
                                <small class="text-muted">Bu otelin aktif olduğunu işaretleyin</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="Address" class="form-label fw-semibold">
                                    <i class="bi bi-geo-alt me-1"></i>Adres <span class="text-danger">*</span>
                                </label>
                                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Otel adresi..." required></textarea>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Otel Düzenleme
                        </h6>
                        <ul class="mb-0 small">
                            <li>Otel adı ve yıldız sayısını güncelleyin</li>
                            <li>İletişim bilgilerini düzenleyin</li>
                            <li>Adres ve bölge bilgilerini değiştirebilirsiniz</li>
                            <li>İletişim kişisi ve sıralama bilgilerini güncelleyin</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
