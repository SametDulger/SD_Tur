@model SDTur.Web.Models.Tour.Core.TourCreateViewModel
@{
    ViewData["Title"] = "Yeni Tur";
}

<div class="container">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Hata!</strong> Lütfen aşağıdaki hataları düzeltin:
            <ul class="mb-0 mt-2">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-airplane text-primary me-2"></i>Yeni Tur
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-plus-circle text-success me-2"></i>Tur Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">
                                    <i class="bi bi-airplane me-1"></i>Tur Adı
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Tur adını giriniz" required>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="TourTypeId" class="form-label">
                                    <i class="bi bi-tag me-1"></i>Tur Türü
                                </label>
                                <select asp-for="TourTypeId" class="form-select" required>
                                    <option value="">Tur türü seçiniz</option>
                                    @if (ViewBag.TourTypes != null)
                                    {
                                        @foreach (var tourType in ViewBag.TourTypes)
                                        {
                                            <option value="@tourType.Id">@tourType.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="TourTypeId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Duration" class="form-label">
                                    <i class="bi bi-clock me-1"></i>Süre (Saat)
                                </label>
                                <input asp-for="Duration" type="number" class="form-control" placeholder="0" min="1" required>
                                <span asp-validation-for="Duration" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Destination" class="form-label">
                                    <i class="bi bi-geo-alt me-1"></i>Destinasyon
                                </label>
                                <input asp-for="Destination" class="form-control" placeholder="Destinasyon giriniz" required>
                                <span asp-validation-for="Destination" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="TourDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>Tur Tarihi
                                </label>
                                <input asp-for="TourDate" type="date" class="form-control" required>
                                <span asp-validation-for="TourDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Capacity" class="form-label">
                                    <i class="bi bi-people me-1"></i>Kapasite
                                </label>
                                <input asp-for="Capacity" type="number" class="form-control" placeholder="0" min="1" required>
                                <span asp-validation-for="Capacity" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label">
                                    <i class="bi bi-currency-dollar me-1"></i>Fiyat
                                </label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" required>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Currency" class="form-label">
                                    <i class="bi bi-currency-exchange me-1"></i>Para Birimi
                                </label>
                                <select asp-for="Currency" class="form-select" required>
                                    <option value="">Para birimi seçiniz</option>
                                    <option value="TRY">Türk Lirası (₺)</option>
                                    <option value="USD">Amerikan Doları ($)</option>
                                    <option value="EUR">Euro (€)</option>
                                </select>
                                <span asp-validation-for="Currency" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">
                                    <i class="bi bi-text-paragraph me-1"></i>Tur Açıklaması
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Tur açıklaması" required></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <hr class="my-4">
                        
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <!-- Bilgi -->
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-lightbulb text-warning me-2"></i>Bilgi
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info shadow-sm small">
                        <ul class="mb-0">
                            <li>Tur adı benzersiz olmalıdır</li>
                            <li>Tur tarihi bugünden sonra olmalıdır</li>
                            <li>Kapasite en az 1 olmalıdır</li>
                            <li>Fiyat 0'dan büyük olmalıdır</li>
                            <li>Süre saat cinsinden girilmelidir</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
