@model IEnumerable<SDTur.Web.Models.Tour.Core.TourViewModel>
@{
    ViewData["Title"] = "Turlar";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-airplane text-primary me-2"></i>Turlar
            </h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni Tur
            </a>
        </div>
    </div>
</div>

<!-- Filtreler -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header border-0">
        <h6 class="card-title mb-0">
            <i class="bi bi-funnel text-info me-2"></i>Filtreler
        </h6>
    </div>
    <div class="card-body">
        <form class="row g-3">
            <div class="col-lg-3 col-md-6">
                <label class="form-label">Tur Türü</label>
                <select class="form-select">
                    <option value="">Tüm Tur Türleri</option>
                    <option value="Domestic">Yurt İçi</option>
                    <option value="International">Yurt Dışı</option>
                    <option value="DayTrip">Günübirlik</option>
                </select>
            </div>
            <div class="col-lg-3 col-md-6">
                <label class="form-label">Durum</label>
                <select class="form-select">
                    <option value="">Tüm Durumlar</option>
                    <option value="Active">Aktif</option>
                    <option value="Inactive">Pasif</option>
                    <option value="Completed">Tamamlandı</option>
                    <option value="Cancelled">İptal Edildi</option>
                </select>
            </div>
            <div class="col-lg-2 col-md-6">
                <label class="form-label">Başlangıç Tarihi</label>
                <input type="date" class="form-control">
            </div>
            <div class="col-lg-2 col-md-6">
                <label class="form-label">Bitiş Tarihi</label>
                <input type="date" class="form-control">
            </div>
            <div class="col-lg-2 col-md-12">
                <label class="form-label">&nbsp;</label>
                <div class="d-grid">
                    <button type="button" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise me-2"></i>Filtreleri Temizle
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- İstatistikler -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-airplane text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam Tur</h6>
                        <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-check-circle text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Aktif Tur</h6>
                        <h3 class="mb-0 fw-bold text-success">@Model.Count(t => t.IsActive)</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-calendar-event text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Yaklaşan Tur</h6>
                        <h3 class="mb-0 fw-bold text-warning">@Model.Count(t => t.StartDate > DateTime.Now)</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-people text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam Kapasite</h6>
                        <h3 class="mb-0 fw-bold text-info">@Model.Sum(t => t.TotalSeats)</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tur Listesi -->
<div class="card border-0 shadow-sm">
    <div class="card-header border-0">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ul me-2"></i>Tur Listesi
                </h5>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end gap-2">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="Tur ara...">
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-download me-1"></i>Dışa Aktar
                        </button>
                        <ul class="dropdown-menu shadow border-0">
                            <li><a class="dropdown-item" href="@Url.Action("ExportToExcel")">
                                <i class="bi bi-file-earmark-excel me-2"></i>Excel
                            </a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ExportToPDF")">
                                <i class="bi bi-file-earmark-pdf me-2"></i>PDF
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Tur Adı</th>
                        <th>Tur Türü</th>
                        <th>Başlangıç Tarihi</th>
                        <th>Süre</th>
                        <th>Kapasite</th>
                        <th>Fiyat</th>
                        <th>Durum</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var tour in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@tour.Name</div>
                                    <small class="text-muted">@tour.Destination</small>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@tour.TourType</span>
                                </td>
                                <td>@tour.StartDate.ToString("dd.MM.yyyy")</td>
                                <td>@tour.Duration gün</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="progress flex-grow-1 me-2" style="height: 6px;">
                                            @{
                                                var capacityPercentage = tour.TotalSeats > 0 ? (tour.BookedSeats * 100.0 / tour.TotalSeats) : 0;
                                            }
                                            <div class="progress-bar bg-@(capacityPercentage > 80 ? "success" : capacityPercentage > 50 ? "warning" : "danger")" 
                                                 style="width: @capacityPercentage%"></div>
                                        </div>
                                        <small>@tour.BookedSeats/@tour.TotalSeats</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="fw-semibold">@tour.Price.ToString("C")</span>
                                </td>
                                <td>
                                    @if (tour.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@tour.Id" class="btn btn-outline-info" title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@tour.Id" class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@tour.Id" class="btn btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4">
                                <i class="bi bi-inbox text-muted fs-1"></i>
                                <p class="text-muted mt-2">Tur bulunamadı</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-light">
        <div class="row align-items-center">
            <div class="col-md-6">
                <small class="text-muted">
                    Toplam <strong>@Model.Count()</strong> tur bulundu
                </small>
            </div>
            <div class="col-md-6 text-end">
                <small class="text-muted">
                    Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Yaklaşan Turlar -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header border-0">
                <h5 class="card-title mb-0">
                    <i class="bi bi-calendar-event text-success me-2"></i>Yaklaşan Turlar
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @{
                        var upcomingTours = Model.Where(t => t.StartDate > DateTime.Now && t.IsActive).Take(6);
                    }
                    @if (upcomingTours.Any())
                    {
                        @foreach (var tour in upcomingTours)
                        {
                            var capacityPercentage = tour.TotalSeats > 0 ? (tour.BookedSeats * 100.0 / tour.TotalSeats) : 0;
                            <div class="col-lg-4 col-md-6">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="card-title mb-0">@tour.Name</h6>
                                            <span class="badge bg-success">Aktif</span>
                                        </div>
                                        <p class="card-text text-muted small">@tour.Destination</p>
                                        <div class="row g-2 mb-3">
                                            <div class="col-6">
                                                <small class="text-muted">Başlangıç</small>
                                                <div class="fw-semibold">@tour.StartDate.ToString("dd.MM.yyyy")</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Süre</small>
                                                <div class="fw-semibold">@tour.Duration gün</div>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <small class="text-muted">Kapasite</small>
                                            <div class="d-flex align-items-center">
                                                <div class="progress flex-grow-1 me-2" style="height: 6px;">
                                                    <div class="progress-bar bg-@(capacityPercentage > 80 ? "success" : capacityPercentage > 50 ? "warning" : "danger")" 
                                                         style="width: @capacityPercentage%"></div>
                                                </div>
                                                <small class="fw-semibold">@tour.BookedSeats/@tour.TotalSeats</small>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <small class="text-muted">Doluluk</small>
                                                <div class="fw-semibold">%@capacityPercentage.ToString("F0")</div>
                                            </div>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Details" asp-route-id="@tour.Id" class="btn btn-outline-info" title="Görüntüle">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@tour.Id" class="btn btn-outline-primary" title="Düzenle">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="text-center py-4 text-muted">
                                <i class="bi bi-calendar-x fs-1"></i>
                                <p class="mt-2">Yaklaşan tur bulunamadı</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
