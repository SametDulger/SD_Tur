@model IEnumerable<SDTur.Application.DTOs.PassAgreementDto>

@{
    ViewData["Title"] = "Pas Anlaşmaları";
}

<h1>Pas Anlaşmaları</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Pas Anlaşması Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Pas Şirketi</th>
            <th>Tur</th>
            <th>Anlaşma Tarihi</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Fiyat</th>
            <th>Para Birimi</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PassCompanyName</td>
                <td>@item.TourName</td>
                <td>@item.AgreementDate.ToString("dd.MM.yyyy")</td>
                <td>@item.StartDate.ToString("dd.MM.yyyy")</td>
                <td>@item.EndDate.ToString("dd.MM.yyyy")</td>
                <td>@item.Price.ToString("N2")</td>
                <td>@item.CurrencyCode</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table> 