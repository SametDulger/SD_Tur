@model IEnumerable<SDTur.Web.Models.Master.Pass.PassAgreementViewModel>
@{
    ViewData["Title"] = "Pas Anlaşmaları";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-file-earmark-text text-primary me-2"></i>Pas Anlaşmaları
            </h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni Anlaşma
            </a>
        </div>
    </div>
</div>

<!-- İstatistikler -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-file-earmark-text text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam Anlaşma</h6>
                        <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-check-circle text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Aktif Anlaşma</h6>
                        <h3 class="mb-0 fw-bold text-success">@Model.Count(a => a.IsActive)</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-building text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Şirket Sayısı</h6>
                        <h3 class="mb-0 fw-bold text-info">@Model.Select(a => a.PassCompanyName).Distinct().Count()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-currency-dollar text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Ortalama Fiyat</h6>
                        <h3 class="mb-0 fw-bold text-warning">₺@Model.Average(a => a.OutgoingFullPrice).ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Anlaşma Listesi -->
<div class="card border-0 shadow-sm">
    <div class="card-header border-0">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ul me-2"></i>Anlaşma Listesi
                </h5>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end gap-2">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="Anlaşma ara...">
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-download me-1"></i>Dışa Aktar
                        </button>
                        <ul class="dropdown-menu shadow border-0">
                            <li><a class="dropdown-item" href="@Url.Action("ExportToExcel")">
                                <i class="bi bi-file-earmark-excel me-2"></i>Excel
                            </a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ExportToPDF")">
                                <i class="bi bi-file-earmark-pdf me-2"></i>PDF
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Şirket</th>
                        <th>Tur</th>
                        <th>Gidiş Tam</th>
                        <th>Gidiş Yarım</th>
                        <th>Dönüş Tam</th>
                        <th>Dönüş Yarım</th>
                        <th>Para Birimi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var agreement in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                        <i class="bi bi-building text-primary"></i>
                                    </div>
                                    <span class="fw-semibold">@agreement.PassCompanyName</span>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info">@agreement.TourName</span>
                            </td>
                            <td>
                                <span class="fw-semibold text-primary">₺@agreement.OutgoingFullPrice.ToString("N0")</span>
                            </td>
                            <td>
                                <span class="fw-semibold text-success">₺@agreement.OutgoingHalfPrice.ToString("N0")</span>
                            </td>
                            <td>
                                <span class="fw-semibold text-primary">₺@agreement.IncomingFullPrice.ToString("N0")</span>
                            </td>
                            <td>
                                <span class="fw-semibold text-success">₺@agreement.IncomingHalfPrice.ToString("N0")</span>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark">@agreement.Currency</span>
                            </td>
                            <td>
                                @if (agreement.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>Aktif
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle me-1"></i>Pasif
                                    </span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@agreement.Id" class="btn btn-outline-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@agreement.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@agreement.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-light">
        <div class="row align-items-center">
            <div class="col-md-6">
                <small class="text-muted">
                    Toplam <strong>@Model.Count()</strong> anlaşma bulundu
                </small>
            </div>
        </div>
    </div>
</div>


