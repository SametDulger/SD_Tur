@model SDTur.Web.Models.Master.Pass.PassAgreementEditViewModel
@{
    ViewData["Title"] = "Pas Anlaşması Düzenle";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil text-primary me-2"></i>Pas Anlaşması Düzenle
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Anlaşma Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PassCompanyId" class="form-label fw-semibold">
                                    <i class="bi bi-building me-1"></i>Pas Şirketi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="PassCompanyId" class="form-select" required>
                                    <option value="">Pas Şirketi seçiniz...</option>
                                    @if (ViewBag.PassCompanies != null)
                                    {
                                        @foreach (var company in ViewBag.PassCompanies)
                                        {
                                            <option value="@company.Id" selected="@(Model.PassCompanyId == company.Id)">@company.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="PassCompanyId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="AgreementNumber" class="form-label fw-semibold">
                                    <i class="bi bi-hash me-1"></i>Anlaşma Numarası <span class="text-danger">*</span>
                                </label>
                                <input asp-for="AgreementNumber" class="form-control" placeholder="Anlaşma numarası..." required />
                                <span asp-validation-for="AgreementNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar me-1"></i>Başlangıç Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="StartDate" type="date" class="form-control" required />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar me-1"></i>Bitiş Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="EndDate" type="date" class="form-control" required />
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CommissionRate" class="form-label fw-semibold">
                                    <i class="bi bi-percent me-1"></i>Komisyon Oranı <span class="text-danger">*</span>
                                </label>
                                <input asp-for="CommissionRate" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="CommissionRate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Currency" class="form-label fw-semibold">
                                    <i class="bi bi-currency-exchange me-1"></i>Para Birimi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Currency" class="form-select" required>
                                    <option value="">Para birimi seçiniz...</option>
                                    <option value="TRY">TRY - Türk Lirası</option>
                                    <option value="USD">USD - Amerikan Doları</option>
                                    <option value="EUR">EUR - Euro</option>
                                    <option value="GBP">GBP - İngiliz Sterlini</option>
                                </select>
                                <span asp-validation-for="Currency" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="OutgoingFullPrice" class="form-label fw-semibold">
                                    <i class="bi bi-currency-exchange me-1"></i>Gidiş Tam Fiyat <span class="text-danger">*</span>
                                </label>
                                <input asp-for="OutgoingFullPrice" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="OutgoingFullPrice" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="OutgoingHalfPrice" class="form-label fw-semibold">
                                    <i class="bi bi-currency-exchange me-1"></i>Gidiş Yarım Fiyat <span class="text-danger">*</span>
                                </label>
                                <input asp-for="OutgoingHalfPrice" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="OutgoingHalfPrice" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="IncomingFullPrice" class="form-label fw-semibold">
                                    <i class="bi bi-currency-exchange me-1"></i>Dönüş Tam Fiyat <span class="text-danger">*</span>
                                </label>
                                <input asp-for="IncomingFullPrice" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="IncomingFullPrice" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="IncomingHalfPrice" class="form-label fw-semibold">
                                    <i class="bi bi-currency-exchange me-1"></i>Dönüş Yarım Fiyat <span class="text-danger">*</span>
                                </label>
                                <input asp-for="IncomingHalfPrice" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="IncomingHalfPrice" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveSwitch">
                                    <label class="form-check-label fw-semibold" for="isActiveSwitch">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </label>
                                </div>
                                <small class="text-muted">Bu anlaşmanın aktif olduğunu işaretleyin</small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="Terms" class="form-label fw-semibold">
                                    <i class="bi bi-file-text me-1"></i>Anlaşma Şartları
                                </label>
                                <textarea asp-for="Terms" class="form-control" rows="4" placeholder="Anlaşma şartları..."></textarea>
                                <span asp-validation-for="Terms" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Pas Anlaşması Düzenleme
                        </h6>
                        <ul class="mb-0 small">
                            <li>Pas şirketi ve anlaşma numarasını güncelleyin</li>
                            <li>Tarih aralığı ve komisyon oranını düzenleyin</li>
                            <li>Gidiş-dönüş fiyatlarını değiştirebilirsiniz</li>
                            <li>Para birimi ve şartları güncelleyin</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
