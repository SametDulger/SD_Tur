@model SDTur.Web.Models.Master.Pass.PassAgreementViewModel
@{
    ViewData["Title"] = "Pas Anlaşması Detayı";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-eye text-primary me-2"></i>Pas Anlaşması Detayı
                </h1>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Anlaşma Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-hash me-1"></i>Anlaşma Numarası
                            </label>
                            <div class="h5 mb-0 text-primary">@Model.AgreementNumber</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-building me-1"></i>Pas Şirketi
                            </label>
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                    <i class="bi bi-building text-primary"></i>
                                </div>
                                <span class="fw-semibold">@Model.PassCompanyName</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-calendar me-1"></i>Başlangıç Tarihi
                            </label>
                            <div class="h6 mb-0">@Model.StartDate.ToString("dd MMMM yyyy")</div>
                            <small class="text-muted">@Model.StartDate.ToString("dddd")</small>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-calendar me-1"></i>Bitiş Tarihi
                            </label>
                            <div class="h6 mb-0">@Model.EndDate.ToString("dd MMMM yyyy")</div>
                            <small class="text-muted">@Model.EndDate.ToString("dddd")</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-percent me-1"></i>Komisyon Oranı
                            </label>
                            <div>
                                <span class="badge bg-info fs-6">
                                    <i class="bi bi-percent me-1"></i>%@Model.CommissionRate
                                </span>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-toggle-on me-1"></i>Durum
                            </label>
                            <div>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6">
                                        <i class="bi bi-toggle-off me-1"></i>Pasif
                                    </span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-currency-exchange me-1"></i>Gidiş Tam Fiyat
                            </label>
                            <div class="h4 mb-0 text-success">@Model.OutgoingFullPrice @Model.Currency</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-currency-exchange me-1"></i>Gidiş Yarım Fiyat
                            </label>
                            <div class="h4 mb-0 text-info">@Model.OutgoingHalfPrice @Model.Currency</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-currency-exchange me-1"></i>Dönüş Tam Fiyat
                            </label>
                            <div class="h4 mb-0 text-success">@Model.IncomingFullPrice @Model.Currency</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-currency-exchange me-1"></i>Dönüş Yarım Fiyat
                            </label>
                            <div class="h4 mb-0 text-info">@Model.IncomingHalfPrice @Model.Currency</div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Terms))
                    {
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label fw-semibold text-muted">
                                    <i class="bi bi-file-text me-1"></i>Anlaşma Şartları
                                </label>
                                <div class="p-3 bg-light rounded">
                                    @Model.Terms
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Pas Anlaşması Bilgileri
                        </h6>
                        <ul class="mb-0 small">
                            <li>Anlaşma numarası ve pas şirketi</li>
                            <li>Tarih aralığı ve komisyon oranı</li>
                            <li>Gidiş-dönüş fiyatları</li>
                            <li>Anlaşma şartları ve durum</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
