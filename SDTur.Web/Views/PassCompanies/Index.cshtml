@model IEnumerable<SDTur.Application.DTOs.PassCompanyDto>

@{
    ViewData["Title"] = "Pas Şirketleri";
}

<h1>Pas Şirketleri</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Pas Şirketi Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Şirket Adı</th>
            <th>İletişim Kişisi</th>
            <th>Telefon</th>
            <th>E-posta</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.ContactPerson</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Pasif</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table> 