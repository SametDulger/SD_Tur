@model SDTur.Web.Models.Master.Pass.PassCompanyViewModel
@{
    ViewData["Title"] = "Pas Şirketi Detayı";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-building text-primary me-2"></i>Pas Şirketi Detayı
            </h1>
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil me-2"></i>Düzenle
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Şirket Bilgileri -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle text-info me-2"></i>Şirket Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label text-muted">Şirket Adı</label>
                        <div class="fw-bold text-primary">@Model.Name</div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">İletişim Kişisi</label>
                        <div class="fw-semibold">@Model.ContactPerson</div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Telefon</label>
                        <div>
                            <a href="tel:@Model.Phone" class="text-decoration-none">
                                <i class="bi bi-telephone me-1"></i>@Model.Phone
                            </a>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">E-posta</label>
                        <div>
                            <a href="mailto:@Model.Email" class="text-decoration-none">
                                <i class="bi bi-envelope me-1"></i>@Model.Email
                            </a>
                        </div>
                    </div>
                    
                    <div class="col-12">
                        <label class="form-label text-muted">Adres</label>
                        <div>@(string.IsNullOrEmpty(Model.Address) ? "Adres girilmemiş" : Model.Address)</div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Durum</label>
                        <div>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Aktif
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle me-1"></i>Pasif
                                </span>
                            }
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label text-muted">Oluşturma Tarihi</label>
                        <div>@Model.CreatedDate.ToString("dd.MM.yyyy")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- İstatistikler -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-graph-up text-success me-2"></i>İstatistikler
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-12">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                    <i class="bi bi-file-earmark-text text-primary"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="card-title text-muted mb-1">Toplam Anlaşma</h6>
                                <h4 class="mb-0 fw-bold">@Model.TotalAgreements</h4>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                    <i class="bi bi-check-circle text-success"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="card-title text-muted mb-1">Aktif Anlaşma</h6>
                                <h4 class="mb-0 fw-bold text-success">@Model.ActiveAgreements</h4>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                    <i class="bi bi-currency-dollar text-info"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="card-title text-muted mb-1">Toplam Ciro</h6>
                                <h4 class="mb-0 fw-bold text-info">@Model.TotalRevenue.ToString("C")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Anlaşmalar Listesi -->
@if (Model.HasAgreements)
{
    <div class="row g-4 mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-file-earmark-text text-warning me-2"></i>Anlaşmalar
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        Bu şirkete ait anlaşmalar bulunmaktadır. Detayları görmek için anlaşmalar sayfasını ziyaret ediniz.
                    </div>
                    <a asp-controller="PassAgreements" asp-action="Index" asp-route-passCompanyId="@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-right me-2"></i>Anlaşmaları Görüntüle
                    </a>
                </div>
            </div>
        </div>
    </div>
}
