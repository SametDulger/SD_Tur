@model SDTur.Application.DTOs.PassCompanyDto

@{
    ViewData["Title"] = "Pas Şirketi Sil";
}

<h1>Pas Şirketi Sil</h1>

<h3>Bu pas şirketini silmek istediğinizden emin misiniz?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Şirket Adı</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        
        <dt class="col-sm-2">İletişim Kişisi</dt>
        <dd class="col-sm-10">@Model.ContactPerson</dd>
        
        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        
        <dt class="col-sm-2">E-posta</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-danger">Pasif</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div> 