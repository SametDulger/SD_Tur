@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Tur Raporları";
}

<h1>Tur Raporları</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Rapor</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Rapor Tarihi</th>
            <th>Rapor Tipi</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Tur Adı</th>
            <th>Toplam Tam</th>
            <th>Toplam Yarım</th>
            <th>Toplam Misafir</th>
            <th>Toplam Gelir</th>
            <th>Toplam Gider</th>
            <th>Net Kar</th>
            <th>Para Birimi</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.reportDate?.ToString("dd.MM.yyyy")</td>
                <td>@item.reportType</td>
                <td>@item.startDate?.ToString("dd.MM.yyyy")</td>
                <td>@item.endDate?.ToString("dd.MM.yyyy")</td>
                <td>@item.tourName</td>
                <td>@item.totalFullCount</td>
                <td>@item.totalHalfCount</td>
                <td>@item.totalGuestCount</td>
                <td>@item.totalIncome</td>
                <td>@item.totalExpense</td>
                <td>@item.netProfit</td>
                <td>@item.currency</td>
                <td>@item.status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table> 