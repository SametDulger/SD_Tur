@model IEnumerable<SDTur.Web.Models.Tour.Financial.TourReportViewModel>
@{
    ViewData["Title"] = "Tur Raporları";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-file-earmark-text text-primary me-2"></i>Tur Raporları
            </h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni Rapor
            </a>
        </div>
    </div>
</div>

<!-- İstatistikler -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-file-earmark-text text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Toplam Rapor</h6>
                        <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-check-circle text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Onaylanan</h6>
                        <h3 class="mb-0 fw-bold text-success">@Model.Count(x => x.Status == "Approved")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-clock text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Bekleyen</h6>
                        <h3 class="mb-0 fw-bold text-warning">@Model.Count(x => x.Status == "Pending")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-person text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Yazar Sayısı</h6>
                        <h3 class="mb-0 fw-bold text-info">@Model.Select(x => x.AuthorName).Distinct().Count()</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Rapor Listesi -->
<div class="card border-0 shadow-sm">
    <div class="card-header border-0">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h5 class="card-title mb-0">
                    <i class="bi bi-list-ul me-2"></i>Rapor Listesi
                </h5>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end gap-2">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="Rapor ara...">
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="bi bi-download me-1"></i>Dışa Aktar
                        </button>
                        <ul class="dropdown-menu shadow border-0">
                            <li><a class="dropdown-item" href="@Url.Action("ExportToExcel")">
                                <i class="bi bi-file-earmark-excel me-2"></i>Excel
                            </a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ExportToPDF")">
                                <i class="bi bi-file-earmark-pdf me-2"></i>PDF
                            </a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Rapor No</th>
                        <th>Tur</th>
                        <th>Rapor Türü</th>
                        <th>Yazar</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var report in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-semibold">@report.ReportNumber</span>
                                </td>
                                <td>@report.TourName</td>
                                <td>
                                    @{
                                        var reportTypeText = report.ReportType switch
                                        {
                                            "Daily" => "Günlük",
                                            "Weekly" => "Haftalık",
                                            "Monthly" => "Aylık",
                                            "Final" => "Final",
                                            _ => report.ReportType
                                        };
                                    }
                                    <span class="badge bg-secondary">@reportTypeText</span>
                                </td>
                                <td>@report.AuthorName</td>
                                <td>@report.ReportDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @{
                                        var statusClass = report.Status switch
                                        {
                                            "Approved" => "badge bg-success",
                                            "Pending" => "badge bg-warning",
                                            "Rejected" => "badge bg-danger",
                                            _ => "badge bg-light text-dark"
                                        };
                                        var statusText = report.Status switch
                                        {
                                            "Approved" => "Onaylandı",
                                            "Pending" => "Beklemede",
                                            "Rejected" => "Reddedildi",
                                            _ => report.Status
                                        };
                                    }
                                    <span class="@statusClass">@statusText</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@report.Id" class="btn btn-outline-info" title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@report.Id" class="btn btn-outline-primary" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@report.Id" class="btn btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <i class="bi bi-inbox text-muted fs-1"></i>
                                <p class="text-muted mt-2">Rapor bulunamadı</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-light">
        <div class="row align-items-center">
            <div class="col-md-6">
                <small class="text-muted">
                    Toplam <strong>@Model.Count()</strong> rapor bulundu
                </small>
            </div>
            <div class="col-md-6 text-end">
                <small class="text-muted">
                    Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Rapor Dağılımı -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header border-0">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pie-chart text-info me-2"></i>Rapor Dağılımı
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @foreach (var reportType in Model.GroupBy(x => x.ReportType).Take(4))
                    {
                        var reportTypeText = reportType.Key switch
                        {
                            "Daily" => "Günlük",
                            "Weekly" => "Haftalık",
                            "Monthly" => "Aylık",
                            "Final" => "Final",
                            _ => reportType.Key
                        };
                        <div class="col-md-3">
                            <div class="text-center">
                                <h6 class="text-muted mb-1">@reportTypeText</h6>
                                <h4 class="text-primary mb-0">@reportType.Count()</h4>
                                <small class="text-muted">rapor</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
