@model SDTur.Web.Models.Tour.Financial.TourReportViewModel
@{
    ViewData["Title"] = "Tur Raporu Detayı";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-eye text-primary me-2"></i>Tur Raporu Detayı
            </h1>
            <div class="btn-group" role="group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil me-2"></i>Düzenle
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle me-2"></i>Rapor Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-airplane me-1"></i>Tur
                        </label>
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                <i class="bi bi-airplane text-primary"></i>
                            </div>
                            <div>
                                <div class="fw-semibold">@Model.TourName</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-file-earmark-text me-1"></i>Rapor Türü
                        </label>
                        <div>
                            <span class="badge bg-info bg-opacity-75 fs-6">@Model.ReportType</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-person me-1"></i>Yazar
                        </label>
                        <div class="d-flex align-items-center">
                            <div class="bg-success bg-opacity-10 rounded-circle p-2 me-2">
                                <i class="bi bi-person text-success"></i>
                            </div>
                            <span class="fw-semibold">@Model.Author</span>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-calendar me-1"></i>Rapor Tarihi
                        </label>
                        <div class="h6 mb-0">@Model.ReportDate.ToString("dd MMMM yyyy")</div>
                        <small class="text-muted">@Model.ReportDate.ToString("dddd")</small>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold text-muted">
                            <i class="bi bi-check-circle me-1"></i>Onay Durumu
                        </label>
                        <div>
                            @if (Model.IsApproved)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle me-1"></i>Onaylandı
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning fs-6">
                                    <i class="bi bi-clock me-1"></i>Beklemede
                                </span>
                            }
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted">
                        <i class="bi bi-text-paragraph me-1"></i>Rapor İçeriği
                    </label>
                    <div class="p-3 bg-light rounded">
                        @Model.Content
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-gear me-2"></i>Sistem Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 mb-2">
                        <label class="form-label fw-semibold text-muted small">Rapor ID</label>
                        <div class="text-muted">#@Model.Id</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-lightning me-2"></i>Hızlı İşlemler
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash me-2"></i>Sil
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-list me-2"></i>Listeye Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
