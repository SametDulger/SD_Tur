@model SDTur.Application.DTOs.UpdateCommissionCalculationDto

@{
    ViewData["Title"] = "Komisyon Hesaplaması Düzenle";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Komisyon Hesaplaması Düzenle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="form-group">
                            <label asp-for="EmployeeId" class="control-label">Çalışan</label>
                            <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees">
                                <option value="">Çalışan Seçin</option>
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="TicketId" class="control-label">Bilet</label>
                            <select asp-for="TicketId" class="form-control" asp-items="ViewBag.Tickets">
                                <option value="">Bilet Seçin</option>
                            </select>
                            <span asp-validation-for="TicketId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="TourScheduleId" class="control-label">Tur Programı</label>
                            <select asp-for="TourScheduleId" class="form-control" asp-items="ViewBag.TourSchedules">
                                <option value="">Tur Programı Seçin</option>
                            </select>
                            <span asp-validation-for="TourScheduleId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="CommissionAmount" class="control-label">Komisyon Tutarı</label>
                            <input asp-for="CommissionAmount" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="CommissionAmount" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="CommissionRate" class="control-label">Komisyon Oranı (%)</label>
                            <input asp-for="CommissionRate" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="CommissionRate" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Currency" class="control-label">Para Birimi</label>
                            <select asp-for="Currency" class="form-control">
                                <option value="USD">USD</option>
                                <option value="EUR">EUR</option>
                                <option value="TRY">TRY</option>
                            </select>
                            <span asp-validation-for="Currency" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="CommissionType" class="control-label">Komisyon Tipi</label>
                            <select asp-for="CommissionType" class="form-control">
                                <option value="Percentage">Yüzde</option>
                                <option value="Fixed">Sabit</option>
                            </select>
                            <span asp-validation-for="CommissionType" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="CalculationDate" class="control-label">Hesaplama Tarihi</label>
                            <input asp-for="CalculationDate" class="form-control" type="date" />
                            <span asp-validation-for="CalculationDate" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Status" class="control-label">Durum</label>
                            <select asp-for="Status" class="form-control">
                                <option value="Pending">Beklemede</option>
                                <option value="Approved">Onaylandı</option>
                                <option value="Paid">Ödendi</option>
                                <option value="Rejected">Reddedildi</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Notes" class="control-label">Notlar</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 