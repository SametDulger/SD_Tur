@model SDTur.Application.DTOs.CommissionCalculationDto

@{
    ViewData["Title"] = "Komisyon Hesaplaması Detayı";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Komisyon Hesaplaması Detayı</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.Id</dd>
                        
                        <dt class="col-sm-3">Çalışan</dt>
                        <dd class="col-sm-9">@Model.EmployeeName</dd>
                        
                        <dt class="col-sm-3">Bilet</dt>
                        <dd class="col-sm-9">@Model.TicketInfo</dd>
                        
                        <dt class="col-sm-3">Tur Programı</dt>
                        <dd class="col-sm-9">@Model.TourScheduleInfo</dd>
                        
                        <dt class="col-sm-3">Komisyon Tutarı</dt>
                        <dd class="col-sm-9">@Model.CommissionAmount.ToString("N2") @Model.Currency</dd>
                        
                        <dt class="col-sm-3">Komisyon Oranı</dt>
                        <dd class="col-sm-9">%@Model.CommissionRate.ToString("N2")</dd>
                        
                        <dt class="col-sm-3">Komisyon Tipi</dt>
                        <dd class="col-sm-9">@Model.CommissionType</dd>
                        
                        <dt class="col-sm-3">Hesaplama Tarihi</dt>
                        <dd class="col-sm-9">@Model.CalculationDate.ToString("dd.MM.yyyy")</dd>
                        
                        <dt class="col-sm-3">Durum</dt>
                        <dd class="col-sm-9">
                            @switch (Model.Status)
                            {
                                case "Pending":
                                    <span class="badge badge-warning">Beklemede</span>
                                    break;
                                case "Approved":
                                    <span class="badge badge-success">Onaylandı</span>
                                    break;
                                case "Paid":
                                    <span class="badge badge-info">Ödendi</span>
                                    break;
                                case "Rejected":
                                    <span class="badge badge-danger">Reddedildi</span>
                                    break;
                                default:
                                    <span class="badge badge-secondary">@Model.Status</span>
                                    break;
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Notlar</dt>
                        <dd class="col-sm-9">@Model.Notes</dd>
                        
                        <dt class="col-sm-3">Oluşturulma Tarihi</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
                        
                        <dt class="col-sm-3">Güncellenme Tarihi</dt>
                        <dd class="col-sm-9">@(Model.UpdatedDate?.ToString("dd.MM.yyyy HH:mm") ?? "-")</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                </div>
            </div>
        </div>
    </div>
</div> 