@model SDTur.Web.Models.Financial.Transactions.CommissionCalculationCreateViewModel
@{
    ViewData["Title"] = "Yeni Komisyon Hesaplaması";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-plus-circle text-primary me-2"></i>Yeni Komisyon Hesaplaması
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Komisyon Hesaplaması Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="EmployeeId" class="form-label">
                                    <i class="bi bi-person me-1"></i>Çalışan <span class="text-danger">*</span>
                                </label>
                                <select asp-for="EmployeeId" class="form-select" required>
                                    <option value="">Çalışan seçiniz...</option>
                                    @if (ViewBag.Employees != null)
                                    {
                                        @foreach (var employee in ViewBag.Employees)
                                        {
                                            <option value="@employee.Id">@employee.FullName</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="CommissionType" class="form-label">
                                    <i class="bi bi-tag me-1"></i>Komisyon Türü <span class="text-danger">*</span>
                                </label>
                                <select asp-for="CommissionType" class="form-select" required>
                                    <option value="">Komisyon türü seçiniz...</option>
                                    <option value="Tour">Tur</option>
                                    <option value="Ticket">Bilet</option>
                                    <option value="Service">Hizmet</option>
                                    <option value="Other">Diğer</option>
                                </select>
                                <span asp-validation-for="CommissionType" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="TourScheduleId" class="form-label">
                                    <i class="bi bi-calendar-event me-1"></i>Tur Programı
                                </label>
                                <select asp-for="TourScheduleId" class="form-select">
                                    <option value="">Tur programı seçiniz...</option>
                                    @if (ViewBag.TourSchedules != null)
                                    {
                                        @foreach (var schedule in ViewBag.TourSchedules)
                                        {
                                            <option value="@schedule.Id">@schedule.TourName - @schedule.StartDate.ToString("dd.MM.yyyy")</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="TourScheduleId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="TicketId" class="form-label">
                                    <i class="bi bi-ticket me-1"></i>Bilet
                                </label>
                                <select asp-for="TicketId" class="form-select">
                                    <option value="">Bilet seçiniz...</option>
                                    @if (ViewBag.Tickets != null)
                                    {
                                        @foreach (var ticket in ViewBag.Tickets)
                                        {
                                            <option value="@ticket.Id">@ticket.TicketNumber - @ticket.CustomerName</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="TicketId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="CalculationDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>Hesaplama Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="CalculationDate" type="date" class="form-control" required />
                                <span asp-validation-for="CalculationDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="CommissionRate" class="form-label">
                                    <i class="bi bi-percent me-1"></i>Komisyon Oranı (%) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="CommissionRate" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="CommissionRate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="CommissionAmount" class="form-label">
                                    <i class="bi bi-currency-exchange me-1"></i>Komisyon Tutarı <span class="text-danger">*</span>
                                </label>
                                <input asp-for="CommissionAmount" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="CommissionAmount" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Currency" class="form-label">
                                    <i class="bi bi-currency-exchange me-1"></i>Para Birimi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Currency" class="form-select" required>
                                    <option value="">Para birimi seçiniz...</option>
                                    @if (ViewBag.Currencies != null)
                                    {
                                        @foreach (var currency in ViewBag.Currencies)
                                        {
                                            <option value="@currency.Code">@currency.Name (@currency.Code)</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Currency" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label">
                                    <i class="bi bi-check-circle me-1"></i>Durum <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Status" class="form-select" required>
                                    <option value="">Durum seçiniz...</option>
                                    <option value="Hesaplandı">Hesaplandı</option>
                                    <option value="Onaylandı">Onaylandı</option>
                                    <option value="Ödendi">Ödendi</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">
                                <i class="bi bi-text-paragraph me-1"></i>Notlar
                            </label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Komisyon hesaplaması hakkında notlar..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header border-0">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle text-info me-2"></i>Bilgi
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info shadow-sm mb-3">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Komisyon Hesaplaması
                        </h6>
                        <p class="mb-0 small">
                            Komisyon hesaplamaları, çalışanların tur ve bilet satışlarından aldığı komisyonları 
                            takip etmek için kullanılır. Hesaplama tarihi ve oranı doğru girilmelidir.
                        </p>
                    </div>
                    
                    <div class="alert alert-warning shadow-sm">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Önemli Notlar
                        </h6>
                        <ul class="mb-0 small">
                            <li>Çalışan ve komisyon türü zorunludur</li>
                            <li>Hesaplama tarihi geçmiş bir tarih olabilir</li>
                            <li>Komisyon oranı yüzde olarak girilir</li>
                            <li>Tur programı veya bilet seçilebilir</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
