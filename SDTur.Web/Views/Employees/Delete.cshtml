@model SDTur.Application.DTOs.EmployeeDto

@{
    ViewData["Title"] = "Çalışan Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Çalışan Sil</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5>Bu çalışanı silmek istediğinizden emin misiniz?</h5>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.Id</dd>
                        
                        <dt class="col-sm-3">Ad Soyad</dt>
                        <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>
                        
                        <dt class="col-sm-3">E-posta</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                        
                        <dt class="col-sm-3">Telefon</dt>
                        <dd class="col-sm-9">@Model.Phone</dd>
                        
                        <dt class="col-sm-3">Pozisyon</dt>
                        <dd class="col-sm-9">@Model.Position</dd>
                        
                        <dt class="col-sm-3">Maaş</dt>
                        <dd class="col-sm-9">@Model.Salary.ToString("N2") @Model.CurrencyCode</dd>
                        
                        <dt class="col-sm-3">Komisyon Oranı</dt>
                        <dd class="col-sm-9">%@Model.CommissionRate.ToString("N2")</dd>
                        
                        <dt class="col-sm-3">İşe Başlama Tarihi</dt>
                        <dd class="col-sm-9">@Model.HireDate.ToString("dd.MM.yyyy")</dd>
                        
                        <dt class="col-sm-3">Şube</dt>
                        <dd class="col-sm-9">@Model.BranchName</dd>
                        
                        <dt class="col-sm-3">Durum</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge badge-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Pasif</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 