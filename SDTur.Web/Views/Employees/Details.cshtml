@model SDTur.Application.DTOs.EmployeeDto

@{
    ViewData["Title"] = "Çalışan Detayı";
}

<h1>Çalışan Detayı</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Ad Soyad</dt>
        <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>
        
        <dt class="col-sm-2">E-posta</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        
        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        
        <dt class="col-sm-2">Şube</dt>
        <dd class="col-sm-10">@Model.BranchName</dd>
        
        <dt class="col-sm-2">Pozisyon</dt>
        <dd class="col-sm-10">@Model.Position</dd>
        
        <dt class="col-sm-2">İşe Başlama Tarihi</dt>
        <dd class="col-sm-10">@Model.HireDate.ToString("dd.MM.yyyy")</dd>
        
        <dt class="col-sm-2">Maaş</dt>
        <dd class="col-sm-10">@Model.Salary.ToString("N2") @Model.Currency</dd>
        
        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-danger">Pasif</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</div> 