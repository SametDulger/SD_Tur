@model SDTur.Web.Models.Master.People.EmployeeViewModel
@{
    ViewData["Title"] = "Çalışan Detayı";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-eye text-primary me-2"></i>Çalışan Detayı
                </h1>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil me-2"></i>Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Çalışan Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-person me-1"></i>Ad Soyad
                            </label>
                            <div class="h5 mb-0 text-primary">@Model.FirstName @Model.LastName</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-briefcase me-1"></i>Pozisyon
                            </label>
                            <div>
                                <span class="badge bg-info fs-6">@Model.Position</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-envelope me-1"></i>E-posta
                            </label>
                            <div class="h6 mb-0">
                                <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-telephone me-1"></i>Telefon
                            </label>
                            <div class="h6 mb-0">
                                <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-building me-1"></i>Şube
                            </label>
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                    <i class="bi bi-building text-primary"></i>
                                </div>
                                <span class="fw-semibold">@Model.BranchName</span>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-calendar me-1"></i>İşe Başlama Tarihi
                            </label>
                            <div class="h6 mb-0">@Model.HireDate.ToString("dd MMMM yyyy")</div>
                            <small class="text-muted">@Model.HireDate.ToString("dddd")</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-cash me-1"></i>Maaş
                            </label>
                            <div class="h4 mb-0 text-success">@Model.Salary.ToString("C")</div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-percent me-1"></i>Komisyon Oranı
                            </label>
                            <div class="h4 mb-0 text-info">%@Model.CommissionRate</div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold text-muted">
                                <i class="bi bi-toggle-on me-1"></i>Durum
                            </label>
                            <div>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6">
                                        <i class="bi bi-toggle-off me-1"></i>Pasif
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Çalışan Bilgileri
                        </h6>
                        <ul class="mb-0 small">
                            <li>Kişisel bilgiler ve pozisyon</li>
                            <li>İletişim bilgileri</li>
                            <li>Şube ve işe başlama tarihi</li>
                            <li>Maaş ve komisyon bilgileri</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
