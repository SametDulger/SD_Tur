@model SDTur.Web.Models.Master.People.EmployeeEditViewModel
@{
    ViewData["Title"] = "Çalışan Düzenle";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil text-primary me-2"></i>Çalışan Düzenle
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Çalışan Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label fw-semibold">
                                    <i class="bi bi-person me-1"></i>Ad <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FirstName" class="form-control" placeholder="Adınız..." required />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label fw-semibold">
                                    <i class="bi bi-person me-1"></i>Soyad <span class="text-danger">*</span>
                                </label>
                                <input asp-for="LastName" class="form-control" placeholder="Soyadınız..." required />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-semibold">
                                    <i class="bi bi-envelope me-1"></i>E-posta <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com" required />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label fw-semibold">
                                    <i class="bi bi-telephone me-1"></i>Telefon <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="0555 123 45 67" required />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Position" class="form-label fw-semibold">
                                    <i class="bi bi-briefcase me-1"></i>Pozisyon <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Position" class="form-select" required>
                                    <option value="">Pozisyon seçiniz...</option>
                                    <option value="Müdür">Müdür</option>
                                    <option value="Satış Temsilcisi">Satış Temsilcisi</option>
                                    <option value="Muhasebeci">Muhasebeci</option>
                                    <option value="Operasyon Uzmanı">Operasyon Uzmanı</option>
                                    <option value="Rehber">Rehber</option>
                                    <option value="Şoför">Şoför</option>
                                    <option value="Diğer">Diğer</option>
                                </select>
                                <span asp-validation-for="Position" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="BranchId" class="form-label fw-semibold">
                                    <i class="bi bi-building me-1"></i>Şube <span class="text-danger">*</span>
                                </label>
                                <select asp-for="BranchId" class="form-select" required>
                                    <option value="">Şube seçiniz...</option>
                                </select>
                                <span asp-validation-for="BranchId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="HireDate" class="form-label fw-semibold">
                                    <i class="bi bi-calendar me-1"></i>İşe Başlama Tarihi <span class="text-danger">*</span>
                                </label>
                                <input asp-for="HireDate" type="date" class="form-control" required />
                                <span asp-validation-for="HireDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="CurrencyId" class="form-label fw-semibold">
                                    <i class="bi bi-currency-exchange me-1"></i>Para Birimi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="CurrencyId" class="form-select" required>
                                    <option value="">Para birimi seçiniz...</option>
                                </select>
                                <span asp-validation-for="CurrencyId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Salary" class="form-label fw-semibold">
                                    <i class="bi bi-cash me-1"></i>Maaş <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Salary" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="Salary" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="CommissionRate" class="form-label fw-semibold">
                                    <i class="bi bi-percent me-1"></i>Komisyon Oranı <span class="text-danger">*</span>
                                </label>
                                <input asp-for="CommissionRate" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="CommissionRate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveSwitch">
                                    <label class="form-check-label fw-semibold" for="isActiveSwitch">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </label>
                                </div>
                                <small class="text-muted">Bu çalışanın aktif olduğunu işaretleyin</small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Bilgi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Çalışan Düzenleme
                        </h6>
                        <ul class="mb-0 small">
                            <li>Kişisel bilgileri güncelleyin</li>
                            <li>İletişim bilgilerini düzenleyin</li>
                            <li>Pozisyon ve şube bilgilerini değiştirebilirsiniz</li>
                            <li>Maaş ve komisyon oranını güncelleyin</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
