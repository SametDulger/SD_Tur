@model SDTur.Web.Models.Financial.Transactions.InvoiceDetailEditViewModel
@{
    ViewData["Title"] = "Fatura Detayý Düzenle";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil text-warning me-2"></i>Fatura Detayý Düzenle
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-receipt me-2"></i>Detay Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="InvoiceId" class="form-label">
                                    <i class="bi bi-receipt me-1"></i>Fatura ID
                                </label>
                                <input asp-for="InvoiceId" type="number" class="form-control" placeholder="Fatura ID giriniz">
                                <span asp-validation-for="InvoiceId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="InvoiceNumber" class="form-label">
                                    <i class="bi bi-hash me-1"></i>Fatura Numarasý
                                </label>
                                <input asp-for="InvoiceNumber" class="form-control" placeholder="Fatura numarasý giriniz">
                                <span asp-validation-for="InvoiceNumber" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="ProductName" class="form-label">
                                    <i class="bi bi-box me-1"></i>Ürün/Hizmet Adý
                                </label>
                                <input asp-for="ProductName" class="form-control" placeholder="Ürün veya hizmet adý giriniz">
                                <span asp-validation-for="ProductName" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="ProductCode" class="form-label">
                                    <i class="bi bi-upc me-1"></i>Ürün Kodu
                                </label>
                                <input asp-for="ProductCode" class="form-control" placeholder="Ürün kodu giriniz">
                                <span asp-validation-for="ProductCode" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Quantity" class="form-label">
                                    <i class="bi bi-123 me-1"></i>Miktar
                                </label>
                                <input asp-for="Quantity" type="number" step="0.01" class="form-control" placeholder="0.00">
                                <span asp-validation-for="Quantity" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Unit" class="form-label">
                                    <i class="bi bi-rulers me-1"></i>Birim
                                </label>
                                <select asp-for="Unit" class="form-select">
                                    <option value="">Birim seçiniz</option>
                                    <option value="Adet">Adet</option>
                                    <option value="Kg">Kg</option>
                                    <option value="Litre">Litre</option>
                                    <option value="Metre">Metre</option>
                                    <option value="Saat">Saat</option>
                                    <option value="Gün">Gün</option>
                                </select>
                                <span asp-validation-for="Unit" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="UnitPrice" class="form-label">
                                    <i class="bi bi-currency-dollar me-1"></i>Birim Fiyat
                                </label>
                                <div class="input-group">
                                    <input asp-for="UnitPrice" type="number" step="0.01" class="form-control" placeholder="0.00">
                                    <span class="input-group-text">?</span>
                                </div>
                                <span asp-validation-for="UnitPrice" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="VatRate" class="form-label">
                                    <i class="bi bi-percent me-1"></i>KDV Oraný (%)
                                </label>
                                <input asp-for="VatRate" type="number" step="0.01" class="form-control" placeholder="0.00">
                                <span asp-validation-for="VatRate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="VatAmount" class="form-label">
                                    <i class="bi bi-calculator me-1"></i>KDV Tutarý
                                </label>
                                <div class="input-group">
                                    <input asp-for="VatAmount" type="number" step="0.01" class="form-control" placeholder="0.00">
                                    <span class="input-group-text">?</span>
                                </div>
                                <span asp-validation-for="VatAmount" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="TotalAmount" class="form-label">
                                    <i class="bi bi-calculator me-1"></i>Toplam Tutar
                                </label>
                                <div class="input-group">
                                    <input asp-for="TotalAmount" type="number" step="0.01" class="form-control" placeholder="0.00">
                                    <span class="input-group-text">?</span>
                                </div>
                                <span asp-validation-for="TotalAmount" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">
                                    <i class="bi bi-file-text me-1"></i>Açýklama
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Detay açýklamasý giriniz"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-2"></i>Ýptal
                                    </a>
                                    <button type="submit" class="btn btn-warning">
                                        <i class="bi bi-check-circle me-2"></i>Güncelle
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Otomatik hesaplama
            $('#Quantity, #UnitPrice, #VatRate').on('input', function() {
                var quantity = parseFloat($('#Quantity').val()) || 0;
                var unitPrice = parseFloat($('#UnitPrice').val()) || 0;
                var vatRate = parseFloat($('#VatRate').val()) || 0;
                
                var subtotal = quantity * unitPrice;
                var vatAmount = subtotal * (vatRate / 100);
                var totalAmount = subtotal + vatAmount;
                
                $('#VatAmount').val(vatAmount.toFixed(2));
                $('#TotalAmount').val(totalAmount.toFixed(2));
            });
        });
    </script>
}
