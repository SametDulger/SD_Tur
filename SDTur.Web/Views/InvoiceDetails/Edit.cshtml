@model SDTur.Web.Models.Financial.Transactions.InvoiceDetailEditViewModel
@{
    ViewData["Title"] = "Fatura Detayı Düzenle";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil text-primary me-2"></i>Fatura Detayı Düzenle
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-form me-2"></i>Fatura Detayı Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="InvoiceId" class="form-label fw-semibold">
                                    <i class="bi bi-receipt me-1"></i>Fatura <span class="text-danger">*</span>
                                </label>
                                <select asp-for="InvoiceId" class="form-select" required>
                                    <option value="">Fatura seçiniz...</option>
                                    @if (ViewBag.Invoices != null)
                                    {
                                        @foreach (var invoice in ViewBag.Invoices)
                                        {
                                            <option value="@invoice.Id" selected="@(Model.InvoiceId == invoice.Id)">@invoice.InvoiceNumber - @invoice.CustomerName</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="InvoiceId" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="ProductName" class="form-label fw-semibold">
                                    <i class="bi bi-box me-1"></i>Ürün/Hizmet Adı <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ProductName" type="text" class="form-control" placeholder="Ürün veya hizmet adı" required />
                                <span asp-validation-for="ProductName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Quantity" class="form-label fw-semibold">
                                    <i class="bi bi-123 me-1"></i>Miktar <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Quantity" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="Quantity" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="UnitPrice" class="form-label fw-semibold">
                                    <i class="bi bi-currency-dollar me-1"></i>Birim Fiyat <span class="text-danger">*</span>
                                </label>
                                <input asp-for="UnitPrice" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="UnitPrice" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TaxRate" class="form-label fw-semibold">
                                    <i class="bi bi-percent me-1"></i>KDV Oranı (%) <span class="text-danger">*</span>
                                </label>
                                <input asp-for="TaxRate" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                <span asp-validation-for="TaxRate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveSwitch">
                                    <label class="form-check-label fw-semibold" for="isActiveSwitch">
                                        <i class="bi bi-toggle-on me-1"></i>Aktif
                                    </label>
                                </div>
                                <small class="text-muted">Bu detayın aktif olduğunu işaretleyin</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">
                                <i class="bi bi-text-paragraph me-1"></i>Açıklama
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Ürün veya hizmet hakkında açıklama..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="card-title mb-0">
                        <i class="bi bi-info-circle text-info me-2"></i>Bilgi
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-3">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Fatura Detayı Düzenleme
                        </h6>
                        <p class="mb-0 small">
                            Fatura detayı bilgilerini güncelleyebilirsiniz. Miktar ve fiyat değişiklikleri 
                            fatura toplamını etkileyebilir.
                        </p>
                    </div>
                    
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="bi bi-exclamation-triangle me-2"></i>Önemli Notlar
                        </h6>
                        <ul class="mb-0 small">
                            <li>Fatura seçimi zorunludur</li>
                            <li>Ürün adı ve miktar zorunludur</li>
                            <li>Birim fiyat pozitif olmalıdır</li>
                            <li>Değişiklikler geri alınamaz</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
