@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Giriş Yapmamış Kullanıcılar İçin Hoş Geldin Mesajı -->
<div class="row g-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-airplane-engines text-primary" style="font-size: 4rem;"></i>
                </div>
                <h2 class="mb-3">SDTur Tur Şirketi Otomasyon Sistemi</h2>
                <p class="text-muted mb-4 fs-5">Tur operasyonlarınızı kolayca yönetin, müşterilerinizi takip edin ve finansal raporlarınızı görüntüleyin.</p>
                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                    </a>
                    <a href="#features" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-info-circle me-2"></i>Özellikler
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Özellikler Bölümü -->
<div id="features" class="row g-4 mt-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                    <i class="bi bi-airplane text-primary fs-2"></i>
                </div>
                <h5 class="card-title">Tur Yönetimi</h5>
                <p class="card-text text-muted">Tur programlarını oluşturun, düzenleyin ve takip edin. Otobüs atamaları ve servis programlarını yönetin.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
                <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                    <i class="bi bi-ticket-perforated text-success fs-2"></i>
                </div>
                <h5 class="card-title">Bilet Satışı</h5>
                <p class="card-text text-muted">Bilet satışlarını kolayca yapın, müşteri bilgilerini kaydedin ve satış raporlarını görüntüleyin.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
                <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex p-3 mb-3">
                    <i class="bi bi-graph-up text-warning fs-2"></i>
                </div>
                <h5 class="card-title">Finansal Takip</h5>
                <p class="card-text text-muted">Gelir-gider takibi yapın, hesap işlemlerini yönetin ve detaylı finansal raporlar alın.</p>
            </div>
        </div>
    </div>
</div>
