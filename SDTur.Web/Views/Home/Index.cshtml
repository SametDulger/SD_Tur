@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="hero-section">
    <div class="hero-content">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="hero-title">
                        <i class="fas fa-route"></i> SD Tur Yönetim Sistemi
                    </h1>
                    <p class="hero-subtitle">Modern tur şirketi otomasyon sistemi ile turlarınızı, biletlerinizi ve operasyonlarınızı kolayca yönetin</p>
                    <div class="hero-buttons">
                        <a href="@Url.Action("Create", "Tours")" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-plus"></i> Yeni Tur Oluştur
                        </a>
                        <a href="@Url.Action("Index", "Tours")" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-list"></i> Turları Görüntüle
                        </a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="hero-stats">
                        <div class="stat-item">
                            <div class="stat-number">@ViewBag.TourCount</div>
                            <div class="stat-label">Aktif Tur</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">@ViewBag.TicketCount</div>
                            <div class="stat-label">Toplam Bilet</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-12">
            <h2 class="section-title">Sistem Genel Bakış</h2>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-3 col-md-6">
            <div class="dashboard-card">
                <div class="card-icon bg-primary">
                    <i class="fas fa-map"></i>
                </div>
                <div class="card-content">
                    <h3 class="card-number">@ViewBag.TourCount</h3>
                    <p class="card-label">Turlar</p>
                    <div class="card-progress">
                        <div class="progress-bar" style="width: 75%"></div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "Tours")" class="card-link">
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="dashboard-card">
                <div class="card-icon bg-success">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="card-content">
                    <h3 class="card-number">@ViewBag.ScheduleCount</h3>
                    <p class="card-label">Tur Programları</p>
                    <div class="card-progress">
                        <div class="progress-bar" style="width: 60%"></div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "TourSchedules")" class="card-link">
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="dashboard-card">
                <div class="card-icon bg-warning">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <div class="card-content">
                    <h3 class="card-number">@ViewBag.TicketCount</h3>
                    <p class="card-label">Biletler</p>
                    <div class="card-progress">
                        <div class="progress-bar" style="width: 85%"></div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "Tickets")" class="card-link">
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="dashboard-card">
                <div class="card-icon bg-danger">
                    <i class="fas fa-building"></i>
                </div>
                <div class="card-content">
                    <h3 class="card-number">@ViewBag.BranchCount</h3>
                    <p class="card-label">Şubeler</p>
                    <div class="card-progress">
                        <div class="progress-bar" style="width: 45%"></div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "Branches")" class="card-link">
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-4">
        <div class="col-lg-3 col-md-6">
            <div class="dashboard-card">
                <div class="card-icon bg-info">
                    <i class="fas fa-users"></i>
                </div>
                <div class="card-content">
                    <h3 class="card-number">@ViewBag.EmployeeCount</h3>
                    <p class="card-label">Çalışanlar</p>
                    <div class="card-progress">
                        <div class="progress-bar" style="width: 70%"></div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "Employees")" class="card-link">
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="dashboard-card">
                <div class="card-icon bg-secondary">
                    <i class="fas fa-bus"></i>
                </div>
                <div class="card-content">
                    <h3 class="card-number">@(ViewBag.BusCount ?? 0)</h3>
                    <p class="card-label">Otobüsler</p>
                    <div class="card-progress">
                        <div class="progress-bar" style="width: 55%"></div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "Buses")" class="card-link">
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="dashboard-card">
                <div class="card-icon bg-dark">
                    <i class="fas fa-hotel"></i>
                </div>
                <div class="card-content">
                    <h3 class="card-number">@(ViewBag.HotelCount ?? 0)</h3>
                    <p class="card-label">Oteller</p>
                    <div class="card-progress">
                        <div class="progress-bar" style="width: 65%"></div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "Hotels")" class="card-link">
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="dashboard-card">
                <div class="card-icon bg-purple">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="card-content">
                    <h3 class="card-number">@(ViewBag.ReportCount ?? 0)</h3>
                    <p class="card-label">Raporlar</p>
                    <div class="card-progress">
                        <div class="progress-bar" style="width: 40%"></div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "Reports")" class="card-link">
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="quick-actions-card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-bolt"></i> Hızlı İşlemler
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("Create", "Tours")" class="quick-action-btn">
                                <div class="btn-icon">
                                    <i class="fas fa-plus"></i>
                                </div>
                                <div class="btn-text">
                                    <h4>Yeni Tur</h4>
                                    <p>Yeni tur oluştur</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("Create", "TourSchedules")" class="quick-action-btn">
                                <div class="btn-icon">
                                    <i class="fas fa-calendar-plus"></i>
                                </div>
                                <div class="btn-text">
                                    <h4>Tur Programı</h4>
                                    <p>Program oluştur</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("Create", "Tickets")" class="quick-action-btn">
                                <div class="btn-icon">
                                    <i class="fas fa-ticket-alt"></i>
                                </div>
                                <div class="btn-text">
                                    <h4>Bilet Satışı</h4>
                                    <p>Yeni bilet sat</p>
                                </div>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("Create", "Employees")" class="quick-action-btn">
                                <div class="btn-icon">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                                <div class="btn-text">
                                    <h4>Çalışan</h4>
                                    <p>Çalışan ekle</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 80px 0;
        margin-bottom: 30px;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.3;
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .hero-subtitle {
        font-size: 1.3rem;
        margin-bottom: 30px;
        opacity: 0.9;
    }

    .hero-buttons {
        margin-bottom: 30px;
    }

    .hero-stats {
        display: flex;
        justify-content: space-around;
        background: rgba(255,255,255,0.1);
        border-radius: 15px;
        padding: 30px;
        backdrop-filter: blur(10px);
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 0.9rem;
        opacity: 0.8;
    }

    /* Section Title */
    .section-title {
        font-size: 2.5rem;
        font-weight: 600;
        text-align: center;
        margin-bottom: 40px;
        color: #2c3e50;
        position: relative;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 4px;
        background: linear-gradient(90deg, #667eea, #764ba2);
        border-radius: 2px;
    }

    /* Dashboard Cards */
    .dashboard-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    .card-icon {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        font-size: 1.5rem;
        color: white;
    }

    .card-content {
        flex: 1;
    }

    .card-number {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0 0 10px 0;
        color: #2c3e50;
    }

    .card-label {
        font-size: 1rem;
        color: #7f8c8d;
        margin: 0 0 15px 0;
        font-weight: 500;
    }

    .card-progress {
        width: 100%;
        height: 6px;
        background: #ecf0f1;
        border-radius: 3px;
        overflow: hidden;
    }

    .progress-bar {
        height: 100%;
        background: linear-gradient(90deg, #667eea, #764ba2);
        border-radius: 3px;
        transition: width 0.3s ease;
    }

    .card-link {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 40px;
        height: 40px;
        background: rgba(0,0,0,0.05);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #7f8c8d;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .card-link:hover {
        background: #667eea;
        color: white;
        transform: scale(1.1);
    }

    /* Quick Actions */
    .quick-actions-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .quick-actions-card .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 25px 30px;
        border: none;
    }

    .quick-actions-card .card-title {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
    }

    .quick-actions-card .card-body {
        padding: 30px;
    }

    .quick-action-btn {
        display: flex;
        align-items: center;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 15px;
        text-decoration: none;
        color: #2c3e50;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .quick-action-btn:hover {
        background: white;
        border-color: #667eea;
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        text-decoration: none;
        color: #2c3e50;
    }

    .btn-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        margin-right: 15px;
    }

    .btn-text h4 {
        margin: 0 0 5px 0;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .btn-text p {
        margin: 0;
        font-size: 0.9rem;
        color: #7f8c8d;
    }

    /* Color Classes */
    .bg-purple {
        background: linear-gradient(135deg, #a855f7 0%, #7c3aed 100%);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }
        
        .hero-subtitle {
            font-size: 1.1rem;
        }
        
        .hero-stats {
            flex-direction: column;
            gap: 20px;
        }
        
        .dashboard-card {
            padding: 20px;
        }
        
        .card-number {
            font-size: 2rem;
        }
    }

    /* Animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .dashboard-card {
        animation: fadeInUp 0.6s ease forwards;
    }

    .dashboard-card:nth-child(1) { animation-delay: 0.1s; }
    .dashboard-card:nth-child(2) { animation-delay: 0.2s; }
    .dashboard-card:nth-child(3) { animation-delay: 0.3s; }
    .dashboard-card:nth-child(4) { animation-delay: 0.4s; }
</style>
