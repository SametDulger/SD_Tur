@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="bi bi-speedometer2 text-primary me-2"></i>Dashboard
            </h1>
            <div class="text-muted">
                <i class="bi bi-calendar3 me-1"></i><span>@DateTime.Now.ToString("dd MMMM yyyy")</span>
            </div>
        </div>
    </div>
</div>

<!-- İstatistik Kartları -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-airplane text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Aktif Turlar</h6>
                        <h3 class="mb-0 fw-bold">@(ViewBag.ActiveToursCount ?? 0)</h3>
                        <small class="text-success">
                            <i class="bi bi-arrow-up me-1"></i>@(ViewBag.ToursGrowth ?? 0)% artış
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-ticket-perforated text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Satılan Biletler</h6>
                        <h3 class="mb-0 fw-bold">@(ViewBag.SoldTicketsCount ?? 0)</h3>
                        <small class="text-success">
                            <i class="bi bi-arrow-up me-1"></i>@(ViewBag.TicketsGrowth ?? 0)% artış
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-currency-dollar text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Aylık Gelir</h6>
                        <h3 class="mb-0 fw-bold">@((ViewBag.MonthlyIncome ?? 0m).ToString("C"))</h3>
                        <small class="text-success">
                            <i class="bi bi-arrow-up me-1"></i>@(ViewBag.IncomeGrowth ?? 0)% artış
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-people text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="card-title text-muted mb-1">Aktif Müşteriler</h6>
                        <h3 class="mb-0 fw-bold">@(ViewBag.ActiveCustomersCount ?? 0)</h3>
                        <small class="text-success">
                            <i class="bi bi-arrow-up me-1"></i>@(ViewBag.CustomersGrowth ?? 0)% artış
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ana İçerik -->
<div class="row g-4">
    <!-- Hızlı İşlemler -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0">
                <h5 class="card-title mb-0">
                    <i class="bi bi-lightning-charge text-warning me-2"></i>Hızlı İşlemler
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <a asp-controller="Tours" asp-action="Create" class="btn btn-outline-primary w-100 text-start p-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-airplane fs-4 me-3"></i>
                                <div>
                                    <div class="fw-semibold">Yeni Tur Oluştur</div>
                                    <small class="text-muted">Yeni tur programı ekle</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Tickets" asp-action="Create" class="btn btn-outline-success w-100 text-start p-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-ticket-perforated fs-4 me-3"></i>
                                <div>
                                    <div class="fw-semibold">Bilet Sat</div>
                                    <small class="text-muted">Yeni bilet satışı yap</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Accounts" asp-action="Create" class="btn btn-outline-info w-100 text-start p-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-bank fs-4 me-3"></i>
                                <div>
                                    <div class="fw-semibold">Hesap Ekle</div>
                                    <small class="text-muted">Yeni müşteri hesabı oluştur</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Employees" asp-action="Create" class="btn btn-outline-warning w-100 text-start p-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person-badge fs-4 me-3"></i>
                                <div>
                                    <div class="fw-semibold">Çalışan Ekle</div>
                                    <small class="text-muted">Yeni çalışan kaydı oluştur</small>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Son Aktiviteler -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0">
                <h5 class="card-title mb-0">
                    <i class="bi bi-activity text-success me-2"></i>Son Aktiviteler
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    @if (ViewBag.RecentActivities != null && ((IEnumerable<dynamic>)ViewBag.RecentActivities).Any())
                    {
                        @foreach (var activity in ViewBag.RecentActivities)
                        {
                            <div class="list-group-item border-0 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                        <i class="bi @(activity?.Icon ?? "bi-circle") text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-semibold">@(activity?.Title ?? "Aktivite")</div>
                                        <small class="text-muted">@(activity?.Description ?? "")</small>
                                    </div>
                                    <small class="text-muted">@(activity?.TimeAgo ?? "")</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="list-group-item border-0 py-4 text-center">
                            <i class="bi bi-inbox text-muted fs-1"></i>
                            <p class="text-muted mt-2">Henüz aktivite bulunmuyor</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Grafikler ve Raporlar -->
<div class="row g-4 mt-4">
    <!-- Aylık Gelir Grafiği -->
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h5 class="card-title mb-0">
                    <i class="bi bi-graph-up text-primary me-2"></i>Aylık Gelir Grafiği
                </h5>
            </div>
            <div class="card-body">
                <div style="height: 300px; background-color: #f8f9fa; border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                    <div class="text-center text-muted">
                        <i class="bi bi-graph-up fs-1 mb-3"></i>
                        <p>Grafik özelliği yakında eklenecek</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tur Dağılımı -->
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pie-chart text-success me-2"></i>Tur Dağılımı
                </h5>
            </div>
            <div class="card-body">
                <div style="height: 300px; background-color: #f8f9fa; border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                    <div class="text-center text-muted">
                        <i class="bi bi-pie-chart fs-1 mb-3"></i>
                        <p>Grafik özelliği yakında eklenecek</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Yaklaşan Turlar -->
<div class="row g-4 mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calendar-event text-info me-2"></i>Yaklaşan Turlar
                    </h5>
                    <a asp-controller="Tours" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-arrow-right me-1"></i>Tümünü Gör
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Tur Adı</th>
                                <th>Tarih</th>
                                <th>Kapasite</th>
                                <th>Durum</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.UpcomingTours != null && ((IEnumerable<dynamic>)ViewBag.UpcomingTours).Any())
                            {
                                @foreach (var tour in ViewBag.UpcomingTours)
                                {
                                    <tr>
                                        <td>@(tour?.Name ?? "Tur")</td>
                                        <td>@(tour?.StartDate?.ToString("dd.MM.yyyy") ?? "")</td>
                                        <td>@(tour?.Capacity ?? 0)</td>
                                        <td>
                                            <span class="badge bg-success">@(tour?.Status ?? "Aktif")</span>
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group btn-group-sm">
                                                <a asp-controller="Tours" asp-action="Details" asp-route-id="@(tour?.Id ?? 0)" class="btn btn-outline-info">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-controller="Tours" asp-action="Edit" asp-route-id="@(tour?.Id ?? 0)" class="btn btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-4">
                                        <i class="bi bi-calendar-x text-muted fs-1"></i>
                                        <p class="text-muted mt-2">Yaklaşan tur bulunamadı</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 