@model SDTur.Web.Models.Home.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-speedometer2 me-2"></i>Dashboard
                </h1>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary btn-sm" onclick="location.reload()">
                        <i class="bi bi-arrow-clockwise me-1"></i>Yenile
                    </button>
                    <button class="btn btn-primary btn-sm" onclick="exportDashboard()">
                        <i class="bi bi-download me-1"></i>Dışa Aktar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="dashboard-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Toplam Tur</h6>
                        <div class="card-value">@Model.TotalTours</div>
                    </div>
                    <div class="fs-1">
                        <i class="bi bi-airplane"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="dashboard-card" style="background: linear-gradient(135deg, #198754 0%, #146c43 100%);">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Aktif Tur</h6>
                        <div class="card-value">@Model.ActiveTours</div>
                    </div>
                    <div class="fs-1">
                        <i class="bi bi-check-circle"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="dashboard-card" style="background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Toplam Bilet</h6>
                        <div class="card-value">@Model.TotalTickets</div>
                    </div>
                    <div class="fs-1">
                        <i class="bi bi-ticket-perforated"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="dashboard-card" style="background: linear-gradient(135deg, #0dcaf0 0%, #0aa2c0 100%);">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">Toplam Gelir</h6>
                        <div class="card-value">₺@Model.TotalRevenue.ToString("N0")</div>
                    </div>
                    <div class="fs-1">
                        <i class="bi bi-cash-coin"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row g-4">
        <!-- Recent Tours -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-clock-history me-2"></i>Son Turlar
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentTours.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var tour in Model.RecentTours)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <div>
                                        <h6 class="mb-1">@tour.Name</h6>
                                        <small class="text-muted">
                                            @tour.StartDate.ToString("dd.MM.yyyy") - @tour.EndDate.ToString("dd.MM.yyyy")
                                        </small>
                                    </div>
                                    <span class="badge bg-@(tour.Status == "Active" ? "success" : "secondary")">@tour.Status</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-inbox fs-1"></i>
                            <p class="mt-2">Henüz tur bulunmuyor</p>
                        </div>
                    }
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-controller="Tours" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-arrow-right me-1"></i>Tümünü Görüntüle
                    </a>
                </div>
            </div>
        </div>

        <!-- Upcoming Tours -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calendar-event me-2"></i>Yaklaşan Turlar
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.UpcomingTours.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var tour in Model.UpcomingTours)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <div>
                                        <h6 class="mb-1">@tour.Name</h6>
                                        <small class="text-muted">
                                            @tour.Destination • @tour.StartDate.ToString("dd.MM.yyyy")
                                        </small>
                                    </div>
                                    <span class="badge bg-info">@tour.StartDate.ToString("dd MMM")</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-calendar-x fs-1"></i>
                            <p class="mt-2">Yaklaşan tur bulunmuyor</p>
                        </div>
                    }
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-controller="TourSchedules" asp-action="Index" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-arrow-right me-1"></i>Tümünü Görüntüle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-activity me-2"></i>Son Aktiviteler
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivities.Any())
                    {
                        <div class="timeline">
                            @foreach (var activity in Model.RecentActivities)
                            {
                                <div class="timeline-item d-flex align-items-start mb-3">
                                    <div class="timeline-marker me-3">
                                        <div class="bg-@(GetActivityColor(activity.Type)) rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <i class="bi bi-@(GetActivityIcon(activity.Type)) text-white"></i>
                                        </div>
                                    </div>
                                    <div class="timeline-content flex-grow-1">
                                        <p class="mb-1">@activity.Description</p>
                                        <small class="text-muted">@activity.Timestamp.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-activity fs-1"></i>
                            <p class="mt-2">Henüz aktivite bulunmuyor</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
    }
    
    .timeline-item {
        position: relative;
    }
    
    .timeline-marker {
        flex-shrink: 0;
    }
    
    .timeline-content {
        border-left: 2px solid #e9ecef;
        padding-left: 1rem;
        margin-left: 20px;
    }
    
    .timeline-item:last-child .timeline-content {
        border-left: none;
    }
</style>

<script>
    function exportDashboard() {
        // Dashboard export functionality
        alert('Dashboard dışa aktarma özelliği yakında eklenecek.');
    }
    
    // Auto-refresh dashboard every 5 minutes
    setInterval(function() {
        // You can implement AJAX refresh here
        console.log('Dashboard auto-refresh triggered');
    }, 300000); // 5 minutes
</script>

@functions {
    private string GetActivityColor(string type)
    {
        return type switch
        {
            "TourCreated" => "primary",
            "TicketSold" => "success",
            "CustomerCreated" => "info",
            _ => "secondary"
        };
    }
    
    private string GetActivityIcon(string type)
    {
        return type switch
        {
            "TourCreated" => "airplane",
            "TicketSold" => "ticket-perforated",
            "CustomerCreated" => "person-plus",
            _ => "circle"
        };
    }
} 